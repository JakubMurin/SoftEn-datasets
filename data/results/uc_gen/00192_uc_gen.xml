<useCase id="UC1">
    <name>View Permissions on Objects</name>
    <actors>
        <actor>Curator</actor>
        <actor>UI Interface</actor>
        <actor>Authentication Service</actor>
        <actor>Permission Service</actor>
        <actor>Database</actor>
        <actor>Permissions Display</actor>
    </actors>
    <preconditions>
        <precondition>The curator requests to view permissions.</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Curator requests to view permissions.</step>
        <step id="S2">UI validates curator session.</step>
        <step id="S3">Authentication Service confirms session validity.</step>
        <step id="S4">UI requests object permissions for curator.</step>
        <step id="S5">Permission Service queries permissions by curator ID.</step>
        <step id="S6">Database returns permissions data.</step>
        <step id="S7">Permission Service processes permissions data.</step>
        <step id="S8">UI displays formatted permissions data.</step>
        <step id="S9">Permissions Display shows permissions overview.</step>
    </mainSequence>
</useCase>
