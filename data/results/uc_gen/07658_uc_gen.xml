<useCase id="UC1">
    <name>Manage Portfolio Photos</name>
    <actors>
        <actor>Photographer</actor>
    </actors>
    <trigger>Opens a portfolio</trigger>
    <mainSequence>
        <step id="S1">Retrieves Portfolio's photos</step>
        <step id="S2">Clicks on "Add photo" in the portfolio</step>
        <step id="S3">Asks for the details of the photo</step>
        <step id="S4">Sends photo details</step>
        <step id="S5">Retrieves updated Portfolio's photos</step>
    </mainSequence>
</useCase>
