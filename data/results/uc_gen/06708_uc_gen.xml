<useCase id="UC001">
    <name>Memilih Menu dan Menginput Quantity</name>
    <description>Pengguna memilih menu dan menginput jumlah quantity</description>
    <actors>
        <actor>User</actor>
        <actor>Menu</actor>
        <actor>Aku</actor>
        <actor>Dia</actor>
        <actor>Quantity</actor>
        <actor>Total</actor>
        <actor>Exit</actor>
    </actors>
    <preconditions>
        <precondition>Menu utama ditampilkan</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Transaksi selesai</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Transaksi dibatalkan</condition>
    </failureEndConditions>
    <trigger>User memilih menu dan menginput quantity</trigger>
    <mainSequence>
        <step id="S1">User memilih menu utama</step>
        <step id="S2">User memilih menu pilihan 1 atau 2, kemudian memilih Aku atau Dia</step>
        <step id="S3">Aku Menampilkan Profil Aku</step>
        <step id="S4">User memasukkan jumlah Quantity</step>
        <step id="S5">Quantity melakukan print</step>
        <step id="S6">Kembali ke Menu utama</step>
        <step id="S7">Jika tidak memilih, kembali ke Menu</step>
        <step id="S8">Dia Menampilkan Profil Dia</step>
        <step id="S9">User memasukkan jumlah Quantity untuk Dia</step>
        <step id="S10">Quantity melakukan print untuk Dia</step>
        <step id="S11">Kembali ke Menu utama</step>
        <step id="S12">Jika tidak memilih, kembali ke Menu</step>
    </mainSequence>
</useCase>
