<useCase id="1">
    <name>Actor Pickup Item</name>
    <actors>
        <actor>Controller</actor>
        <actor>Actor</actor>
    </actors>
    <mainSequence>
        <step id="S1">Controller picks up an item</step>
        <step id="S2">Actor picks up the item</step>
        <step id="S3">Actor gets the current location</step>
        <step id="S4">Actor removes the item from the room</step>
        <step id="S5">Actor checks if the item is sticky</step>
        <step id="S6">Actor gets the inventory</step>
        <step id="S7">Actor adds the item to the inventory</step>
        <step id="S8">Actor checks if the inventory is full</step>
        <step id="S9">Actor adds the item back to the room</step>
        <step id="S10">Actor informs Controller of failure</step>
        <step id="S11">Actor performs onPickup action on the item</step>
    </mainSequence>
</useCase>
