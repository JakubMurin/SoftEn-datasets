<useCase id="UC1">
    <name>Alternative Zuweisung eines E-Rezeptes: Pflege der URLs im APOVZD</name>
    <actors>
        <actor>Apotheker</actor>
        <actor>AVS</actor>
        <actor>Apothekendienstleister</actor>
        <actor>APOVZD Upload-Container</actor>
        <actor>APOVZD</actor>
        <actor>VZD der TI</actor>
    </actors>
    <mainSequence>
        <step id="S1">Apotheker registers for AZ</step>
        <step id="S2">AVS generates URLs for supply</step>
        <step id="S3">Apothekendienstleister registers and provides URLs</step>
        <step id="S4">AVS generates dataset</step>
        <step id="S5">AVS signs dataset with C.HCI.OSIG</step>
        <step id="S6">APOVZD uploads signed dataset</step>
        <step id="S7">APOVZD verifies signature and Store dataset for sync</step>
        <step id="S8">APOVZD deletes entries as sync operation</step>
        <step id="S9">VZD retrieves certificates</step>
        <step id="S10">APOVZD updates Pharmacy with URLs and certificates</step>
    </mainSequence>
</useCase>
