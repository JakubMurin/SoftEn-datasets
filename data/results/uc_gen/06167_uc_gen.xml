<useCase id="UC1">
    <name>Creating a Data Package</name>
    <actors>
        <actor>Client</actor>
        <actor>DataPackageManagerResource</actor>
        <actor>Creator</actor>
    </actors>
    <mainSequence>
        <step id="S1">Client initiates creation of a data package</step>
        <step id="S2">DataPackageManagerResource creates data package</step>
        <step id="S3">Creator runs the process</step>
        <step id="S4">DataPackageManager creates data package</step>
        <step id="S5">DataPackageManager parses EML</step>
        <step id="S6">DataPackageManager assigns metadata to DataPackage</step>
        <step id="S7">DataPackageManager checks metadata quality</step>
        <step id="S8">DataPackageManager creates DataPackage instance for EML</step>
        <!-- More steps can be added for the remaining sequence -->
    </mainSequence>
</useCase>
