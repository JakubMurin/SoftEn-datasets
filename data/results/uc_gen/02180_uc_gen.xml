<useCase id="UC1">
    <name>Manage Referral Program</name>
    <actors>
        <actor>Tester</actor>
        <actor>Usuario</actor>
        <actor>Referido</actor>
    </actors>
    <preconditions>
        <precondition>A tester has access to the user and referral objects</precondition>
        <precondition>A user "Juan" and a referral "Pedro" are instantiated</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Instantiate user "Juan"</step>
        <step id="S2">Instantiate referral "Pedro"</step>
        <step id="S3">Add referral "Pedro" to user "Juan"</step>
        <step id="S4">Append "Pedro" to the list of referrals in user "Juan"</step>
        <step id="S5">Increase user "Juan" balance by 100</step>
        <step id="S6">Verify user "Juan" balance</step>
    </mainSequence>
</useCase>
