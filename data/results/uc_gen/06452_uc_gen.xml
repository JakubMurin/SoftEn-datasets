<useCase id="1">
    <name>Manage Company Departments</name>
    <actors>
        <actor>User</actor>
        <actor>Main</actor>
        <actor>Company</actor>
        <actor>HR</actor>
        <actor>IT</actor>
        <actor>Development</actor>
        <actor>QA</actor>
        <actor>Employee1</actor>
        <actor>Employee2</actor>
        <actor>Employee3</actor>
        <actor>Employee4</actor>
        <actor>Employee5</actor>
        <actor>Employee6</actor>
    </actors>
    <mainSequence>
        <step id="S1">User launches main()</step>
        <step id="S2">Main invokes runDepartments()</step>
        <step id="S3">Main creates new DepartmentComposite("Company")</step>
        <step id="S4">Main creates new DepartmentComposite("HR")</step>
        <step id="S5">HR adds Employee1</step>
        <step id="S6">HR adds Employee2</step>
        <step id="S7">Main creates new DepartmentComposite("IT")</step>
        <step id="S8">Main creates new DepartmentComposite("Development")</step>
        <step id="S9">Development adds Employee3</step>
        <step id="S10">Development adds Employee4</step>
        <step id="S11">Main creates new DepartmentComposite("Quality Assurance")</step>
        <step id="S12">QA adds Employee5</step>
        <step id="S13">QA adds Employee6</step>
        <step id="S14">Main displays company name</step>
        <step id="S15">Main displays company budget</step>
        <step id="S16">Main displays company number of workers</step>
    </mainSequence>
</useCase>
