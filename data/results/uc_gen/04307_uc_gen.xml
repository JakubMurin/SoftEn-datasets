<useCase id="UC1">
    <name>Execute Application</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User executes the application</step>
        <step id="S2">Application loads configuration</step>
        <step id="S3">Application initializes default settings</step>
        <step id="S4">Application parses CLI flags (--file, --source, --language, etc.)</step>
        <step id="S5">Application determines the configuration file path</step>
        <step id="S6">Application reads the configuration file</step>
        <step id="S7">Application parses the language tag (if applicable)</step>
        <step id="S8">Application uses the MinionConfig for application logic</step>
    </mainSequence>
</useCase>
