<useCase id="UC1">
    <name>Version Assignment</name>
    <actors>
        <actor>Dataset Developer</actor>
        <actor>Version Control UI</actor>
        <actor>Version Control Service</actor>
        <actor>Version Metadata Store</actor>
    </actors>
    <preconditions>
        <precondition>Developer accesses Version Control UI</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Developer accesses Version Control UI</step>
        <step id="S2">UI receives request to Assign Version</step>
        <step id="S3">Service fetches Current Version Info</step>
        <step id="S4">Service increments Version / Assigns New Version</step>
        <step id="S5">Service informs UI about Version Assignment Success</step>
        <step id="S6">UI displays Success Message to Developer</step>
    </mainSequence>
</useCase>
