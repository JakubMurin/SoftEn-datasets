<useCase id="UC1">
    <name>Template Method</name>
    <actors>
        <actor>user</actor>
        <actor>scanner</actor>
    </actors>
    <trigger>user initiates the Template Method</trigger>
    <mainSequence>
        <step id="S1">user creates IncreasingOrder</step>
        <step id="S2">user creates DecreasingOrder</step>
        <step id="S3">user initializes scanner</step>
        <step id="S4">scanner sends a message to user</step>
        <step id="S5">user inputs data to scanner</step>
        <step id="S6">scanner creates switch</step>
        <step id="S7">switch determines the order</step>
        <step id="S8">SortingTemplate executes TemplateMethod</step>
        <step id="S9">SortingTemplate sorts data in IncreasingOrder</step>
        <step id="S10">SortingTemplate sorts data in DecreasingOrder</step>
    </mainSequence>
</useCase>
