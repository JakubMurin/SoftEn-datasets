<useCase id="UC001">
    <name>Display Items</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User displays items</step>
        <step id="S2">Main activates and gets items</step>
        <step id="S3">ItemController activates and requests items from ItemModel</step>
        <step id="S4">ItemModel loads items from file</step>
        <step id="S5">ItemModel provides items to ItemController</step>
        <step id="S6">ItemController sends List of Items to Main</step>
        <step id="S7">Main displays formatted items in TextArea</step>
    </mainSequence>
</useCase>
