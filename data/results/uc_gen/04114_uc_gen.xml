<useCase id="UC1">
    <name>Manage Traffic Control</name>
    <actors>
        <actor>Traffic Manager</actor>
        <actor>System</actor>
    </actors>
    <mainSequence>
        <step id="S1">Traffic Manager activates the system.</step>
        <step id="S2">Traffic Manager asks for the Ship pairs.</step>
        <step id="S3">System returns the ship pairs to Traffic Manager.</step>
        <step id="S4">Traffic Manager deactivates the system.</step>
    </mainSequence>
</useCase>
