<useCase id="UC1">
    <name>User Login</name>
    <description>Allow the user to log in to the Library System</description>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>User has access to Library System</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully logs in</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>User fails to log in</condition>
    </failureEndConditions>
    <trigger>User clicks on "Login"</trigger>
    <mainSequence>
        <step id="S1">User clicks on "Login"</step>
        <step id="S2">Library System prompts user to enter username and password</step>
        <step id="S3">User enters correct login details</step>
        <step id="S4">Library System verifies login details</step>
        <step id="S5">User is logged in</step>
        <step id="S6">Library System displays a welcome message</step>
    </mainSequence>
</useCase>
