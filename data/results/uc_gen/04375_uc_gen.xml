<useCase id="UC1">
    <name>Create Booking</name>
    <actors>
        <actor>Receptionist</actor>
    </actors>
    <mainSequence>
        <step id="S1">Receptionist requests to create booking</step>
        <step id="S2">UI displays create booking form</step>
        <step id="S3">Receptionist fills booking details</step>
        <step id="S4">UI sends booking data to create booking</step>
        <step id="S5">Router processes create booking request</step>
        <step id="S6">Controller creates booking in Repository</step>
        <step id="S7">Repository checks room availability</step>
        <step id="S8">Repository creates new booking if room is available</step>
        <step id="S9">Repository handles room not available scenario</step>
    </mainSequence>
</useCase>
