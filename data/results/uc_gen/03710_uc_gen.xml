<useCase id="UC1">
    <name>Create Booking</name>
    <actors>
        <actor>Receptionist</actor>
    </actors>
    <preconditions>
        <precondition>Receptionist requests to create a booking</precondition>
    </preconditions>
    <trigger>User interface receives request for booking creation</trigger>
    <mainSequence>
        <step id="S1">Receptionist requests to create booking</step>
        <step id="S2">User interface shows booking form</step>
        <step id="S3">Receptionist fills in booking details</step>
        <step id="S4">User interface sends booking data</step>
        <step id="S5">Router creates booking</step>
        <step id="S6">Controller creates booking</step>
        <step id="S7">Repository creates new booking</step>
        <step id="S8">Room availability is checked</step>
        <step id="S9">Room is available</step>
        <step id="S10">New booking is created</step>
        <step id="S11">Booking success message is displayed</step>
        <step id="S12">Room is not available</step>
        <step id="S13">Error message is displayed</step>
    </mainSequence>
</useCase>
