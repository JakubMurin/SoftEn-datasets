<useCase id="UC1">
  <name>Register a maintenance</name>
  <actors>
    <actor>HRM</actor>
  </actors>
  <mainSequence>
    <step id="S1">HRM requests to register a vehicles maintenance</step>
    <step id="S2">RegisterMaintenanceUI creates maintenance record</step>
    <step id="S3">HRM types maintenance details (name)</step>
    <step id="S4">RegisterMaintenanceUI stores the typed data</step>
    <step id="S5">RegisterMaintenanceUI shows the typed data and requests confirmation</step>
  </mainSequence>
</useCase>
