<useCase id="1">
    <name>Create Weekly Plan</name>
    <actors>
        <actor>Brenna</actor>
        <actor>Planner</actor>
        <actor>Library</actor>
        <actor>List</actor>
        <actor>Board</actor>
    </actors>
    <preconditions>
        <precondition>Brenna initializes the week</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Brenna initializes the week today</step>
        <step id="S2">Planner creates a plan</step>
        <step id="S3">Planner activates the plan</step>
        <step id="S4">Brenna filters recipes by criteria</step>
        <step id="S5">Brenna adds a recipe to the plan</step>
        <step id="S6">Brenna edits a recipe in the plan</step>
        <step id="S7">Brenna saves the edits made to the recipe</step>
        <step id="S8">Brenna adds wine to the plan</step>
        <step id="S9">Brenna views the plan</step>
        <step id="S10">Brenna views the grocery list</step>
        <step id="S11">List retrieves items from the board</step>
        <step id="S12">List retrieves items from the plan</step>
    </mainSequence>
</useCase>
