<useCase id="UC001">
    <name>Get Partial Stats</name>
    <actors>
        <actor>Client</actor>
        <actor>RS</actor>
        <actor>SA</actor>
    </actors>
    <mainSequence>
        <step id="S1">Client requests get_partial_stats</step>
        <step id="S2">RS forwards request to SA</step>
        <step id="S3">SA retrieves partial stats</step>
        <step id="S4">SA retrieves partial system stats</step>
        <step id="S5">SA gets partial buckets info</step>
        <step id="S6">SA prepares stats payload</step>
        <step id="S7">SA sends stats payload to Client</step>
    </mainSequence>
</useCase>
