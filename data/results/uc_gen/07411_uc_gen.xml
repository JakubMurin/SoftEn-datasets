<useCase id="UC1">
    <name>Compile and consume Primary Resource</name>
    <actors>
        <actor>Resource_provider</actor>
        <actor>Compilation_Manager</actor>
        <actor>KieCompilerService</actor>
    </actors>
    <mainSequence>
        <step id="S1">Resource_provider compiles Primary Resource</step>
        <step id="S2">Compilation_Manager finds specific KieCompilerService for Primary Resource</step>
        <step id="S3">KieCompilerService processes Primary Resource</step>
        <step id="S4">Compilation_Manager receives Compiled Class</step>
        <step id="S5">Resource_provider receives IndexFile</step>
        <step id="S6">Resource_provider consumes IndexFile</step>
    </mainSequence>
</useCase>
