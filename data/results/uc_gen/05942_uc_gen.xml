<useCase id="UC1">
    <name>Оформление заказа</name>
    <actors>
        <actor>Клиент</actor>
        <actor>Сервис заказов</actor>
        <actor>Сервис биллинга</actor>
        <actor>Сервис оповещений</actor>
    </actors>
    <mainSequence>
        <step id="S1">Клиент создает заказ</step>
        <step id="S2">Сервис заказов формирует оплату</step>
        <step id="S3">Сервис биллинга формирует уведомление</step>
        <step id="S4">Сервис оповещений отправляет уведомление (Email, SMS, Push)</step>
        <step id="S5">Сервис оповещений получает информацию по уведомлению</step>
        <step id="S6">Сервис оповещений передает информацию по оплате</step>
        <step id="S7">Сервис заказов передает статус заказа клиенту</step>
    </mainSequence>
</useCase>
