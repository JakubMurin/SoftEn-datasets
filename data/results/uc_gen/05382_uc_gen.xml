<useCase id="1">
    <name>View User Details</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User views User Details</step>
        <step id="S2">UserDetailsPage activates</step>
        <step id="S3">UserDetailsPage retrieves User Details via Controller</step>
        <step id="S4">Controller activates</step>
        <step id="S5">Controller fetches User Details via Model</step>
        <step id="S6">Model activates</step>
        <step id="S7">Model queries Database for User Details</step>
        <step id="S8">Database returns User details to Model</step>
        <step id="S9">Model returns User details to Controller</step>
        <step id="S10">Model deactivates</step>
        <step id="S11">Controller returns User details to UserDetailsPage</step>
        <step id="S12">Controller deactivates</step>
        <step id="S13">UserDetailsPage displays User Details</step>
        <step id="S14">UserDetailsPage deactivates</step>
    </mainSequence>
</useCase>
