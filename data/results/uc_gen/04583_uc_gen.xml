<useCase id="UC001">
    <name>Cancel Account</name>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>User is logged in to the application</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Account successfully cancelled</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Account cancellation failed</condition>
    </failureEndConditions>
    <trigger>User initiates account cancellation process</trigger>
    <mainSequence>
        <step id="S1">User opens the application</step>
        <step id="S2">Homepage screen displays "Account Settings"</step>
        <step id="S3">User navigates to Account Settings</step>
        <step id="S4">Delete Account Dialog is displayed</step>
        <step id="S5">User confirms cancellation</step>
        <step id="S6">Account cancellation is initiated</step>
        <step id="S7">API call is made for Account Cancellation</step>
        <step id="S8">Cancellation request is forwarded</step>
        <step id="S9">Account is marked for deletion in the database</step>
        <step id="S10">Confirmation of account marked for deletion is received</step>
        <step id="S11">Account cancellation is confirmed</step>
        <step id="S12">Cancellation confirmation is sent</step>
        <step id="S13">Cancellation confirmation is displayed</step>
        <step id="S14">User navigates back to Homepage</step>
        <step id="S15">Confirmation message is displayed</step>
        <step id="S16">User logs out and session data is cleared</step>
    </mainSequence>
</useCase>
