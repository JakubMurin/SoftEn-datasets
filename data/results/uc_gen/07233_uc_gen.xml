<useCase id="UC01">
    <name>Manage Embargo Metadata for ETDs</name>
    <actors>
        <actor>Digital Records Archivist</actor>
        <actor>Web Interface</actor>
        <actor>EDRMS Backend</actor>
        <actor>Database</actor>
        <actor>File Server</actor>
    </actors>
    <mainSequence>
        <step id="S1">Request embargo metadata for ETDs (Digital Records Archivist)</step>
        <step id="S2">Fetch embargo metadata (Web Interface)</step>
        <step id="S3">Query embargo metadata (EDRMS Backend) </step>
        <step id="S4">Return metadata (Database)</step>
        <step id="S5">Display metadata (EDRMS Backend)</step>
        <step id="S6">Shows embargo metadata (Web Interface)</step>

        <step id="S7">Request download of metadata (Digital Records Archivist)</step>
        <step id="S8">Fetch detailed metadata (Web Interface)</step>
        <step id="S9">Query detailed embargo data (EDRMS Backend)</step>
        <step id="S10">Return detailed data (Database)</step> 
        <step id="S11">Prepare download file (EDRMS Backend)</step>
        <step id="S12">Provide download link (EDRMS Backend)</step>
        <step id="S13">Display download link (Web Interface)</step>
        <step id="S14">Download link provided (Digital Records Archivist)</step>
        <step id="S15">Download file by link (Digital Records Archivist)</step>
        <step id="S16">View metadata file (File Server)</step>
    </mainSequence>
</useCase>
