<useCase id="US1001">
    <name>Take Exam</name>
    <actors>
        <actor>Student</actor>
    </actors>
    <mainSequence>
        <step id="S1">Student takes an exam.</step>
        <step id="S2">ExamsUnsolved() method is called.</step>
        <step id="S3">List of unsolved exams is retrieved.</step>
        <step id="S4">List of exams is displayed to the Student.</step>
        <step id="S5">Student selects an exam to take.</step>
        <step id="S6">Selected exam is validated for submission.</step>
        <step id="S7">Exam validation result is obtained.</step>
        <step id="S8">Build the exam to be taken.</step>
        <step id="S9">Present each question to the Student.</step>
        <step id="S10">Student answers questions.</step>
        <step id="S11">Validate the Student's answers.</step>
        <step id="S12">Calculate exam grade in percentage.</step>
        <step id="S13">Grades are retrieved.</step>
        <step id="S14">Grades are displayed to the Student.</step>
        <step id="S15">Grade is saved.</step>
        <step id="S16">Feedback is provided to the Student.</step>
    </mainSequence>
</useCase>
