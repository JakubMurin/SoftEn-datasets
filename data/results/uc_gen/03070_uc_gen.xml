<useCase id="UC1">
    <name>Change Marketing Campaign</name>
    <actors>
        <actor>User</actor>
        <actor>UMP</actor>
        <actor>Retail-UMP</actor>
        <actor>C</actor>
    </actors>
    <mainSequence>
        <step id="S1">User initiates a change in marketing campaign.</step>
        <step id="S2">UMP activates the process.</step>
        <step id="S3">Retail-UMP processes the change type of marketing campaign (add, invalidate, delete, edit).</step>
        <step id="S4">Retail-UMP synchronously/asynchronously sends a message to C.</step>
        <step id="S4.1">C processes the message synchronously/asynchronously.</step>
        <step id="S5">Retail-UMP returns.</step>
        <step id="S6">UMP returns.</step>
    </mainSequence>
</useCase>
