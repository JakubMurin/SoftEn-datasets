<useCase id="UC1">
    <name>Turn off buzzer and LED</name>
    <actors>
        <actor>Korisnik</actor>
        <actor>Mikrokontroler</actor>
        <actor>Buzzer</actor>
        <actor>LED</actor>
    </actors>
    <mainSequence>
        <step id="S1">Korisnik presses the button</step>
        <step id="S2">Mikrokontroler receives the button press</step>
        <step id="S3">Mikrokontroler sends command to turn off the buzzer</step>
        <step id="S4">Buzzer is turned off</step>
        <step id="S5">Mikrokontroler sends command to turn off the LED</step>
        <step id="S6">LED is turned off</step>
    </mainSequence>
</useCase>
