<useCase id="UC001">
    <name>Post a Slack Command</name>
    <actors>
        <actor>USER</actor>
        <actor>SLACK</actor>
        <actor>APP</actor>
    </actors>
    <mainSequence>
        <step id="S1">User posts a Slack Command</step>
        <step id="S2">Slack receives the `/rocker` event trigger</step>
        <step id="S3">Application performs `chat.postEphemeral`</step>
        <step id="S4">Slack displays an ephemeral message to the user in a channel</step>
        <step id="S5">User clicks on the button `launch rocket`</step>
        <step id="S6">Slack receives the `interaction` event trigger</step>
        <step id="S7">Application performs `chat.postMessage`</step>
        <step id="S8">Slack displays a Rocket Countdown Message 3 to the user</step>
        <step id="S9">Application performs `chat.postMessage`</step>
        <step id="S10">Slack displays a Rocket Countdown Message 2 to the user</step>
        <step id="S11">Application performs `chat.postMessage`</step>
        <step id="S12">Slack displays a Rocket Countdown Message 1 to the user</step>
    </mainSequence>
</useCase>
