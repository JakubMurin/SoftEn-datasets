<useCase id="UC1">
    <name>Link Email</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User selects "Link Email"</step>
        <step id="S2">UI requests email linking</step>
        <step id="S3">User Profile Service checks if email exists</step>
        <step id="S4">User Profile Service links email to user</step>
        <step id="S5">Email Service sends confirmation email</step>
        <step id="S6">User Profile Service shows success message</step>
    </mainSequence>
</useCase>
