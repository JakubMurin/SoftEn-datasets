<useCase id="UC1">
    <name>Specify New Product</name>
    <actors>
        <actor>SalesClerk</actor>
    </actors>
    <mainSequence>
        <step id="S1">SalesClerk specifies new product</step>
        <step id="S2">SalesClerk asks user for information</step>
        <step id="S3">SalesClerk provides Category, Photo, Short description, Extended description, Technical description, Brand, Reference, Internal code, Price, Barcode, Height, Width, Weight, Shelf</step>
        <step id="S4">SalesClerk shows list of categories</step>
        <step id="S5">SalesClerk selects Category</step>
        <step id="S6">SalesClerk displays product information</step>
    </mainSequence>
</useCase>
