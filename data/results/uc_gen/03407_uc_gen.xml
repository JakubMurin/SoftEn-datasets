<useCase id="UC1">
    <name>Display Items</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User displays items</step>
        <step id="S2">Main activates to display items</step>
        <step id="S3">Main gets items from ItemController</step>
        <step id="S4">ItemController activates to get items</step>
        <step id="S5">ItemController gets items from ItemModel</step>
        <step id="S6">ItemModel activates to load items from file</step>
        <step id="S7">ItemModel loads items from file</step>
        <step id="S8">ItemModel deactivates after loading items</step>
        <step id="S9">ItemController receives List of items from ItemModel</step>
        <step id="S10">Main receives formatted items from ItemController</step>
        <step id="S11">Main deactivates after displaying items in TextArea</step>
    </mainSequence>
</useCase>
