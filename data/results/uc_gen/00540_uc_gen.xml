<useCase id="UC001">
    <name>Student Reserves Book</name>
    <actors>
        <actor>Student</actor>
        <actor>Monitor</actor>
        <actor>Authentication</actor>
        <actor>Reservation</actor>
        <actor>BookManagement</actor>
        <actor>Book</actor>
    </actors>
    <trigger>Student selects a book to reserve</trigger>
    <mainSequence>
        <step id="S1">Student opens the login page</step>
        <step id="S2">Monitor displays the login page</step>
        <step id="S3">Student logs in with username and password</step>
        <step id="S4">Authentication verifies the login credentials</step>
        <step id="S5">Monitor displays the library page</step>
        <step id="S6">Student submits book details</step>
        <step id="S7">Monitor searches for the book</step>
        <step id="S8">BookManagement retrieves book data</step>
        <step id="S9">BookManagement lists the available books</step>
        <step id="S10">Student selects a book to reserve</step>
        <step id="S11">Monitor receives the book reservation request</step>
        <step id="S12">Reservation creates a reservation for the book</step>
        <step id="S13">BookManagement updates the book status</step>
        <step id="S14">Reservation confirms the reservation</step>
        <step id="S15">Monitor displays the reservation confirmation</step>
    </mainSequence>
</useCase>
