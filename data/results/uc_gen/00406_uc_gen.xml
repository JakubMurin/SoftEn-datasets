<useCase id="UC1">
    <name>Render Component</name>
    <description>As a User, I want to render a component in order to display it on the screen.</description>
    <actors>
        <actor>User</actor>
        <actor>Liba</actor>
        <actor>renderC</actor>
        <actor>App</actor>
        <actor>renderLiba</actor>
        <actor>createChildren</actor>
        <actor>UserCard</actor>
    </actors>
    <preconditions>
        <precondition>The User has initiated the rendering process.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>The component has been successfully rendered.</condition>
    </successEndConditions>
    <trigger>User initiates the rendering of the component.</trigger>
    <mainSequence>
        <step id="S1">User creates an App.</step>
        <step id="S2">Liba creates a cInstance.</step>
        <step id="S3">Liba renders the cInstance.</step>
        <step id="S4">App renders Liba with props.</step>
        <step id="S5">App creates a button.</step>
        <step id="S6">App creates a UserCard.</step>
        <step id="S7">UserCard creates div elements.</step>
        <step id="S8">UserCard assigns elements to renderC.</step>
    </mainSequence>
</useCase>
