<useCase id="UC1">
    <name>Manage Menu Items</name>
    <actors>
        <actor>Manager</actor>
    </actors>
    <mainSequence>
        <step id="S1">Access Menu Management</step>
        <step id="S2">Request current menu items from Management Interface</step>
        <step id="S3">Fetch menu items from Backend Server</step>
        <step id="S4">Display fetched menu items</step>
        <step id="S5">Select items to update</step>
        <step id="S6">Submit updated menu items</step>
        <step id="S7">Update menu items request from Management Interface</step>
        <step id="S8">Update menu items in Database</step>
        <step id="S9">Receive confirmation of updated items</step>
        <step id="S10">Confirm successful update to Manager</step>
    </mainSequence>
</useCase>
