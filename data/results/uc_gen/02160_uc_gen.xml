<useCase id="UC1">
    <name>Delete Book Process</name>
    <actors>
        <actor>Staff</actor>
    </actors>
    <mainSequence>
        <step id="S1">Staff selects "Remove Book"</step>
        <step id="S2">UI requests deletion of book with ID</step>
        <step id="S3">Controller initiates deletion of book with ID</step>
        <step id="S4">Service deletes book with ID from database</step>
        <step id="S5">Service confirms successful deletion</step>
        <step id="S6">Controller notifies deletion success</step>
        <step id="S7">UI displays success message</step>
        <step id="S8">Staff views "Book Deleted Successfully"</step>
    </mainSequence>
</useCase>
