<useCase id="UC001">
    <name>Collaborate with Faculty for Research</name>
    <actors>
        <actor>Researcher</actor>
        <actor>Repository Interface</actor>
        <actor>SearchSystem</actor> 
        <actor>FacultyProfiles</actor>
        <actor>CollaborationModule</actor>
    </actors>
    <mainSequence>
        <step id="S1">Access Repository to find Faculty Members.</step>
        <step id="S2">Initiate Search for Faculty through the UI.</step>
        <step id="S3">Query and Retrieve Faculty Data from Profiles.</step>
        <step id="S4">Return Faculty Results.</step>
        <step id="S5">Display Faculty Results to Researcher.</step>
        <step id="S6">Review Faculty Interests and Expertise.</step>
        <step id="S7">Request Detailed Information on selected Faculty Members.</step>
        <step id="S8">Receive Detailed Information from Profiles.</step>
        <step id="S9">Select Faculty Members for Collaboration.</step>
        <step id="S10">Save/Note selected Faculty for Collaboration.</step>
        <step id="S11">Confirm and Proceed with Collaboration.</step>
    </mainSequence>
</useCase>
