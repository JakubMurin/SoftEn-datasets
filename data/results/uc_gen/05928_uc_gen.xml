<useCase id="UC1">
    <name>Access and View Collection</name>
    <actors>
        <actor>Faculty Member</actor>
        <actor>Authentication Service</actor>
        <actor>Search Interface</actor>
        <actor>Database</actor>
        <actor>Collection</actor>
    </actors>
    <preconditions>
        <precondition>Faculty Member has valid credentials</precondition>
        <precondition>Search Interface is accessible</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Faculty Member successfully accesses and views the desired collection</condition>
    </successEndConditions>
    <trigger>Faculty Member wants to view a collection</trigger>
    <mainSequence>
        <step id="S1">Faculty Member enters credentials</step>
        <step id="S2">Credentials are validated</step>
        <step id="S3">Search Interface is accessed</step>
        <step id="S4">Search options are displayed</step>
        <step id="S5">Search criteria for collection is input</step>
        <step id="S6">Database is queried with search criteria</step>
        <step id="S7">Search results are returned</step>
        <step id="S8">List of matching collections is displayed</step>
        <step id="S9">Desired collection is selected</step>
        <step id="S10">Selected collection details are requested</step>
        <step id="S11">Collection details are retrieved</step>
        <step id="S12">Collection content is displayed</step>
    </mainSequence>
</useCase>
