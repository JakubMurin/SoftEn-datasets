<useCase id="UC001">
    <name>Authenticate and Review Application</name>
    <actors>
        <actor>Planning Staff</actor>
        <actor>User Authentication</actor>
        <actor>Dashboard</actor>
        <actor>Application Database</actor>
        <actor>Compliance Checking Tool</actor>
        <actor>Comprehensive Plan Database</actor>
        <actor>Review Notes Interface</actor>
        <actor>Notification Service</actor>
    </actors>
    <preconditions>
        <precondition>Planning Staff is logged in</precondition>
    </preconditions>
    <trigger>User Authentication successful</trigger>
    <mainSequence>
        <step id="S1">Planning Staff logs in</step>
        <step id="S2">Planning Staff accesses the staff dashboard</step>
        <step id="S3">Planning Staff selects an application to review</step>
        <step id="S4">Compliance Checking Tool checks application consistency</step>
        <step id="S5">Planning Staff documents the review</step>
        <step id="S6">Notification Service sends notification</step>
    </mainSequence>
</useCase>
