<useCase id="UC1">
    <name>Manage Subscriptions</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User interacts with the SubscriptionController</step>
        <step id="S2">SubscriptionController forwards request to SubscriptionService</step>
        <step id="S3">SubscriptionService communicates with SubscriptionRepository</step>
        <step id="S4">SubscriptionRepository accesses Datastore</step>
        <step id="S5">Datastore processes the request</step>
        <step id="S6">Datastore sends response back to SubscriptionRepository</step>
        <step id="S7">SubscriptionRepository returns data to SubscriptionService</step>
        <step id="S8">SubscriptionService processes data and sends it back to SubscriptionController</step>
        <step id="S9">SubscriptionController presents the response to the User</step>
    </mainSequence>
</useCase>
