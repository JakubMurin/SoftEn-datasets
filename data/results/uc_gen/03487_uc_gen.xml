<useCase id="UC1">
    <name>Process Operations Workflow</name>
    <actors>
        <actor>sidetree-core-go</actor>
    </actors>
    <mainSequence>
        <step id="S1">Subscribe to Operation Queue</step>
        <step id="S2">Add operation op1</step>
        <step id="S3">Publish operation op1 to Operation Queue</step>
        <step id="S4">Receive acknowledgement for op1</step>
        <step id="S5">Store op1 in op-queue DB</step>
        <step id="S6">Acknowledgement for op1 sent to handler 2</step>
        <step id="S7">Process operation op2</step>
        <step id="S8">Acknowledge op2 received</step>
        <step id="S9">Store op2 details in op-queue DB</step>
        <step id="S10">Acknowledge op2 sent to handler 1</step>
    </mainSequence>
</useCase>
