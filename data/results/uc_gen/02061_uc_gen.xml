<useCase id="UC1">
    <name>Select Energy Grid</name>
    <actors>
        <actor>PowerUser</actor>
    </actors>
    <mainSequence>
        <step id="S1">PowerUser selects a grid</step>
        <step id="S2">InputUtils displays a list of available grids to PowerUser</step>
        <step id="S3">PowerUser selects a grid by index</step>
        <step id="S4">InputUtils retrieves the selected EnergyGrid</step>
    </mainSequence>
</useCase>
