<useCase id="UC1">
    <name>Use Case 1</name>
    <description>User interacts with the system</description>
    <actors>
        <actor>User</actor>
        <actor>HelloController</actor>
        <actor>Bankomat</actor>
        <actor>SignIn_UpController</actor>
    </actors>
    <trigger>User presses the accept button</trigger>
    
    <mainSequence>
        <step id="S1">User presses the accept button</step>
        <step id="S2">Bankomat instance is created</step>
        <step id="S3">New Bankomat is created with selected bank and location</step>
        <step id="S4">New UserAdmin "admin" is added to Bankomat with PIN 5555</step>
        <step id="S5">Bankomat instance is passed to Sign_InUpController</step>
        <step id="S6">Sign_InUpController shows the Bankomat interface</step>
        <step id="S7">HelloController is closed</step>
    </mainSequence>
</useCase>
