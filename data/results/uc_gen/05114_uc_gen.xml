<useCase id="UC1">
    <name>Preview Data Package Process</name>
    <actors>
        <actor>Publisher</actor>
        <actor>UI Interface</actor>
        <actor>Publisher Account</actor>
        <actor>Data Package Service</actor>
        <actor>Validation Service</actor>
        <actor>Preview Service</actor>
        <actor>Data Storage</actor>
    </actors>
    <mainSequence>
        <step id="S1">Publisher requests Preview of Data Package</step>
        <step id="S2">UI Interface verifies Publisher Identity</step>
        <step id="S3">Publisher Account confirms Identity</step>
        <step id="S4">UI Interface prepares Data Package for Preview</step>
        <step id="S5">Data Package Service validates Data Package</step>
        <step id="S6">Validation Service provides Validation Results</step>
        <step id="S7">Data Package Service sends Validated Data Package for Preview</step>
        <step id="S8">Preview Service generates Preview Link</step>
        <step id="S9">UI Interface displays Preview Link</step>
    </mainSequence>
</useCase>
