<useCase id="UC1">
    <name>Guess Number Game</name>
    <actors>
        <actor>User</actor>
        <actor>Game</actor>
        <actor>State</actor>
    </actors>
    <mainSequence>
        <step id="S1">User inputs a number</step>
        <step id="S2">Game sets the guess</step>
        <step id="S3">User clicks "Adivinar"</step>
        <step id="S4">Game parses the guess</step>
        <step id="S5">Game sets message based on guess</step>
        <step id="S6">Game displays message to User</step>
        <step id="S7">User clicks "Reiniciar"</step>
        <step id="S8">Game generates a random target number</step>
        <step id="S9">Game resets guess and message</step>
        <step id="S10">User clicks "Back to Home"</step>
        <step id="S11">User invokes onBackToHome</step>
    </mainSequence>
</useCase>
