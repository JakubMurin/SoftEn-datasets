<useCase id="UC1">
    <name>Adicionar Tarefa</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User entra a descrição da tarefa</step>
        <step id="S2">User clica em "Adicionar Tarefa"</step>
        <step id="S3">TodoForm chama handleSubmit()</step>
        <step id="S4">TodoWrapper chama addTodo() no Backend</step>
        <step id="S5">Backend retorna confirmação para TodoWrapper</step>
        <step id="S6">TodoWrapper atualiza a lista de tarefas</step>
        <step id="S7">TodoWrapper exibe nova tarefa na lista para User</step>
    </mainSequence>
</useCase>
