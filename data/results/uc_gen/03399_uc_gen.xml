<useCase id="UC1">
    <name>Hash Calculation</name>
    <description>Calculate the hash value of input data</description>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>Message Digest algorithm is MD4</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Valid hash value is returned</condition>
    </successEndConditions>
    <trigger>User inputs data to be hashed</trigger>
    <mainSequence>
        <step id="S1">User initiates hash calculation</step>
        <step id="S2">MD4 initializes with the message size</step>
        <step id="S3">MD4 preprocesses the input data</step>
        <step id="S4">MD4 processes the data</step>
        <step id="S5">MD4 returns the hash value</step>
    </mainSequence>
</useCase>
