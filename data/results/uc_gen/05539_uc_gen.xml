<useCase id="UC001">
    <name>Booking tickets for a movie</name>
    <actors>
        <actor>user</actor>
        <actor>Theater</actor>
        <actor>Server</actor>
    </actors>
    <mainSequence>
        <step id="S1">User inserts card</step>
        <step id="S2">User selects date</step>
        <step id="S3">Theater offers seat to user</step>
        <step id="S4">User submits order</step>
        <step id="S5">Theater submits order to Server</step>
        <step id="S6">Server confirms the order</step>
        <step id="S7">Theater confirms the order to user</step>
    </mainSequence>
</useCase>
