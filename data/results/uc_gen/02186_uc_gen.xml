<useCase id="UC1">
    <name>Restrict File Access</name>
    <actors>
        <actor>Archivist</actor>
        <actor>Web Interface</actor>
        <actor>Authorization Service</actor>
        <actor>Database</actor>
        <actor>FileManagementSystem</actor>
    </actors>
    <mainSequence>
        <step id="S1">Archivist requests to restrict file</step>
        <step id="S2">Web Interface validates Archivist credentials</step>
        <step id="S3">Authorization Service confirms credentials valid</step>
        <step id="S4">Web Interface displays restriction options form</step>
        <step id="S5">Archivist submits restriction details</step>
        <step id="S6">Database updates file metadata with restriction details</step>
        <step id="S7">Database confirms metadata update</step>
        <step id="S8">Web Interface applies access restrictions through FileManagementSystem</step>
        <step id="S9">FileManagementSystem confirms restriction application</step>
        <step id="S10">Web Interface displays success message</step>
    </mainSequence>
</useCase>
