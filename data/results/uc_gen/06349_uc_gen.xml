<useCase id="UC001">
    <name>Manage Ticket Queue</name>
    <actors>
        <actor>Vendor</actor>
        <actor>Customer</actor>
    </actors>
    <mainSequence>
        <step id="S1">Vendor adds the ticket to the queue</step>
        <step id="S2">TicketPool notifies all actors</step>
        <step id="S3">Customer consumes a ticket</step>
        <step id="S4">TicketPool removes the ticket from the queue</step>
        <step id="S5">TicketPool returns the ticket to Customer</step>
    </mainSequence>
</useCase>
