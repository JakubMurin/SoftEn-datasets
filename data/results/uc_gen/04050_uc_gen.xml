<useCase id="UC1">
    <name>Manage Portfolio Photos</name>
    <actors>
        <actor>Photographer</actor>
    </actors>
    <trigger>Photographer opens a portfolio</trigger>
    <mainSequence>
        <step id="S1">Photographer opens a portfolio</step>
        <step id="S2">System retrieves Portfolio's photos</step>
        <step id="S3">Photographer clicks on "Add photo" in the portfolio</step>
        <step id="S4">System asks for the details of the photo</step>
        <step id="S5">Photographer sends photo details</step>
        <step id="S6">System retrieves updated Portfolio's photos</step>
    </mainSequence>
</useCase>
