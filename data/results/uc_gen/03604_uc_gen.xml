<useCase id="UC001">
    <name>Initialisation d'un monstre</name>
    <actors>
        <actor>User</actor>
        <actor>Main</actor>
        <actor>Labyrinthe</actor>
        <actor>Monstre</actor>
    </actors>
    <mainSequence>
        <step id="S1">User calls main()</step>
        <step id="S2">Main activates</step>
        <step id="S3">Main calls Labyrinthe("labySimple/laby0.txt")</step>
        <step id="S4">Labyrinthe activates</step>
        <step id="S5">Labyrinthe calls lireFichier()</step>
        <step id="S6">Labyrinthe activates</step>
        <step id="S7">Labyrinthe calls Monstre(x, y)</step>
        <step id="S8">Monstre activates</step>
        <step id="S9">Monstre calls setPositionInitiale(x, y)</step>
        <step id="S10">Monstre returns to Labyrinthe</step>
        <step id="S11">Monstre deactivates</step>
        <step id="S12">Labyrinthe deactivates</step>
        <step id="S13">Labyrinthe returns to Main</step>
        <step id="S14">Labyrinthe deactivates</step>
        <step id="S15">Main calls afficherLabyrinthe()</step>
    </mainSequence>
</useCase>
