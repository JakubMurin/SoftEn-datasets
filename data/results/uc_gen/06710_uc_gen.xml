<useCase id="UC1">
    <name>Show Main Menu</name>
    <actors>
        <actor>User</actor>
        <actor>Menu</actor>
        <actor>Pilih Menu</actor>
        <actor>Aku</actor>
        <actor>Dia</actor>
        <actor>Quantity</actor>
        <actor>Total</actor>
        <actor>Exit</actor>
    </actors>
    <mainSequence>
        <step id="S1">User displays the main menu.</step>
        <step id="S2">Menu selects Menu 1 or 2, and selects Aku or Dia.</step>
        <step id="S3">Aku displays profile.</step>
        <step id="S4">User inputs Quantity amount.</step>
        <step id="S5">Quantity prints.</step>
        <step id="S6">Menu returns to Main Menu.</step>
        <step id="S7">If not selected, return to Menu.</step>
        <step id="S8">Dia displays profile.</step>
        <step id="S9">User inputs Quantity amount.</step>
        <step id="S10">Quantity prints.</step>
        <step id="S11">Menu returns to Main Menu.</step>
        <step id="S12">If not selected, return to Menu.</step>
    </mainSequence>
</useCase>
