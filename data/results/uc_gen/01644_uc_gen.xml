<useCase id="UC1">
    <name>Member Book Reservation</name>
    <actors>
        <actor>Member</actor>
        <actor>Web Interface</actor>
        <actor>Authentication System</actor>
        <actor>Reservation System</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">Member navigates to Login Page</step>
        <step id="S2">Web Interface prompts for credentials</step>
        <step id="S3">Member enters credentials</step>
        <step id="S4">Authentication System validates credentials</step>
        <step id="S5">Database confirms credentials are valid</step>
        <step id="S6">Authentication System grants access</step>
        <step id="S7">Web Interface displays Dashboard</step>
        <step id="S8">Member navigates to Reserve Book</step>
        <step id="S9">Web Interface displays Search Interface</step>
        <step id="S10">Member inputs search parameters</step>
        <step id="S11">Reservation System queries books by parameters</step>
        <step id="S12">Database returns query results</step>
        <step id="S13">Reservation System displays available books</step>
        <step id="S14">Member chooses book and reserves it</step>
        <step id="S15">Web Interface processes reservation request</step>
        <step id="S16">Database updates reservation status</step>
        <step id="S17">Reservation System confirms reservation success</step>
        <step id="S18">Web Interface displays reservation confirmation</step>
        <step id="S19">Member sees success message</step>
    </mainSequence>
</useCase>
