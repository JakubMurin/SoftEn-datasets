<useCase id="UC001">
    <name>User adds a new task</name>
    <actors>
        <actor>User</actor>
        <actor>TodoForm</actor>
        <actor>TodoWrapper</actor>
        <actor>Backend</actor>
    </actors>
    <trigger>User enters task description and clicks on "Add Task" button.</trigger>
    <mainSequence>
        <step id="S1">User enters task description.</step>
        <step id="S2">User clicks on "Add Task" button.</step>
        <step id="S3">TodoForm handles the form submission.</step>
        <step id="S4">TodoWrapper calls Backend to add the task.</step>
        <step id="S5">Backend confirms task addition.</step>
        <step id="S6">TodoWrapper updates the task list.</step>
        <step id="S7">TodoWrapper displays the new task in the list.</step>
    </mainSequence>
</useCase>
