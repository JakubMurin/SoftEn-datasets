<useCase id="UC1">
    <name>Job Creation and Preparation</name>
    <actors>
        <actor>User</actor>
        <actor>Scheduler</actor>
        <actor>SchedulerDB</actor>
        <actor>Storage</actor>
    </actors>
    <mainSequence>
        <step id="S1">User creates job with UUID</step>
        <step id="S2">Scheduler stores SecHub job in SchedulerDB</step>
        <step id="S3">User uploads zip file</step>
        <step id="S4">Scheduler stores zip file in Storage</step>
        <step id="S5">User requests job status</step>
        <step id="S6">Scheduler reads SecHub job report status from SchedulerDB</step>
    </mainSequence>
</useCase>
