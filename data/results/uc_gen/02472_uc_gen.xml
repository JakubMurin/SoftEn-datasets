<useCase id="UC1">
    <name>Administrar Categorias</name>
    <description>Permite al usuario encargado cargar nuevas categorias</description>
    <actors>
        <actor>usuario_encargado</actor>
        <actor>MenuEncargado</actor>
        <actor>Encargado</actor>
        <actor>RepoCategoria</actor>
    </actors>
    <mainSequence>
        <step id="S1">usuario_encargado selecciona categorias en el menu</step>
        <step id="S2">MenuEncargado muestra el menu de Categorias</step>
        <step id="S3">usuario_encargado selecciona cargar nueva categoria</step>
        <step id="S4">MenuEncargado solicita datos</step>
        <step id="S5">usuario_encargado ingresa datos</step>
        <step id="S6">Encargado valida datos</step>
        <step id="S7">Encargado carga nueva categoria desde RepoCategoria</step>
        <step id="S8">Encargado confirma operación con MenuEncargado</step>
        <step id="S9">MenuEncargado muestra mensaje de confirmación</step>
    </mainSequence>
</useCase>
