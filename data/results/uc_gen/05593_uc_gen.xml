<useCase id="UC1">
    <name>User Management</name>
    <description>Manage user accounts, profiles, posts, and interactions</description>
    <actors>
        <actor>User</actor>
        <actor>OtherUser</actor>
        <actor>AnonymousUser</actor>
    </actors>
    <preconditions>
        <precondition>Users must have registered accounts</precondition>
    </preconditions>
    <trigger>Users interact with the system through various actions</trigger>
    <mainSequence>
        <step id="S1">Register for an account</step>
        <step id="S2">Sign in to the system</step>
        <step id="S3">View own profile</step>
        <step id="S4">View other user's profile</step>
        <step id="S5">View posts in the system</step>
        <step id="S6">View detailed post information</step>
        <step id="S7">Create a new post</step>
        <step id="S8">Like a post</step>
        <step id="S9">Comment on a post</step>
        <step id="S10">Delete own posts or comments</step>
        <step id="S11">Reply to comments</step>
        <step id="S12">Add, remove, accept, or reject friend requests</step>
        <step id="S13">View notifications and friend requests</step>
    </mainSequence>
</useCase>
