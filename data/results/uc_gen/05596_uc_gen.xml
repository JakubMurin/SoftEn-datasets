<useCase id="UC1">
    <name>User Registration</name>
    <actors>
        <actor>User</actor>
        <actor>System</actor>
        <actor>Database</actor>
    </actors>
    <preconditions>
        <precondition>System is operational</precondition>
        <precondition>Database connection is established</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully registered</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>User registration failed</condition>
    </failureEndConditions>
    <trigger>User wants to register in the system</trigger>
    <mainSequence>
        <step id="S1">User initiates the registration process</step>
        <step id="S2">System saves user information in the database</step>
        <step id="S3">System sends a confirmation message to the user</step>
    </mainSequence>
</useCase>
