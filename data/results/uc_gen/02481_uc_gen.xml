<useCase id="UC001">
    <name>DMPTool Resource and Cost Estimation</name>
    <actors>
        <actor>Researcher</actor>
    </actors>
    <trigger>Researcher access the DMPTool</trigger>
    <mainSequence>
        <step id="S1">Access DMPTool</step>
        <step id="S2">Request resource requirements input to ITRE</step>
        <step id="S3">Input project details to ITRE (e.g. data volume, processing power)</step>
        <step id="S4">Return resource estimates from ITRE</step>
        <step id="S5">Initiate cost calculation with CCM</step>
        <step id="S6">Request institutional pricing data from IS</step>
        <step id="S7">Return pricing data from IS</step>
        <step id="S8">Return cost estimate from CCM</step>
        <step id="S9">Display cost estimate and resource needs</step>
    </mainSequence>
</useCase>
