<useCase id="UC1">
  <name>Manage Email Communication</name>
  <actors>
    <actor>Summit Coordinator</actor>
    <actor>Summit Management Module</actor>
    <actor>Database</actor>
    <actor>Email System</actor>
  </actors>
  <mainSequence>
    <step id="S1">Authenticate with the Authentication System</step>
    <step id="S2">Request list of attendees for summit from Summit Management Module</step>
    <step id="S3">Query attendee details for summit from Database</step>
    <step id="S4">Display the list of attendees</step>
    <step id="S5">Select attendees to email</step>
    <step id="S6">Compose email</step>
    <step id="S7">Request to send email to selected attendees</step>
    <step id="S8">Send email request with attendee emails through Email System</step>
    <step id="S9">Log email activity to Database</step>
    <step id="S10">Confirm email sent to attendees</step>
  </mainSequence>
</useCase>
