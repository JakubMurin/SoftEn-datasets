<useCase id="UC1">
    <name>Display Items</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User displays items</step>
        <step id="S2">Main activates and retrieves items from ItemController</step>
        <step id="S3">ItemController fetches items from ItemModel</step>
        <step id="S4">ItemModel loads items from a file</step>
        <step id="S5">ItemModel deactivates</step>
        <step id="S6">ItemController receives a list of items from ItemModel</step>
        <step id="S7">Main displays items in TextArea</step>
    </mainSequence>
</useCase>
