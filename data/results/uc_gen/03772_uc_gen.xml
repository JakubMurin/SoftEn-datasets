<useCase id="UC1">
    <name>Create Booking</name>
    <actors>
        <actor>Receptionist</actor>
    </actors>
    <mainSequence>
        <step id="S1">Receptionist requests to create booking</step>
        <step id="S2">UI displays booking form</step>
        <step id="S3">Receptionist fills booking details</step>
        <step id="S4">Router receives booking data</step>
        <step id="S5">Controller creates booking</step>
        <step id="S6">Repository checks room availability</step>
        <step id="S7">Repository creates new booking</step>
        <step id="S8">BookingModel inserts new booking</step>
        <step id="S9">Controller sends success response</step>
        <step id="S10">UI displays success message</step>
        <step id="S11">Controller sends error response</step>
        <step id="S12">UI displays error message</step>
    </mainSequence>
</useCase>
