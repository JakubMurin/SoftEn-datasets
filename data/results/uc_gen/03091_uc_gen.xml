<useCase id="UC1">
    <name>Data Storage Indication Process</name>
    <actors>
        <actor>Researcher</actor>
        <actor>DMPTool Interface</actor>
        <actor>Data Storage Planning Module</actor>
        <actor>Metadata Repository</actor>
        <actor>Institutional Systems (Integration)</actor>
    </actors>
    <mainSequence>
        <step id="S1">Access DMPTool</step>
        <step id="S2">Choose to document data storage plans</step>
        <step id="S3">Display data storage plan form</step>
        <step id="S4">Input data storage locations (during and after the project)</step>
        <step id="S5">Store data storage plans</step>
        <step id="S6">Update metadata with data locations</step>
        <step id="S7">Confirm data storage plan saved</step>
        <step id="S8">Send storage plan details (Optional integration)</step>
        <step id="S9">Update institutional repository/system</step>
        <step id="S10">Display confirmation message</step>
        <step id="S11">Display success and next steps</step>
    </mainSequence>
</useCase>
