<useCase id="UC1">
    <name>User Login</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User clicks on "Login"</step>
        <step id="S2">LibrarySystem enters username and password</step>
        <step id="S3">If login details are correct:</step>
        <step id="S4">LibrarySystem logs in the User</step>
        <step id="S5">LibrarySystem shows welcome message to User</step>
        <step id="S6">Else:</step>
        <step id="S7">LibrarySystem shows error message "Incorrect login details" to User</step>
    </mainSequence>
</useCase>
