<useCase id="UC1">
  <name>Join Workflow</name>
  <description>User connects as host and joins a room</description>
  <actors>
    <actor>Professor</actor>
  </actors>
  <trigger>Click on "connect as host" button</trigger>
  <mainSequence>
    <step id="S1">Click on "connect as host" button</step>
    <step id="S2">Perform 'connectHost()' function</step>
    <step id="S3">Create Relay for room size</step>
    <step id="S4">Allocate server for the room</step>
    <step id="S5">Get the room allocation details</step>
    <step id="S6">Retrieve the join code asynchronously</step>
    <step id="S7">Set IP and port data for transport</step>
    <step id="S8">Start hosting the room</step>
    <step id="S9">Set the join code in textbox</step>
  </mainSequence>
</useCase>
