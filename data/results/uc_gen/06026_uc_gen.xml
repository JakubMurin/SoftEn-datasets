<useCase id="UC1">
    <name>Get Issue</name>
    <actors>
        <actor>PL</actor>
        <actor>System</actor>
        <actor>DBMS</actor>
    </actors>
    <mainSequence>
        <step id="S1">PL gets issue by signId and issueId</step>
