<useCase id="UC1">
    <name>User Authentication</name>
    <actors>
        <actor>User</actor>
        <actor>FrontEnd</actor>
        <actor>BackendServer</actor>
        <actor>Firebase</actor>
    </actors>
    <mainSequence>
        <step id="S1">User logs in or signs up</step>
        <step id="S2">FrontEnd sends credentials to BackendServer</step>
        <step id="S3">BackendServer authenticates or creates user in Firebase</step>
    </mainSequence>
</useCase>
