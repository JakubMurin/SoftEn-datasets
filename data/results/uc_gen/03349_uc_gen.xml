<useCase id="UC1">
    <name>Submit new history data</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User submits new history data</step>
        <step id="S2">UI receives the data</step>
        <step id="S3">Router processes POST request with the data</step>
        <step id="S4">Controller creates a new history with the data</step>
        <step id="S5">Repository saves the new history</step>
        <step id="S6">Model saves the new history to the Database</step>
        <step id="S7">Database confirms the saved history</step>
        <step id="S8">Repository confirms the saved history</step>
        <step id="S9">Controller confirms the saved history</step>
        <step id="S10">Router responds with 201 Created</step>
        <step id="S11">UI displays success message</step>
    </mainSequence>
</useCase>
