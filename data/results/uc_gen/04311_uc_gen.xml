<useCase id="UC001">
    <name>Execute application</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User executes the application</step>
        <step id="S2">Main loads the configuration</step>
        <step id="S3">Configuration initializes defaults</step>
        <step id="S4">Configuration parses CLI flags (--file, --source, --language, etc.)</step>
