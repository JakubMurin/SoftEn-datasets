<useCase id="UC1">
    <name>Manage Country Tours</name>
    <actors>
        <actor>用户</actor>
    </actors>
    <mainSequence>
        <step id="S1">用户 provides form parameters.</step>
        <step id="S2">CountryTourScreenController activates.</step>
        <step id="S3">CountryTourScreenController calls TbCountryTourService's page() method.</step>
        <step id="S4">TbCountryTourService activates.</step>
        <step id="S5">CountryTourScreenController calls TbCountryTourService's statistic() method.</step>
        <step id="S6">TbCountryTourService queries TbCountryTourMapper.</step>
        <step id="S7">TbCountryTourMapper queries data successfully.</step>
        <step id="S8">TbCountryTourService returns success.</step>
        <step id="S9">TbCountryTourService returns failure.</step>
        <step id="S10">TbCountryTourService returns data to CountryTourScreenController.</step>
        <step id="S11">CountryTourScreenController transfers data to the frontend.</step>
    </mainSequence>
</useCase>
