<useCase id="UC1">
    <name>Get Partial Stats</name>
    <actors>
        <actor>Client</actor>
        <actor>RS</actor>
        <actor>SA</actor>
    </actors>
    <mainSequence>
        <step id="S1">Client sends request to get_partial_stats</step>
        <step id="S2">RS receives request to get_partial_stats</step>
        <step id="S3">SA receives request to get_partial_stats</step>
        <step id="S4">SA retrieves partial system stats</step>
        <step id="S5">SA retrieves partial buckets info</step>
        <step id="S6">SA generates stats payload</step>
        <step id="S7">SA sends stats payload to Client</step>
    </mainSequence>
</useCase>
