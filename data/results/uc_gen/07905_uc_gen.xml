<useCase id="UC1">
    <name>积分流转</name>
    <actors>
        <actor>用户</actor>
    </actors>
    <mainSequence>
        <step id="S1">用户调用积分合约部署</step>
        <step id="S2">积分合约部署成功，并记录合约地址到配置文件中</step>
        <step id="S3">获取平台管理员用户信息</step>
        <step id="S4">创建对应的积分账户</step>
        <step id="S5">初始化积分总量给DAO账户</step>
        <step id="S6">年度积分结余，进行回收商积分派发</step>
        <step id="S7">记录交易明细</step>
        <step id="S8">用户注册账户</step>
        <step id="S9">获取注册积分</step>
        <step id="S10">记录交易明细</step>
        <step id="S11">用户添加电池，缴纳积分</step>
        <step id="S12">用户登记车辆电池信息，缴纳积分</step>
        <step id="S13">计算应发积分并派发</step>
        <step id="S14">记录交易明细</step>
        <step id="S15">消费者获取积分</step>
        <step id="S16">电池拆解回收，计算应发积分并派发</step>
        <step id="S17">记录交易明细</step>
        <step id="S18">卖方积分交易申请，冻结卖方积分</step>
        <step id="S19">买方积分交易达成，解冻并完成交易</step>
        <step id="S20">交易撤回，解冻卖方积分</step>
    </mainSequence>
</useCase>
