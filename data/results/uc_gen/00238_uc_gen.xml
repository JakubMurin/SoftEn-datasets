<useCase id="UC1">
    <name>Unlock and Lock Bike</name>
    <actors>
        <actor>Customer</actor>
        <actor>Bike</actor>
    </actors>
    <preconditions>
        <precondition>Customer has activated Bike</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Bike successfully unlocked and locked by the Customer</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Bike unable to unlock or lock</condition>
    </failureEndConditions>
    <mainSequence>
        <step id="S1">Customer starts the lease with Bike</step>
        <step id="S2">Bike starts the lease</step>
        <step id="S3">Customer unlocks the Bike</step>
        <step id="S4">Customer ends the lease with Bike</step>
        <step id="S5">Bike ends the lease</step>
        <step id="S6">Invoice is added by InvoiceGenerator</step>
        <step id="S7">Customer locks the Bike</step>
    </mainSequence>
</useCase>
