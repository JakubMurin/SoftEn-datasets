<useCase id="UC1">
    <name>Create Course</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User creates a new course</step>
        <step id="S2">UI creates the course</step>
        <step id="S3">UI asks for course information</step>
        <step id="S4">User provides course name, description, and edition</step>
        <step id="S5">UI sends course information to Controller</step>
        <step id="S6">Controller creates a new course entity</step>
        <step id="S7">Controller sets the course information</step>
        <step id="S8">Controller retrieves repositories</step>
        <step id="S9">Controller creates a new CourseRepository</step>
        <step id="S10">Controller saves the course to the repository</step>
        <step id="S11">Controller sends the course back to UI</step>
    </mainSequence>
</useCase>
