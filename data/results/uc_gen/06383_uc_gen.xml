<useCase id="UC1">
    <name>Manage Country Tours</name>
    <actors>
        <actor>用户</actor>
    </actors>
    <mainSequence>
        <step id="S1">用户 submits form parameters.</step>
        <step id="S2">CountryTourScreenController activates.</step>
        <step id="S3">CountryTourScreenController calls TbCountryTourService's page() method.</step>
        <step id="S4">TbCountryTourService activates.</step>
        <step id="S5">CountryTourScreenController calls TbCountryTourService's statistic() method.</step>
        <step id="S6">TbCountryTourMapper activates.</step>
        <step id="S7">TbCountryTourService queries TbCountryTourMapper.</step>
        <step id="S8">TbCountryTourMapper retrieves data successfully.</step>
        <step id="S9">TbCountryTourService handles failure response.</step>
        <step id="S10">TbCountryTourService deactivates.</step>
        <step id="S11">TbCountryTourMapper deactivates.</step>
        <step id="S12">TbCountryTourService returns data to CountryTourScreenController.</step>
        <step id="S13">CountryTourScreenController transfers data to the frontend.</step>
        <step id="S14">CountryTourScreenController deactivates.</step>
    </mainSequence>
</useCase>
