<useCase id="UC001">
  <name>Process After-Sale Request</name>
  <actors>
    <actor>User</actor>
    <actor>Seller</actor>
    <actor>Manager</actor>
  </actors>
  <preconditions>
    <precondition>User applies for after-sale service.</precondition>
  </preconditions>
  <successEndConditions>
    <condition>After-sale request processed successfully.</condition>
  </successEndConditions>
  <failureEndConditions>
    <condition>Failure in processing after-sale request.</condition>
  </failureEndConditions>
  <mainSequence>
    <step id="S1">User applies for after-sale service.</step>
    <step id="S2">Seller reviews after-sale request.</step>
    <step id="S3">Platform updates after-sale status.</step>
    <step id="S4">Platform sends after-sale response to User.</step>
    <step id="S5">User provides shipping information.</step>
    <step id="S6">Seller confirms receipt of the returned item.</step>
    <step id="S7">Platform initiates automatic refund.</step>
    <step id="S8">Platform sends after-sale response to User.</step>
    <step id="S9">Platform notifies User about completion of after-sale process.</step>
  </mainSequence>
</useCase>
