<useCase id="UC1">
    <name>Login</name>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>Actor is on the login screen</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully logged in</condition>
    </successEndConditions>
    <trigger>User initiates the login process</trigger>
    <mainSequence>
        <step id="S1">User inputs login information</step>
        <step id="S2">UI shows login screen</step>
        <step id="S3">User enters email and password</step>
        <step id="S4">UI sends authentication request to AuthServ with user's credentials</step>
        <step id="S5">AuthServ validates login credentials</step>
        <step id="S6">AuthServ creates a user session</step>
        <step id="S7">UI displays success message</step>
    </mainSequence>
</useCase>
