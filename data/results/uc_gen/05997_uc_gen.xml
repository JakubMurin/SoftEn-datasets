<useCase id="UC1">
    <name>Recycling Waste Management</name>
    <actors>
        <actor>User</actor>
        <actor>Frontend Application</actor>
        <actor>Backend Server</actor>
        <actor>Database</actor>
    </actors>
    <preconditions>
        <precondition>User selects recyclable waste types</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Optimal route and schedule displayed to user</condition>
    </successEndConditions>
    <trigger>User requests facilities, optimal route, and schedule</trigger>
    <mainSequence>
        <step id="S1">User selects recyclable waste types</step>
        <step id="S2">Request facilities for waste types</step>
        <step id="S3">Query facilities by waste type</step>
        <step id="S4">Return list of facilities</step>
        <step id="S5">Send facilities and opening hours</step>
        <step id="S6">Display facilities and opening hours</step>
        <step id="S7">Request optimal route and schedule</step>
        <step id="S8">Calculate optimal route based on user location and facility hours</step>
        <step id="S9">Return optimal route and schedule</step>
        <step id="S10">Display optimal route and schedule</step>
    </mainSequence>
</useCase>
