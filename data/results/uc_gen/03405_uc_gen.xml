<useCase id="UC1">
	<name>Hash Generation</name>
	<description>Generate hash value for a given input</description>
	<actors>
		<actor>User</actor>
	</actors>
	<preconditions>
		<precondition>Input value is provided</precondition>
	</preconditions>
	<successEndConditions>
		<condition>Hash value is returned successfully</condition>
	</successEndConditions>
	<trigger>User requests hash generation for input value</trigger>
	<mainSequence>
		<step id="S1">User hashes input value</step>
		<step id="S2">MD4 initializes message size</step>
		<step id="S3">MD4 preprocesses the input value</step>
		<step id="S4">MD4 processes the input</step>
		<step id="S5">MD4 returns the generated hash value to User</step>
	</mainSequence>
</useCase>
