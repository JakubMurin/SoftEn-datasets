<useCase id="UC1">
    <name>View Item Details</name>
    <description>User opens the ItemView to view details of an item.</description>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>ItemView must be accessible.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Item details are successfully displayed.</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Item details cannot be retrieved.</condition>
    </failureEndConditions>
    <trigger>User opens the ItemView.</trigger>
    <mainSequence>
        <step id="S1">User opens the ItemView.</step>
        <step id="S2">GUI adds the ItemView to the StackView.</step>
        <step id="S3">GUI requests definitions from the Dictionary.</step>
        <step id="S4">Dictionary retrieves and sends definitions to GUI.</step>
    </mainSequence>
</useCase>
