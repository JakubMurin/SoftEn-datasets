<useCase id="UC001">
  <name>Submit new history data</name>
  <description>As a User, I want to submit new history data to the system.</description>
  <actors>
    <actor>User</actor>
    <actor>UI/Interface</actor>
    <actor>Router</actor>
    <actor>Controller</actor>
    <actor>Repository</actor>
    <actor>Model</actor>
    <actor>DB</actor>
  </actors>
  <mainSequence>
    <step id="S1">User submits new history data</step>
    <step id="S2">UI sends data to Router -> Controller</step>
    <step id="S3">Controller creates History</step>
    <step id="S4">Repository saves new History to DB</step>
    <step id="S5">DB saves History</step>
    <step id="S6">UI receives success message</step>
  </mainSequence>
</useCase>
