<useCase id="UC1">
    <name>Interaksi Pengguna dengan Menu</name>
    <actors>
        <actor>User</actor>
        <actor>Menu</actor>
        <actor>Aku</actor>
        <actor>Dia</actor>
        <actor>Quantity</actor>
        <actor>Total</actor>
        <actor>Exit</actor>
    </actors>
    <preconditions>
        <precondition>User dapat melihat menu utama</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User berhasil menyelesaikan transaksi</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>User tidak memilih opsi dan kembali ke menu</condition>
    </failureEndConditions>
    <mainSequence>
        <step id="S1">User melihat Menu Utama</step>
        <step id="S2">User memilih Menu 1 atau 2 dan memilih Aku atau Dia</step>
        <step id="S3">Aku menampilkan Profil Aku</step>
        <step id="S4">User memasukkan Jumlah Quantity</step>
        <step id="S5">Quantity melakukan Print</step>
        <step id="S6">Menu kembali ke Menu Utama</step>
        <step id="S7">Jika tidak memilih, kembali ke menu</step>
        <step id="S8">Dia menampilkan Profil Dia</step>
        <step id="S9">User memasukkan Jumlah Quantity</step>
        <step id="S10">Quantity melakukan Print</step>
        <step id="S11">Menu kembali ke Menu Utama</step>
        <step id="S12">Jika tidak memilih, kembali ke menu</step>
    </mainSequence>
</useCase>
