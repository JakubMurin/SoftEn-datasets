<useCase id="UC1002">
    <name>Take Exam</name>
    <actors>
        <actor>Student</actor>
    </actors>
    <preconditions>
        <precondition>The student must select an exam to take</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Student selects an exam to take</step>
        <step id="S2">Exam availability is validated</step>
        <step id="S3">Exam is prepared for the student</step>
        <step id="S4">Student answers exam questions</step>
        <step id="S5">Student receives exam grades</step>
        <step id="S6">Grades are saved</step>
        <step id="S7">Student receives feedback on the exam</step>
    </mainSequence>
</useCase>
