<useCase id="UC1">
    <name>Display Items</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User displays items</step>
        <step id="S2">Main activates and calls getItems()</step>
        <step id="S3">ItemController is activated</step>
        <step id="S4">ItemController calls getItems() on ItemModel</step>
        <step id="S5">ItemModel is activated</step>
        <step id="S6">ItemModel loads items from file</step>
        <step id="S7">ItemModel sends items to ItemModel</step>
        <step id="S8">ItemController receives List of Items</step>
        <step id="S9">Main receives formatted items</step>
        <step id="S10">Main displays items in TextArea</step>
    </mainSequence>
</useCase>
