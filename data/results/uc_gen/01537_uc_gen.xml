<useCase id="UC1">
    <name>Book Tandem Session</name>
    <actors>
        <actor>User</actor>
        <actor>Tandem Session System</actor>
        <actor>Partner</actor>
    </actors>
    <preconditions>
        <precondition>User is logged in</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Session successfully booked</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Session not available</condition>
    </failureEndConditions>
    <mainSequence>
        <step id="S1">User selects date and time</step>
        <step id="S2">Tandem Session System checks partner availabilities</step>
        <step id="S3">Tandem Session System sends session invitation to Partner</step>
        <step id="S4">Partner accepts the invitation</step>
        <step id="S5">Tandem Session System confirms session booking to User</step>
    </mainSequence>
</useCase>
