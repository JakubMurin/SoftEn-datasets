<useCase id="UC1">
    <name>Submit project for approval</name>
    <actors>
        <actor>Requestor</actor>
        <actor>Approvers</actor>
    </actors>
    <mainSequence>
        <step id="S1">Requestor submits project</step>
        <step id="S2">Add project</step>
        <step id="S3">Check add permission</step>
        <step id="S4">Validate content</step>
        <step id="S5">Display failure page with error info</step>
        <step id="S6">Add project with status "approved"</step>
        <step id="S7">Return project ID</step>
        <step id="S8">Display success page</step>
        <step id="S9">Add project with status "awaiting_approval"</step>
        <step id="S10">Return project ID</step>
        <step id="S11">Send email to Approvers</step>
        <step id="S12">Display success page with message that project is pending approval</step>
    </mainSequence>
</useCase>
