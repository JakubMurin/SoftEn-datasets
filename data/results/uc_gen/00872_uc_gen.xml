<useCase id="UC001">
    <name>Login to Library System</name>
    <actors>
        <actor>User</actor>
        <actor>Gebruiker</actor>
    </actors>
    <preconditions>
        <precondition>Library System is accessible</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully logged in</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>User entered incorrect login details</condition>
    </failureEndConditions>
    <mainSequence>
        <step id="S1">User clicks on "Login"</step>
        <step id="S2">User enters username and password</step>
        <step id="S3">System checks if login details are correct</step>
        <step id="S4">If login details are correct, system logs in the user and displays a welcome message</step>
        <step id="S5">If login details are incorrect, system displays an error message</step>
    </mainSequence>
</useCase>
