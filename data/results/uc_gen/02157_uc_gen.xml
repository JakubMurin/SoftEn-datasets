<useCase id="UC1">
    <name>Delete Book Process</name>
    <actors>
        <actor>Staff</actor>
    </actors>
    <mainSequence>
        <step id="S1">Staff selects "Remove Book"</step>
        <step id="S2">UI requests to delete book with ID</step>
        <step id="S3">Controller initiates deleteBook(bookId) in BookService</step>
        <step id="S4">Service queries BookDB to delete book with ID</step>
        <step id="S5">BookDB confirms deletion</step>
        <step id="S6">BookService notifies successful deletion</step>
        <step id="S7">Controller displays success message</step>
        <step id="S8">UI shows "Book Deleted Successfully" message to Staff</step>
    </mainSequence>
</useCase>
