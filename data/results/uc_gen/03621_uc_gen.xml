<useCase id="UC1">
    <name>Find Match</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User initiates a request to find a match</step>
        <step id="S2">API Gateway receives the request</step>
        <step id="S3">Controller processes the request</step>
        <step id="S4">Service checks for a match using the provided request ID</step>
        <step id="S5">Service retrieves the user's MatchRequest</step>
        <step id="S6">Service finds another MatchRequest</step>
        <step id="S7">Service retrieves a random question</step>
        <step id="S8">Service creates sessionInfo and attaches it to each MatchRequest</step>
        <step id="S9">Service updates the two MatchRequests</step>
        <step id="S10">Controller sends the user's MatchRequest</step>
        <step id="S11">API Gateway responds with 200 OK and the user's MatchRequest</step>
        <step id="S12">Webapp switches to the session page</step>
    </mainSequence>
</useCase>
