<useCase id="UniqueATM">
    <name>Perform ATM Transaction</name>
    <actors>
        <actor>Customer</actor>
        <actor>ATM Machine</actor>
        <actor>Bank System</actor>
    </actors>
    <mainSequence>
        <step id="S1">Customer inserts card</step>
        <step id="S2">Customer enters PIN</step>
        <step id="S3">ATM verifies PIN with Bank System</step>
        <step id="S4">ATM displays PIN verification success</step>
        <step id="S5">Customer selects Balance Inquiry or Withdrawal</step>
        <step id="S6">ATM requests balance data from Bank System</step>
        <step id="S7">ATM displays Balance</step>
        <step id="S8">ATM requests withdrawal amount from Customer</step>
        <step id="S9">Customer confirms withdrawal</step>
        <step id="S10">ATM processes withdrawal</step>
        <step id="S11">ATM dispenses cash</step>
        <step id="S12">ATM displays insufficient funds message</step>
        <step id="S13">Customer selects Cancel</step>
        <step id="S14">ATM displays transaction canceled message</step>
        <step id="S15">Customer removes card</step>
    </mainSequence>
</useCase>
