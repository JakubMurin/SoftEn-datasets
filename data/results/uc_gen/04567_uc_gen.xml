<useCase id="UC1">
    <name>Register a maintenance</name>
    <actors>
        <actor>HRM</actor>
    </actors>
    <mainSequence>
        <step id="S1">HRM requests to register a vehicle's maintenance</step>
        <step id="S2">RegisterMaintenanceUI creates maintenance record</step>
        <step id="S3">HRM requests maintenance data</step>
        <step id="S4">RegisterMaintenanceUI keeps and stores the data</step>
        <step id="S5">HRM types maintenance details (name)</step>
        <step id="S6">RegisterMaintenanceUI shows the typed data and requests confirmation</step>
    </mainSequence>
</useCase>
