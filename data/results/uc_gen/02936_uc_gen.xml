<useCase id="UC1">
    <name>Access Platform and Authenticate User</name>
    <actors>
        <actor>Depositor</actor>
    </actors>
    <preconditions>
        <precondition>Depositor has access to the platform</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Depositor successfully authenticated</condition>
    </successEndConditions>
    <mainSequence>
        <step id="S1">Depositor accesses the platform</step>
        <step id="S2">User Interface requests authentication</step>
        <step id="S3">Authentication Service authenticates the Depositor</step>
        <step id="S4">Depositor provides credentials to authenticate</step>
        <step id="S5">Authentication Service confirms successful authentication</step>
    </mainSequence>
</useCase>
