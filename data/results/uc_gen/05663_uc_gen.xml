<useCase id="UC001">
    <name>Conduct Inspection</name>
    <actors>
        <actor>Inspector</actor>
        <actor>Inspection Portal</actor>
        <actor>Inspection Database</actor>
        <actor>Customer Account</actor>
    </actors>
    <mainSequence>
        <step id="S1">Inspector logs in</step>
        <step id="S2">Inspector's credentials validated</step>
        <step id="S3">Dashboard displayed for Inspector</step>
        <step id="S4">Inspector selects assigned inspections</step>
        <step id="S5">List of assigned inspections shown</step>
        <step id="S6">Inspector selects an inspection to conduct</step>
        <step id="S7">Details and checklist for the selected inspection displayed</step>
        <step id="S8">Inspector validates compliance for each inspection item</step>
        <step id="S9">Compliance status recorded</step>
        <step id="S10">Inspection results submitted</step>
        <step id="S11">Inspection record updated</step>
        <step id="S12">Customer notified of inspection completion</step>
        <step id="S13">Customer logs in to view results</step>
        <step id="S14">Inspection results displayed for Customer</step>
        <step id="S15">Customer acknowledges receipt of results</step>
        <step id="S16">Acknowledgement status updated</step>
    </mainSequence>
</useCase>
