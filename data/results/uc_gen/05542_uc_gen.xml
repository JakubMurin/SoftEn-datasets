<useCase id="UC1">
    <name>Book Tickets</name>
    <description>Allows the user to book tickets for a movie</description>
    <actors>
        <actor>User</actor>
        <actor>Theater</actor>
        <actor>Server</actor>
    </actors>
    <preconditions>
        <precondition>User has inserted card and selected date</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Order Confirmed</condition>
    </successEndConditions>
    <trigger>User initiates the ticket booking process</trigger>
    <mainSequence>
        <step id="S1">User inserts card</step>
        <step id="S2">User selects date</step>
        <step id="S3">Theater offers seat</step>
        <step id="S4">User submits order</step>
        <step id="S5">Theater submits order to Server</step>
        <step id="S6">Server confirms order</step>
        <step id="S7">Theater confirms order to User</step>
    </mainSequence>
</useCase>
