<useCase id="UC1">
    <name>Manage Research Output</name>
    <actors>
        <actor>Researcher</actor>
        <actor>DMPTool</actor>
        <actor>Institutional Repository or CRIS</actor>
        <actor>Reporting Module</actor>
    </actors>
    <mainSequence>
        <step id="S1">Researcher logs in to DMPTool</step>
        <step id="S2">Researcher navigates to project DMP</step>
        <step id="S3">DMPTool fetches DMP record details</step>
        <step id="S4">Researcher selects "Add Publication"</step>
        <step id="S5">Researcher enters publication details</step>
        <step id="S6">DMPTool checks if publication is in Repository</step>
        <step id="S7">DMPTool links publication with DMP record</step>
        <step id="S8">Repository confirms linkage</step>
        <step id="S9">Researcher requests research output report</step>
        <step id="S10">DMPTool fetches all publications linked to DMP</step>
        <step id="S11">Repository returns publications data</step>
        <step id="S12">Reporting Module generates report based on publications</step>
        <step id="S13">Reporting Module confirms report generated</step>
        <step id="S14">DMPTool displays/downloads report to Researcher</step>
    </mainSequence>
</useCase>
