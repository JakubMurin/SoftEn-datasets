<useCase id="UC1">
    <name>Manage Employee Check-In Records</name>
    <actors>
        <actor>Manager</actor>
    </actors>
    <preconditions>
        <precondition>Manager is logged in</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Check-In Records displayed successfully</condition>
    </successEndConditions>
    <trigger>Manager requests Employee Check-In Records</trigger>
    <mainSequence>
        <step id="S1">Manager logs in</step>
        <step id="S2">EMS validates Manager Credentials</step>
        <step id="S3">EMS queries Check-In Records</step>
        <step id="S4">EMS calculates Total Working Hours</step>
        <step id="S5">EMS compiles Efficiency Metrics</step>
        <step id="S6">EMS saves Report to Database</step>
        <step id="S7">EMS displays Check-In Records</step>
        <step id="S8">EMS displays Working Hours Analysis</step>
        <step id="S9">EMS displays Efficiency Report</step>
    </mainSequence>
</useCase>
