<useCase id="UC001">
    <name>Post a Slack Command</name>
    <actors>
        <actor>USER</actor>
        <actor>APP</actor>
        <actor>SLACK</actor>
    </actors>
    <mainSequence>
        <step id="S1">User posts a Slack Command</step>
        <step id="S2">Slack receives the `/rocker` event triggered</step>
        <step id="S3">App performs `chat.postEphemeral` action</step>
        <step id="S4">Slack displays an ephemeral message to a user in a channel</step>
        <step id="S5">User clicks on the button `launch rocket`</step>
        <step id="S6">Slack receives the `interaction` event triggered</step>
        <step id="S7">App performs `chat.postMessage` action</step>
        <step id="S8">Slack displays Rocket Countdown Message 3 to the user</step>
        <step id="S9">App performs `chat.postMessage` action</step>
        <step id="S10">Slack displays Rocket Countdown Message 2 to the user</step>
        <step id="S11">App performs `chat.postMessage` action</step>
        <step id="S12">Slack displays Rocket Countdown Message 1 to the user</step>
    </mainSequence>
</useCase>
