<useCase id="1">
    <name>User applies for after-sales service</name>
    <description>User initiates a request for after-sales service</description>
    <actors>
        <actor>User</actor>
        <actor>Seller</actor>
        <actor>Manager</actor>
    </actors>
    <preconditions>
        <precondition>User must have purchased a product</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Seller approves after-sales request</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Seller rejects after-sales request</condition>
    </failureEndConditions>
    <trigger>User requests after-sales service</trigger>
    <mainSequence>
        <step id="S1">User applies for after-sales service</step>
        <step id="S2">Seller reviews after-sales request</step>
        <step id="S3">Platform updates after-sales status</step>
        <step id="S4">User fills in logistics information</step>
        <step id="S5">Seller confirms receipt of returned item</step>
        <step id="S6">Platform automatically processes refund</step>
        <step id="S7">Platform notifies user of after-sales completion</step>
    </mainSequence>
</useCase>
