<useCase id="UC001">
  <name>Edit Book Information</name>
  <actors>
    <actor>Librarian</actor>
  </actors>
  <trigger>Librarian accessing book editing section</trigger>
  <mainSequence>
    <step id="S1">Librarian accesses book editing section</step>
    <step id="S2">Request book details from Book Management System</step>
    <step id="S3">Query book details from Database</step>
    <step id="S4">Return book details to Book Management System</step>
    <step id="S5">Show book details to Librarian</step>
    <step id="S6">Display book details to Librarian for editing</step>
    <step id="S7">Send updated book details to Book Management System</step>
    <step id="S8">Update book details and location in Database</step>
    <step id="S9">Confirm update success</step>
    <step id="S10">Confirm update success to Librarian</step>
  </mainSequence>
</useCase>
