<useCase id="UC1">
    <name>Register a maintenance</name>
    <actors>
        <actor>HRM</actor>
    </actors>
    <mainSequence>
        <step id="S1">HRM requests to register a vehicle's maintenance</step>
        <step id="S2">RegisterMaintenanceUI creates maintenance request</step>
        <step id="S3">HRM provides maintenance data</step>
        <step id="S4">RegisterMaintenanceUI stores the provided data</step>
        <step id="S5">RegisterMaintenanceUI shows the typed data and requests confirmation</step>
    </mainSequence>
</useCase>
