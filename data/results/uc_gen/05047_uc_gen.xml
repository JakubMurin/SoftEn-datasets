<useCase id="UC001">
    <name>User starts the game</name>
    <actors>
        <actor>User</actor>
        <actor>App</actor>
        <actor>StartScreen</actor>
        <actor>StartButtonEventHandler</actor>
        <actor>PlayersInputScreen</actor>
        <actor>ConfirmButton</actor>
        <actor>Game</actor>
        <actor>PlayersNamesInputScreen</actor>
        <actor>QuestionScreen</actor>
        <actor>Player</actor>
    </actors>
    <mainSequence>
        <step id="S1">User clicks 'Comenzar' button</step>
        <step id="S2">App handles the event</step>
        <step id="S3">StartScreen handles the event</step>
        <step id="S4">StartButtonEventHandler handles the event</step>
        <step id="S5">StartScreen sets visibility to false</step>
        <step id="S6">PlayersInputScreen is displayed to select and confirm inputs</step>
        <step id="S7">User selects and confirms inputs</step>
        <step id="S8">PlayersInputScreen handles the event</step>
        <step id="S9">ConfirmButton handles the event and requests data selection</step>
        <step id="S10">PlayersInputScreen selects data</step>
        <step id="S11">Game loads received data</step>
        <step id="S12">PlayersNamesInputScreen is created</step>
        <step id="S13">ConfirmButton shows screen for player names input</step>
        <step id="S14">User enters and confirms player names</step>
        <step id="S15">PlayersNamesInputScreen handles the event</step>
        <step id="S16">NamesButton executes event</step>
        <step id="S17">Game registers players with entered names</step>
        <step id="S18">QuestionScreen is created</step>
        <step id="S19">NamesButton shows questions and options</step>
        <step id="S20">QuestionScreen shows questions for each player</step>
    </mainSequence>
</useCase>
