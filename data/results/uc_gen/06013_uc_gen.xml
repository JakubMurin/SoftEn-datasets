<useCase id="UC1">
  <name>Update Inventory Details</name>
  <actors>
    <actor>Manager</actor>
  </actors>
  <preconditions>
    <precondition>The Manager should have access to the inventory management system.</precondition>
  </preconditions>
  <mainSequence>
    <step id="S1">Access inventory management</step>
    <step id="S2">Request current inventory list from UI</step>
    <step id="S3">Query inventory items from Backend</step>
    <step id="S4">Return inventory items to Backend</step>
    <step id="S5">Display inventory items</step>
    <step id="S6">Select item to update</step>
    <step id="S7">Enter new inventory details</step>
    <step id="S8">Update inventory request with details</step>
    <step id="S9">Update item in database</step>
    <step id="S10">Confirm update</step>
    <step id="S11">Confirm success to Manager</step>
    <step id="S12">Display update confirmation</step>
  </mainSequence>
</useCase>
