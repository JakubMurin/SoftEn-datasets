<useCase id="UC001">
    <name>Complete Message Exchange</name>
    <actors>
        <actor>User</actor>
        <actor>Source</actor>
        <actor>Target</actor>
    </actors>
    <mainSequence>
        <step id="S1">User links to Source</step>
        <step id="S2">Source offers message (1)</step>
        <step id="S3">Target accepts message</step>
        <step id="S4">Source offers message (2)</step>
        <step id="S5">Target postpones message</step>
        <step id="S6">Source consumes message (2)</step>
        <step id="S7">Source completes message exchange</step>
    </mainSequence>
</useCase>
