<useCase id="UC1001">
    <name>Take Automatic Exam</name>
    <actors>
        <actor>Student</actor>
    </actors>
    <mainSequence>
        <step id="S1">Student takes an exam</step>
        <step id="S2">List of available automatic exams is displayed</step>
        <step id="S3">Student selects an automatic exam to take</step>
        <step id="S4">Selected automatic exam is displayed</step>
        <step id="S5">Exam is built for the student to take</step>
        <step id="S6">Student answers exam questions</step>
        <step id="S7">Questions are validated</step>
        <step id="S8">Exam grade is calculated</step>
        <step id="S9">Grade is saved in the system</step>
        <step id="S10">Feedback is shown to the student</step>
    </mainSequence>
</useCase>
