<useCase id="UC001">
    <name>Perform Application Start Process</name>
    <actors>
        <actor>Alice</actor>
    </actors>
    <mainSequence>
        <step id="S1">Application starts the process</step>
        <step id="S2">CowboyPlug starts the process</step>
        <step id="S3">Cowboy starts</step>
        <step id="S4">CowboyPlug starts Plug</step>
        <step id="S5">Application starts Supervisor</step>
        <step id="S6">Supervisor initializes Timer</step>
        <step id="S7">Supervisor monitors Timer</step>
        <step id="S8">Timer wakes up</step>
        <step id="S9">Timer sends GET request to Monitored Server</step>
        <step id="S10">Timer updates state</step>
        <step id="S11">Timer crashes</step>
        <step id="S12">Supervisor restarts Timer</step>
        <step id="S13">Alice checks Cowboy status</step>
        <step id="S14">Cowboy calls Plug</step>
        <step id="S15">Plug gets status from Timer</step>
        <step id="S16">Plug responds to Cowboy</step>
        <step id="S17">Cowboy responds to Alice</step>
    </mainSequence>
</useCase>
