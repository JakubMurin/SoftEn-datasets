<useCase id="UC1">
    <name>Adding Other Service to Booking</name>
    <actors>
        <actor>User</actor>
        <actor>UI/Interface</actor>
        <actor>BookingRouter</actor>
        <actor>BookingController</actor>
        <actor>BookingRepository</actor>
        <actor>OtherServiceRepository</actor>
        <actor>Booking Model</actor>
        <actor>OtherService Model</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">User opens booking details page</step>
        <step id="S2">UI receives request to add other service to booking</step>
        <step id="S3">Router forwards request to Controller</step>
        <step id="S4">Controller adds other service to booking</step>
        <step id="S5">Repository adds other service to booking</step>
        <step id="S6">Repository finds booking details</step>
        <step id="S7">Repository finds other service details</step>
        <step id="S8">Repository updates booking with other service</step>
        <step id="S9">Controller receives updated booking with other service</step>
        <step id="S10">Router sends 200 OK response</step>
        <step id="S11">UI displays confirmation of added service</step>
    </mainSequence>
</useCase>
