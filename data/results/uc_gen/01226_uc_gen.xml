<useCase id="UC1">
    <name>Update Dish Allergens</name>
    <actors>
        <actor>Chef</actor>
        <actor>Restaurant Management System</actor>
        <actor>Menu Management Subsystem</actor>
        <actor>Database</actor>
    </actors>
    <preconditions>
        <precondition>The Chef wants to update allergens for a dish</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Chef selects dish to update</step>
        <step id="S2">RMS requests dish details</step>
        <step id="S3">MMS queries dish ingredients</step>
        <step id="S4">DB returns dish ingredients</step>
        <step id="S5">MMS displays ingredients with allergy info</step>
        <step id="S6">RMS shows ingredients and current allergy list to Chef</step>
        <step id="S7">Chef adds/removes allergens to/from list</step>
        <step id="S8">RMS updates allergy information</step>
        <step id="S9">MMS updates dish ingredient allergy info</step>
        <step id="S10">DB confirms update</step>
        <step id="S11">MMS confirms update to Chef</step>
        <step id="S12">RMS displays update confirmation to Chef</step>
    </mainSequence>
</useCase>
