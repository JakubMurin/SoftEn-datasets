<useCase id="UC001">
    <name>Add Recycling Center Information</name>
    <actors>
        <actor>Admin</actor>
    </actors>
    <mainSequence>
        <step id="S1">Admin accesses the Update Center Form</step>
        <step id="S2">UI displays the Update Center Form</step>
        <step id="S3">Admin inputs Recycling Center Data</step>
        <step id="S4">UI submits New Center Info to Server</step>
        <step id="S5">Server validates and adds the Info to Database</step>
        <step id="S6">DB confirms the addition</step>
        <step id="S7">Server displays Success Message</step>
        <step id="S8">UI shows Confirmation to Admin</step>
    </mainSequence>
</useCase>
