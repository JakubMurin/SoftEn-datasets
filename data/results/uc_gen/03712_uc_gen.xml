<useCase id="UC1">
    <name>Create Booking</name>
    <actors>
        <actor>Receptionist</actor>
    </actors>
    <preconditions>
        <precondition>Receptionist requests to create a booking.</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Receptionist requests to create booking.</step>
        <step id="S2">UI displays the booking form.</step>
        <step id="S3">Receptionist fills in booking details.</step>
        <step id="S4">Room availability is checked.</step>
        <step id="S5">If room is available, new booking is created.</step>
        <step id="S6">If room is not available, error message is displayed.</step>
    </mainSequence>
</useCase>
