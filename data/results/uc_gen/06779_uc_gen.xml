<useCase id="UC001">
    <name>User Registration</name>
    <description>Allows User to Register</description>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>User wants to register</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully completes registration</condition>
    </successEndConditions>
    <trigger>User initiates registration process</trigger>
    <mainSequence>
        <step id="S1">User requests to register</step>
        <step id="S2">FE shows registration form to User</step>
        <step id="S3">User fills in the registration form</step>
        <step id="S4">FE shows consent form to User</step>
        <step id="S5">User accepts consent</step>
        <step id="S6">FE validates form</step>
        <step id="S7">FE posts registration data to MD</step>
        <step id="S8">MD resolves the registration with success</step>
        <step id="S9">FE shows success message to User</step>
    </mainSequence>
</useCase>
