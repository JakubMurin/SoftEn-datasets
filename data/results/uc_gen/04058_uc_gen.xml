<useCase id="UC1">
    <name>Update Profile</name>
    <description>Allows the user to update their profile</description>
    <actors>
        <actor>User</actor>
        <actor>Service</actor>
        <actor>Message Broker</actor>
        <actor>Replica</actor>
    </actors>
    <preconditions>
        <precondition>User is logged in</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Profile successfully updated</condition>
    </successEndConditions>
    <trigger>User requests to update profile</trigger>
    <mainSequence>
        <step id="S1">User initiates profile update</step>
        <step id="S2">Service receives update request</step>
        <step id="S3">Message Broker processes the update</step>
        <step id="S4">Service confirms profile update</step>
        <step id="S5">Update confirmation sent to User</step>
        <step id="S6">User acknowledges success</step>
    </mainSequence>
</useCase>
