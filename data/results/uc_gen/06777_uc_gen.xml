<useCase id="UC1">
    <name>User Registration</name>
    <actors>
        <actor>User</actor>
        <actor>FrontEnd</actor>
        <actor>MD</actor>
    </actors>
    <mainSequence>
        <step id="S1">User requests to register</step>
        <step id="S2">FrontEnd shows registration form to User</step>
        <step id="S3">User fills in the registration form</step>
        <step id="S4">FrontEnd shows consent form to User</step>
        <step id="S5">User accepts the consent</step>
        <step id="S6">FrontEnd validates the form</step>
        <step id="S7">FrontEnd posts the registration to MD</step>
        <step id="S8">MD resolves the registration successfully</step>
        <step id="S9">FrontEnd shows success message to User</step>
    </mainSequence>
</useCase>
