<useCase id="UC1">
    <name>Template Method</name>
    <actors>
        <actor>user</actor>
        <actor>scanner</actor>
        <actor>switch</actor>
        <actor>SortingTemplate</actor>
        <actor>IncreasingOrder</actor>
        <actor>DecreasingOrder</actor>
    </actors>
    <trigger>user initiates the Template Method</trigger>
    <mainSequence>
        <step id="S1">User creates an IncreasingOrder object</step>
        <step id="S2">User creates a DecreasingOrder object</step>
        <step id="S3">User initializes the scanner</step>
        <step id="S4">Scanner sends a message to the user</step>
        <step id="S5">User inputs data into the scanner</step>
        <step id="S6">Scanner interacts with the switch</step>
        <step id="S7">Switch determines the answer based on input</step>
        <step id="S8">SortingTemplate is activated</step>
        <step id="S9">SortingTemplate executes the TemplateMethod</step>
        <step id="S10">SortingTemplate sorts the data for IncreasingOrder</step>
        <step id="S11">SortingTemplate determines the sort order for DecreasingOrder</step>
    </mainSequence>
</useCase>
