<useCase id="UC001">
    <name>List Passage Between 2 Buildings</name>
    <actors>
        <actor>User</actor>
        <actor>:listPassageBetween2BuildingsComponentHTML</actor>
        <actor>listPassageBetween2BuildingsComponent</actor>
        <actor>:BuildingServiceFE</actor>
        <actor>:FloorServiceFE</actor>
        <actor>:BuildingController</actor>
        <actor>:FloorController</actor>
        <actor>:BuildingServiceBE</actor>
        <actor>:FloorServiceBE</actor>
    </actors>
    <mainSequence>
        <step id="S1">User lists Passage Between 2 Buildings</step>
        <step id="S2">listPassageBetween2BuildingsComponentHTML gets Buildings</step>
        <step id="S3">BuildingServiceFE gets Buildings</step>
        <step id="S4">BuildingController queries and receives List of Buildings from Database</step>
        <step id="S5">BuildingServiceFE logs Buildings</step>
        <step id="S6">listPassageBetween2BuildingsComponentHTML receives Buildings</step>
        <step id="S7">User asks for 2 buildings</step>
        <step id="S8">User selects 2 buildings</step>
        <step id="S9">listPassageBetween2BuildingsComponent lists Passage Between 2 Buildings</step>
        <step id="S10">FloorServiceFE lists Floors from Building</step>
        <step id="S11">listPassageBetween2BuildingsComponent checks Passage</step>
        <step id="S12">FloorController queries Database for passage</step>
        <step id="S13">listPassageBetween2BuildingsComponent shows Passage</step>
    </mainSequence>
</useCase>
