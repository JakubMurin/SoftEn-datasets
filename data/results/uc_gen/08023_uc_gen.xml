<useCase id="UC1">
    <name>Manage Research Output</name>
    <actors>
        <actor>Researcher</actor>
        <actor>DMPTool</actor>
        <actor>Institutional Repository or CRIS</actor>
        <actor>Reporting Module</actor>
    </actors>
    <mainSequence>
        <step id="S1">Researcher Logs in to DMPTool</step>
        <step id="S2">Researcher Navigates to project DMP</step>
        <step id="S3">DMPTool fetches DMP record details</step>
        <step id="S4">Researcher Selects "Add Publication"</step>
        <step id="S5">Researcher Enters publication details</step>
        <step id="S6">DMPTool Checks if publication is in Repo</step>
        <step id="S7">DMPTool Links publication with DMP record</step>
        <step id="S8">Researcher Requests research output report</step>
        <step id="S9">DMPTool Fetches all publications linked to DMP</step>
        <step id="S10">Institutional Repository or CRIS Returns publications data</step>
        <step id="S11">Report Generates report based on publications</step>
        <step id="S12">Report generated is sent to Researcher</step>
    </mainSequence>
</useCase>
