<useCase id="UC1">
    <name>Take Exam</name>
    <actors>
        <actor>Student</actor>
    </actors>
    <mainSequence>
        <step id="S1">Student chooses exam</step>
        <step id="S2">UI receives examToBeTaken request</step>
        <step id="S3">Controller retrieves exam from repository</step>
        <step id="S4">Controller obtains grammar tools from context</step>
        <step id="S5">Controller generates exam using external service</step>
        <step id="S6">Controller creates ExamToBeTakenDTO</step>
        <step id="S7">Controller sends examToBeTakenDTO to UI</step>
        <step id="S8">UI presents exam to student</step>
    </mainSequence>
</useCase>
