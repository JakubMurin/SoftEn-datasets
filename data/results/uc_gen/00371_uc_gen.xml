<useCase id="UC1">
    <name>View Item Definition</name>
    <description>User can view the definition of an item.</description>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>The item view is opened.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>The definitions are successfully retrieved.</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Failed to retrieve definitions.</condition>
    </failureEndConditions>
    <trigger>User opens the ItemView.</trigger>
    <mainSequence>
        <step id="S1">User opens the ItemView.</step>
        <step id="S2">User adds the ItemView to the StackView.</step>
        <step id="S3">User requests the definitions.</step>
        <step id="S4">GUI receives the definitions from Dictionary service.</step>
    </mainSequence>
</useCase>
