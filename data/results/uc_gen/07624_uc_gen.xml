<useCase id="UC1">
    <name>Review and Document Application</name>
    <actors>
        <actor>Planning Staff</actor>
        <actor>User Authentication</actor>
        <actor>Dashboard</actor>
        <actor>Application Database</actor>
        <actor>Compliance Checking Tool</actor>
        <actor>Comprehensive Plan Database</actor>
        <actor>Review Notes Interface</actor>
        <actor>Notification Service</actor>
    </actors>
    <preconditions>
        <precondition>Planning Staff is logged in</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Review status updated successfully</condition>
    </successEndConditions>
    <trigger>Planning Staff selects an application for review</trigger>
    <mainSequence>
        <step id="S1">Authenticate with User Authentication</step>
        <step id="S2">Navigate to Dashboard to access applications</step>
        <step id="S3">Select an application to review</step>
        <step id="S4">Review application details and check consistency</step>
        <step id="S5">Document review and update status</step>
        <step id="S6">Send notification to applicant</step>
    </mainSequence>
</useCase>
