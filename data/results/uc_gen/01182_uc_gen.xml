<useCase id="UC1">
    <name>Modify Vacation Request</name>
    <actors>
        <actor>Navegador</actor>
    </actors>
    <mainSequence>
        <step id="S1">Navegador requests to modify a vacation</step>
        <step id="S2">System fetches the vacation details</step>
        <step id="S3">System presents the modification form to Navegador</step>
        <step id="S4">Navegador modifies the vacation request</step>
        <step id="S5">System updates the vacation request</step>
        <step id="S6">System displays success message to Navegador</step>
    </mainSequence>
</useCase>
