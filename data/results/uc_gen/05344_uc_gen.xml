<useCase id="UC001">
    <name>Process Refund Request</name>
    <actors>
        <actor>Customer</actor>
        <actor>UI/Interface</actor>
        <actor>RefundRouter</actor>
        <actor>RefundController</actor>
        <actor>RefundRepository</actor>
        <actor>Refund Model</actor>
        <actor>CustomerRepository</actor>
        <actor>Database</actor>
        <actor>AdminNotificationService</actor>
    </actors>
    <mainSequence>
        <step id="S1">Open refund request page</step>
        <step id="S2">Display refund request form</step>
        <step id="S3">Submit refund request with customerId, orderId, reason, and amount</step>
        <step id="S4">Create refund request with customerId, orderId, reason, and amount</step>
        <step id="S5">Retrieve customer by customerId</step>
        <step id="S6">Save refund request</step>
        <step id="S7">Notify admin of refund request with details</step>
        <step id="S8">Display success message</step>
    </mainSequence>
</useCase>
