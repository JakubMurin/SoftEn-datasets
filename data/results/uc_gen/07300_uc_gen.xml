<useCase id="UC001">
    <name>Start Sensors</name>
    <description>Use case to start all sensors connected to the Sensors Manager.</description>
    <actors>
        <actor>Actor</actor>
    </actors>
    <mainSequence>
        <step id="S1">Actor starts the sensors</step>
        <step id="S2">Sensors Manager is activated</step>
        <step id="S3">For each sensor in sensors:</step>
        <step id="S4">Actor starts the sensor</step>
        <step id="S5">Sensor is activated</step>
        <step id="S6">Return</step>
        <step id="S7">Sensors Manager sets started to true</step>
        <step id="S8">Return</step>
    </mainSequence>
</useCase>
