<useCase id="UC1">
  <name>Submit Documents and Metadata</name>
  <actors>
    <actor>Content Provider</actor>
    <actor>Document Source</actor>
    <actor>Document Repository</actor>
    <actor>Document Registry</actor>
  </actors>
  <trigger>Initiate submission</trigger>
  <mainSequence>
    <step id="S1">Content Provider initiates document and metadata submission</step>
    <step id="S2">Document Source collects document(s) and metadata</step>
    <step id="S3">Document Source submits document(s) and metadata (ITI-41)</step>
    <step id="S4">Document Repository processes the request</step>
    <step id="S5">Document Repository stores the document(s)</step>
    <step id="S6">Document Registry submits metadata (ITI-42)</step>
    <step id="S7">Document Registry validates the metadata</step>
    <step id="S8">Document Registry sends an error response (ITI-42)</step>
    <step id="S9">Document Repository sends an error response (ITI-41)</step>
  </mainSequence>
</useCase>
