<useCase id="UC001">
  <name>Consultation Management</name>
  <actors>
    <actor>cliente</actor>
    <actor>secretaria</actor>
    <actor>veterinario</actor>
  </actors>
  <mainSequence>
    <step id="S1">cliente schedules consultation</step>
    <step id="S2">secretaria confirms consultation</step>
    <step id="S3">cliente provides personal information</step>
    <step id="S4">secretaria updates client record</step>
    <step id="S5">secretaria confirms record update</step>
    <step id="S6">cliente informs symptoms to veterinarian</step>
    <step id="S7">veterinarian registers symptoms</step>
    <step id="S8">veterinarian provides diagnosis and treatment plan to client</step>
    <step id="S9">veterinarian schedules exams</step>
    <step id="S10">veterinarian requests exams from client</step>
    <step id="S11">veterinarian finalizes treatment</step>
    <step id="S12">cliente returns for consultation</step>
    <step id="S13">veterinarian records exam orders</step>
    <step id="S14">veterinarian provides results to client</step>
    <step id="S15">veterinarian gives prescriptions to client</step>
  </mainSequence>
</useCase>
