<useCase id="UC1">
    <name>Make a move on the GoBoard</name>
    <actors>
        <actor>Gracz</actor>
        <actor>Board</actor>
        <actor>Logic</actor>
        <actor>Server</actor>
    </actors>
    <trigger>Gracz mouseClicked on the Board</trigger>
    <mainSequence>
        <step id="S1">Gracz mouseClicked on the Board</step>
        <step id="S2">Board processes move based on mouse click</step>
        <step id="S3">Logic validates the position</step>
        <step id="S4">Logic determines the color at the clicked position</step>
        <step id="S5">Logic processes the move and adds intersection</step>
        <step id="S6">Server validates the move</step>
        <step id="S7">Server sends move response to Board</step>
        <step id="S8">Board changes state</step>
    </mainSequence>
</useCase>
