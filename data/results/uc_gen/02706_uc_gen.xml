<useCase id="UC1">
  <name>Deposit Dataset</name>
  <actors>
    <actor>Depositor</actor>
    <actor>Web Interface</actor>
    <actor>Pure Integration Module</actor>
    <actor>DMS</actor>
    <actor>Bath Data Archive</actor>
  </actors>
  <preconditions>
    <precondition>Depositor accesses deposit interface</precondition>
  </preconditions>
  <trigger>Depositor fills in dataset deposit form</trigger>
  <mainSequence>
    <step id="S1">Depositor accesses deposit interface</step>
    <step id="A1">Request authentication</step>
    <step id="A1S1">Authenticate depositor</step>
    <step id="S3">Show dataset deposit form</step>
    <step id="S4">Fill in form (Include metadata, files)</step>
    <step id="S5">Process deposit form</step>
    <step id="S6">Check if dataset metadata aligns with Pure requirements</step>
    <step id="S7">Deposit dataset and metadata</step>
    <step id="S8">Confirm deposit (Generate DOI)</step>
    <step id="S9">Link dataset DOI with Pure records</step>
    <step id="S10">Update Pure records</step>
    <step id="S11">Confirm dataset deposit Provide DOI to depositor</step>
    <step id="S12">Display confirmation (Include DOI link)</step>
  </mainSequence>
</useCase>
