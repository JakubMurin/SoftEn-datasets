<useCase id="UC1">
    <name>Process After-sales Request</name>
    <actors>
        <actor>User</actor>
        <actor>Seller</actor>
        <actor>Manager</actor>
    </actors>
    <preconditions>
        <precondition>User applies for after-sales service.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>After-sales process completed successfully.</condition>
    </successEndConditions>
    <trigger>User requests after-sales service.</trigger>
    <mainSequence>
        <step id="S1">User applies for after-sales service.</step>
        <step id="S2">Seller reviews the after-sales application.</step>
        <step id="S3">Platform updates the after-sales status.</step>
        <step id="S4">Platform notifies the user about the after-sales review.</step>
        <step id="S5">User provides shipping information.</step>
        <step id="S6">Seller confirms receipt of the returned item.</step>
        <step id="S7">Platform processes automatic refund.</step>
        <step id="S8">Platform notifies user about the refund completion.</step>
        <step id="S9">Platform informs the user that after-sales process is completed.</step>
    </mainSequence>
</useCase>
