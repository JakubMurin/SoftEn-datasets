<useCase id="1">
    <name>Guess Number Game</name>
    <actors>
        <actor>User</actor>
        <actor>Game</actor>
        <actor>State</actor>
    </actors>
    <mainSequence>
        <step id="S1">User inputs a number</step>
        <step id="S2">Game sets the guess</step>
        <step id="S3">User clicks "Adivinar"</step>
        <step id="S4">Game parses the guess</step>
        <step id="S5">Game sets the message based on condition</step>
        <step id="S6">Game displays the message</step>
        <step id="S7">User clicks "Reiniciar"</step>
        <step id="S8">Game generates a random target number</step>
        <step id="S9">Game resets the guess</step>
        <step id="S10">Game resets the message</step>
        <step id="S11">User clicks "Back to Home"</step>
        <step id="S12">User invokes onBackToHome()</step>
    </mainSequence>
</useCase>
