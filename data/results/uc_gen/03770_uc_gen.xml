<useCase id="UC1">
    <name>Create Booking</name>
    <actors>
        <actor>Receptionist</actor>
    </actors>
    <mainSequence>
        <step id="S1">Receptionist requests to create booking</step>
        <step id="S2">UI receives request and shows create booking form</step>
        <step id="S3">Receptionist fills in booking details</step>
        <step id="S4">UI sends booking data to create booking</step>
        <step id="S5">Router directs request to Controller</step>
        <step id="S6">Controller creates booking in Repository</step>
        <step id="S7">Repository checks room availability</step>
        <step id="S8">If room is available, create new booking in BookingModel</step>
        <step id="S9">If room is not available, display error message</step>
    </mainSequence>
</useCase>
