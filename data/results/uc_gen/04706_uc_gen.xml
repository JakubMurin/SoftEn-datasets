<useCase id="UC1">
    <name>Login and Access Protected Route</name>
    <actors>
        <actor>Usuario</actor>
    </actors>
    <mainSequence>
        <step id="S1">User enters credentials</step>
        <step id="S2">AngularApp requests authentication</step>
        <step id="S3">AngularService requests authentication</step>
        <step id="S4">ExpressServer authenticates credentials</step>
        <step id="S5">ExpressServer generates access token</step>
        <step id="S6">AngularService generates access token</step>
        <step id="S7">User successfully logs in</step>
        <step id="S8">User accesses protected route</step>
        <step id="S9">AngularApp sends access token</step>
        <step id="S10">AngularService verifies access token</step>
        <step id="S11">AngularApp accesses protected route</step>
    </mainSequence>
</useCase>
