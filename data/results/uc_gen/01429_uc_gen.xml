<useCase id="UC1">
    <name>Take Quiz</name>
    <actors>
        <actor>User</actor>
        <actor>Quiz</actor>
        <actor>Questions</actor>
        <actor>Answers</actor>
    </actors>
    <mainSequence>
        <step id="S1">User takes the quiz</step>
        <step id="S2">Quiz is activated</step>
        <step id="S3">User submits questions</step>
        <step id="S4">Questions are checked by Answers</step>
        <step id="S5">Answers provide the result</step>
        <step id="S6">Quiz results are sent back to User</step>
        <step id="S7">Results are displayed to User</step>
    </mainSequence>
</useCase>
