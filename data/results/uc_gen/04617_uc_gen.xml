<useCase id="UC001">
    <name>Schedule In-Person Check-ins</name>
    <actors>
        <actor>NSF_Employee</actor>
        <actor>Stakeholder</actor>
    </actors>
    <mainSequence>
        <step id="S1">NSF_Employee accesses meeting scheduling feature</step>
        <step id="S2">PMS displays scheduling options</step>
        <step id="S3">NSF_Employee selects preferred time slots</step>
        <step id="S4">NSF_Employee submits selected time slots</step>
        <step id="S5">PMS checks availability</step>
        <step id="S6">PMS sends meeting invites to Stakeholder</step>
        <step id="S7">Stakeholder confirms availability</step>
        <step id="S8">PMS finalizes meeting details</step>
        <step id="S9">NSF_Employee prepares meeting agenda</step>
    </mainSequence>
</useCase>
