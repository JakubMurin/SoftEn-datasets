<useCase id="UC001">
    <name>Cancel Account</name>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>User is logged into the application</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Account has been successfully cancelled</condition>
    </successEndConditions>
    <trigger>User decides to cancel their account</trigger>
    <mainSequence>
        <step id="S1">User opens the application</step>
        <step id="S2">Homepage screen displays "Account Settings"</step>
        <step id="S3">User navigates to Account Settings</step>
        <step id="S4">Delete Account Dialog is displayed</step>
        <step id="S5">User confirms cancellation</step>
        <step id="S6">Account cancellation is initiated</step>
        <step id="S7">API call for Account Cancellation is made</step>
        <step id="S8">Cancellation request is forwarded</step>
        <step id="S9">Account is marked for deletion in the database</step>
        <step id="S10">Account marked for deletion is confirmed</step>
        <step id="S11">Account cancellation is confirmed</step>
        <step id="S12">Cancelling confirmation is displayed</step>
        <step id="S13">User navigates back to Homepage</step>
        <step id="S14">Confirmation message is displayed to the User</step>
        <step id="S15">User logs out and session data is cleared</step>
    </mainSequence>
</useCase>
