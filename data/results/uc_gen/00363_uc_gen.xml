<useCase id="UC1">
    <name>View Item Definitions</name>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>The User has opened the ItemView</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">User opens the ItemView</step>
        <step id="S2">GUI adds the ItemView to the StackView</step>
        <step id="S3">GUI requests definitions from Web services C++</step>
        <step id="S4">Web services C++ retrieves definitions</step>
        <step id="S5">GUI displays the retrieved definitions</step>
    </mainSequence>
</useCase>
