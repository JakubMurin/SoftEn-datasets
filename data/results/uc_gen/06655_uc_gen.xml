<useCase id="UC001">
    <name>Service Registration and Data Upload</name>
    <actors>
        <actor>SOR</actor>
        <actor>目录服务器</actor>
    </actors>
    <preconditions>
        <precondition>目录服务器 initialized</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">SOR registers service and reports network status</step>
        <step id="S2">目录服务器 identifies and stores device information</step>
        <step id="S3">目录服务器 returns forwarding tasks to SOR</step>
        <step id="S4">SOR executes forwarding tasks</step>
        <step id="S5">SOR waits for next task</step>
    </mainSequence>
</useCase>
