<useCase id="UC1">
    <name>Choose Book Genres</name>
    <actors>
        <actor>Member</actor>
        <actor>Selection</actor>
        <actor>UserProfile</actor>
        <actor>DB</actor>
    </actors>
    <mainSequence>
        <step id="S1">Member selects preferred genres</step>
        <step id="S2">Selection sends selected genres to UserProfile</step>
        <step id="S3">UserProfile queries DB to update member preferences</step>
        <step id="S4">DB confirms preferences updated</step>
        <step id="S5">UserProfile confirms update to Selection</step>
        <step id="S6">Selection shows update confirmation to Member</step>
    </mainSequence>
</useCase>
