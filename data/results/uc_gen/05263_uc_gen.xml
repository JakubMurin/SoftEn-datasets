<useCase id="AddBook">
    <name>Add Book</name>
    <actors>
        <actor>Librarian</actor>
        <actor>BookPage</actor>
        <actor>AddBookPage</actor>
        <actor>Controller</actor>
        <actor>OpenLibrary</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">Librarian navigates to BookPage</step>
        <step id="S2">Librarian clicks on Add Book</step>
        <step id="S3">BookPage displays Add Book Options Pop-up</step>
        <step id="S4">Librarian clicks on Add Book Option</step>
        <step id="S5">BookPage displays ISBN Input Popup</step>
        <step id="S6">Librarian enters ISBN</step>
        <step id="S7">Controller requests Book Information by ISBN</step>
        <step id="S8">Controller receives Book Information</step>
        <step id="S9">BookPage navigates to AddBookPage</step>
        <step id="S10">Librarian fills in Book Information Form</step>
        <step id="S11">Controller sends Book Information</step>
        <step id="S12">Database adds Book to Database</step>
        <step id="S13">Controller receives Addition Confirmation</step>
        <step id="S14">BookPage displays Addition Confirmation</step>
    </mainSequence>
</useCase>
