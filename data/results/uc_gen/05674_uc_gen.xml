<useCase id="UC1">
    <name>Review Order Allergy Warnings</name>
    <actors>
        <actor>Waiter</actor>
        <actor>Waiter Interface</actor>
        <actor>Order Management System</actor>
        <actor>Menu Database</actor>
        <actor>Allergy Information System</actor>
    </actors>
    <mainSequence>
        <step id="S1">Waiter selects order to review.</step>
        <step id="S2">Waiter requests order details.</step>
        <step id="S3">Order Management System fetches order items.</step>
        <step id="S4">Menu Database returns order items.</step>
        <step id="S5">Order Management System requests allergy warnings for items.</step>
        <step id="S6">Allergy Information System looks up allergy info.</step>
        <step id="S7">Menu Database returns allergy data.</step>
        <step id="S8">Allergy Information System compiles allergy warnings.</step>
        <step id="S9">Order Management System sends compiled warnings.</step>
        <step id="S10">Waiter Interface displays allergy warnings.</step>
    </mainSequence>
</useCase>
