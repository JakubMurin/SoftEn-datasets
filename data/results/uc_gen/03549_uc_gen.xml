<useCase id="UC1">
    <name>Access Website and View Image Descriptive Info</name>
    <actors>
        <actor>DonorRepresentative</actor>
    </actors>
    <preconditions>
        <precondition>DonorRepresentative is logged in</precondition>
    </preconditions>
    <trigger>DonorRepresentative accesses the website</trigger>
    <mainSequence>
        <step id="S1">DonorRepresentative accesses the website</step>
        <step id="S2">Request access to User Interface</step>
        <step id="S3">Authenticate access</step>
        <step id="S4">Request Image Descriptive Info from User Interface</step>
        <step id="S5">Query for Images from File Management</step>
        <step id="S6">Fetch Image Metadata from Database</step>
        <step id="S7">Return Metadata to File Management</step>
        <step id="S8">Display Descriptive Info to User Interface</step>
        <step id="S9">Show Descriptive Information about Images to DonorRepresentative</step>
    </mainSequence>
</useCase>
