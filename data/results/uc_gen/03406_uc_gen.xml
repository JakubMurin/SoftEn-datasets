<useCase id="UC1">
    <name>Display Items</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User displays items</step>
        <step id="S2">Main activates and calls ItemController</step>
        <step id="S3">ItemController activates and calls ItemModel</step>
        <step id="S4">ItemModel activates and loads items from file</step>
        <step id="S5">ItemModel deactivates after loading items</step>
        <step id="S6">ItemController receives List of items from ItemModel</step>
        <step id="S7">Main receives formatted items from ItemController</step>
        <step id="S8">Main displays items in TextArea</step>
    </mainSequence>
</useCase>
