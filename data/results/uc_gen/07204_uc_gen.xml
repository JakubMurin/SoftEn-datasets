<useCase id="UC1">
    <name>Accessing Ingest Process Documentation</name>
    <actors>
        <actor>Batch Submitter</actor>
        <actor>EDRMS Website</actor>
        <actor>Authentication Service</actor>
        <actor>Documentation Server</actor>
        <actor>Ingest Process Documentation</actor>
    </actors>
    <preconditions>
        <precondition>Batch Submitter navigates to EDRMS Documentation Section</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Batch Submitter navigates to EDRMS Documentation Section</step>
        <step id="S2">Batch Submitter requests authentication</step>
        <step id="S3">Authentication Service authenticates user</step>
        <step id="S4">Batch Submitter provides credentials</step>
        <step id="S5">User is authenticated</step>
        <step id="S6">EDRMS Website requests Ingest Process Docs</step>
        <step id="S7">Documentation Server retrieves documentation</step>
        <step id="S8">Documentation Server returns documentation</step>
        <step id="S9">EDRMS Website sends documentation link</step>
        <step id="S10">Batch Submitter displays documentation link</step>
        <step id="S11">Batch Submitter clicks documentation link</step>
        <step id="S12">EDRMS Website redirects to documentation</step>
        <step id="S13">Ingest Process Documentation displays Ingest Process Documentation</step>
    </mainSequence>
</useCase>
