<useCase id="UC001">
    <name>Manage Employee Check-In Records</name>
    <actors>
        <actor>Manager</actor>
    </actors>
    <preconditions>
        <precondition>Manager must be logged in to the system</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Log in to the Employee Management System</step>
        <step id="S2">Validate Manager credentials</step>
        <step id="S3">Display log in success message</step>
        <step id="S4">Request Employee Check-In Records</step>
        <step id="S5">Query Check-In Records from the Database</step>
        <step id="S6">Return Check-In Records</step>
        <step id="S7">Display Check-In Records to the Manager</step>
    </mainSequence>
</useCase>
