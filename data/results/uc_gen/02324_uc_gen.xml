<useCase id="UC1">
    <name>Manage Capabilities</name>
    <actors>
        <actor>DevOpsEngineer</actor>
        <actor>ApplicationDeveloper</actor>
    </actors>
    <preconditions>
        <precondition>DevOpsEngineer and ApplicationDeveloper have access to the system.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Capabilities are successfully managed.</condition>
    </successEndConditions>
    <trigger>DevOpsEngineer or ApplicationDeveloper initiates capability management.</trigger>
    <mainSequence>
        <step id="S1">DevOpsEngineer deploys a capability.</step>
        <step id="S2">Capability Manager executes capability deployment.</step>
        <step id="S3">REST API receives capability deployment request.</step>
        <step id="S4">DevOpsEngineer removes a capability.</step>
        <step id="S5">Capability Manager executes capability removal.</step>
        <step id="S6">REST API receives capability removal request.</step>
        <step id="S7">DevOpsEngineer updates a capability.</step>
        <step id="S8">Capability Manager executes capability update.</step>
        <step id="S9">REST API receives capability update request.</step>
        <step id="S10">ApplicationDeveloper develops a capability.</step>
        <step id="S11">Capability Manager displays the capabilities.</step>
        <step id="S12">REST API shows the capabilities.</step>
    </mainSequence>
</useCase>
