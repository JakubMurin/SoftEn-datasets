<useCase id="UC001">
    <name>User fills and submits the resource</name>
    <actors>
        <actor>User</actor>
        <actor>View</actor>
        <actor>Component</actor>
        <actor>Service</actor>
        <actor>HTTPDriver</actor>
    </actors>
    <mainSequence>
        <step id="S1">User fills and submits the resource</step>
        <step id="S2">View sends resource create data to Component</step>
        <step id="S3">Component requests the creation of resource from Service</step>
        <step id="S4">Service requests POST to HTTPDriver</step>
        <step id="S5">HTTPDriver POSTs resources</step>
        <step id="S6">HTTPDriver receives HTTP response</step>
        <step id="S7">HTTPDriver sends response to Service</step>
        <step id="S8">Service responds to Component</step>
        <step id="S9">Component informs View that the resource was created</step>
        <step id="S10">View displays success to User</step>
    </mainSequence>
</useCase>
