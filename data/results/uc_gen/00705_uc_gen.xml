<useCase id="UC1">
    <name>Publishing Dataset</name>
    <actors>
        <actor>Publisher</actor>
    </actors>
    <mainSequence>
        <step id="S1">Publisher completes sign-up</step>
        <step id="S2">Publisher is redirected to Profile Management</step>
        <step id="S3">Publisher edits Profile Information (manages organization, roles)</step>
        <step id="S4">Publisher reviews Post-sign-up Guide</step>
        <step id="S5">Guide generates Guide for Publishing Datasets</step>
        <step id="S6">Publisher reads through Guide</step>
        <step id="S7">Guide redirects to Dataset Publishing</step>
        <step id="S8">Publisher starts Dataset Publishing Process</step>
    </mainSequence>
</useCase>
