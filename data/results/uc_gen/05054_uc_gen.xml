<useCase id="UC1">
    <name>Player Interaction Flow</name>
    <actors>
        <actor>User</actor>
        <actor>App</actor>
        <actor>StartScreen</actor>
        <actor>StartButtonEventHandler</actor>
        <actor>PlayersInputScreen</actor>
        <actor>ConfirmButtonHandler</actor>
        <actor>Game</actor>
        <actor>PlayersNamesInputScreen</actor>
        <actor>QuestionScreen</actor>
        <actor>NamesInputButtonHandler</actor>
        <actor>Player</actor>
    </actors>
    <mainSequence>
        <step id="S1">User clicks 'Comenzar'</step>
        <step id="S2">App handles the event</step>
        <step id="S3">StartScreen handles the event</step>
        <step id="S4">StartButtonEventHandler handles the event and sets visibility</step>
        <step id="S5">PlayersInputScreen is displayed for input selection</step>
        <step id="S6">User selects and confirms inputs</step>
        <step id="S7">App handles input selection event</step>
        <step id="S8">PlayersInputScreen handles input selection event</step>
        <step id="S9">ConfirmButton handles input selection and requests data</step>
        <step id="S10">Game loads data</step>
        <step id="S11">PlayersNamesInputScreen created and displayed for player names</step>
        <step id="S12">User enters and confirms player names</step>
        <step id="S13">PlayersNamesInputScreen handles name input event</step>
        <step id="S14">NamesButton executes name entry event</step>
        <step id="S15">Game registers user names</step>
        <step id="S16">Player objects created for each user</step>
        <step id="S17">QuestionScreen created and displayed for questions and options</step>
        <step id="S18">App displays questions for each player</step>
    </mainSequence>
</useCase>
