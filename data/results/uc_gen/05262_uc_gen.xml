<useCase id="UC1">
    <name>Add Book</name>
    <actors>
        <actor>Librarian</actor>
    </actors>
    <mainSequence>
        <step id="S1">Librarian navigates to BookPage</step>
        <step id="S2">Librarian clicks on Add Book</step>
        <step id="S3">BookPage displays Add Book Options Pop-up</step>
        <step id="S4">Librarian clicks on Add Book Option</step>
        <step id="S5">BookPage displays ISBN Input Popup</step>
        <step id="S6">Librarian enters ISBN</step>
        <step id="S7">BookPage requests Book Information by ISBN</step>
        <step id="S8">Controller retrieves Book Information by ISBN from OpenLibrary</step>
        <step id="S9">Controller adds Book to Database</step>
        <step id="S10">Controller responds with Addition Confirmation</step>
        <step id="S11">BookPage displays Addition Confirmation</step>
    </mainSequence>
</useCase>
