<useCase id="UC1">
    <name>积分流转</name>
    <actors>
        <actor>用户</actor>
    </actors>
    <mainSequence>
        <step id="S1">用户调用积分合约部署</step>
        <step id="S2">应用层部署PointController</step>
        <step id="S3">应用层获取平台管理员用户信息</step>
        <step id="S4">应用层调用PointController.addDAO</step>
        <step id="S5">测试接口积分初始化</step>
        <step id="S6">应用层读取配置中的预测值</step>
        <step id="S7">应用层调用PointController.initPoint</step>
        <step id="S8">定时器调用年度积分结余</step>
        <step id="S9">应用层调用PointController.daoTransfer</step>
        <step id="S10">用户注册账户</step>
        <step id="S11">应用层调用PointController.register</step>
        <step id="S12">用户添加电池</step>
        <step id="S13">用户登记车辆电池信息</step>
        <step id="S14">用户由线下网点进行消息推送</step>
        <step id="S15">用户电池拆解检测信息推送</step>
        <step id="S16">用户卖方积分交易申请</step>
        <step id="S17">用户买方积分交易达成</step>
    </mainSequence>
</useCase>
