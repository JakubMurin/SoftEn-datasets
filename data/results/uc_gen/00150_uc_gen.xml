<useCase id="UC1">
    <name>Retrieve and Download Embargo Metadata</name>
    <actors>
        <actor>Digital Records Archivist</actor>
        <actor>Web Interface</actor>
        <actor>EDRMS Backend</actor>
        <actor>Repository Database</actor>
        <actor>File Server</actor>
    </actors>
    <preconditions>
        <precondition>Archivist needs embargo metadata for ETDs</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Archivist requests embargo metadata for ETDs</step>
        <step id="S2">UI fetches embargo metadata</step>
        <step id="S3">Backend queries embargo metadata</step>
        <step id="S4">DB returns metadata</step>
        <step id="S5">Backend displays metadata</step>
        <step id="S6">UI shows embargo metadata</step>
        <step id="S7">Archivist requests download of metadata</step>
        <step id="S8">UI fetches detailed metadata</step>
        <step id="S9">Backend queries detailed embargo data</step>
        <step id="S10">DB returns detailed data</step>
        <step id="S11">Backend prepares download file</step>
        <step id="S12">Server provides download link</step>
        <step id="S13">Backend provides download link</step>
        <step id="S14">UI provides download link</step>
        <step id="S15">Archivist downloads file by link</step>
        <step id="S16">Server sends metadata file</step>
    </mainSequence>
</useCase>
