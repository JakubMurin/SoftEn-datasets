<useCase id="1">
    <name>User Authentication</name>
    <actors>
        <actor>User</actor>
        <actor>FrontEnd</actor>
        <actor>BackendServer</actor>
        <actor>Firebase</actor>
    </actors>
    <mainSequence>
        <step id="S1">User Logs in / Signs up through FrontEnd</step>
        <step id="S2">FrontEnd Sends credentials to BackendServer</step>
        <step id="S3">BackendServer Authenticates / Creates user in Firebase</step>
    </mainSequence>
</useCase>
