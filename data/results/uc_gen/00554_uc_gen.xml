        <step id="S4">Trigger `interaction` event in app</step>
        <step id="S5">Display Rocket Countdown Message 3</step>
        <step id="S6">Display Rocket Countdown Message 2</step>
        <step id="S7">Display Rocket Countdown Message 1</step>
    </mainSequence>
</useCase>
