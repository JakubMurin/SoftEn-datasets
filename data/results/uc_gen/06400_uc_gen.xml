<useCase id="UC1">
    <name>Search Files by Keyword</name>
    <actors>
        <actor>Archivist</actor>
        <actor>UI Interface</actor>
        <actor>Search Controller</actor>
        <actor>Digital Archive Database</actor>
        <actor>Indexing Service</actor>
        <actor>Results Formatter</actor>
    </actors>
    <preconditions>
        <precondition>Archivist inputs keyword</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">UI Interface sends search request with keyword</step>
        <step id="S2">Search Controller queries keyword</step>
        <step id="S3">Indexing Service fetches matching files from Digital Archive Database</step>
        <step id="S4">Indexing Service formats matching files</step>
        <step id="S5">Results Formatter sends formatted results to Search Controller</step>
        <step id="S6">Search Controller displays search results on UI Interface</step>
        <step id="S7">UI Interface shows files matching keyword to Archivist</step>
    </mainSequence>
</useCase>
