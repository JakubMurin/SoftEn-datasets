<useCase id="UC1">
  <name>Development Flow</name>
  <actors>
    <actor>Developer</actor>
    <actor>Reviewer</actor>
    <actor>User</actor>
  </actors>
  <mainSequence>
    <step id="S1">Developer edits code</step>
    <step id="S2">Developer pushes changes to /dev branch</step>
    <step id="S3">Developer creates PR from /dev to /calibration</step>
    <step id="S4">Reviewer reviews and approves PR</step>
    <step id="S5">Developer merges PR</step>
    <step id="S6">Deployment to calibration server</step>
    <step id="S7">Developer creates PR from /dev to /main</step>
    <step id="S8">Reviewer approves PR</step>
    <step id="S9">Developer merges PR to /main</step>
    <step id="S10">Deployment to mainnet server</step>
    <step id="S11">User can use new feature on mainnet</step>
  </mainSequence>
</useCase>
