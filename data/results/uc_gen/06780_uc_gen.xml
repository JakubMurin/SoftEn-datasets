<useCase id="UC1">
    <name>User Registration</name>
    <description>Allow a user to register on the platform.</description>
    <actors>
        <actor>User</actor>
        <actor>FrontEnd</actor>
        <actor>MD</actor>
    </actors>
    <preconditions>
        <precondition>User is on the registration page.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully registers.</condition>
    </successEndConditions>
    <trigger>User requests to register.</trigger>
    <mainSequence>
        <step id="S1">User requests to register.</step>
        <step id="S2">FrontEnd shows registration form to User.</step>
        <step id="S3">User fills in registration form.</step>
        <step id="S4">FrontEnd shows consent form to User.</step>
        <step id="S5">User accepts consent.</step>
        <step id="S6">FrontEnd validates form.</step>
        <step id="S7">FrontEnd posts registration data to MD.</step>
        <step id="S8">MD resolves registration successfully.</step>
        <step id="S9">FrontEnd shows success message to User.</step>
    </mainSequence>
</useCase>
