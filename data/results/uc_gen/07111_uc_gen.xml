<useCase id="UC1">
    <name>Feature Prioritization</name>
    <actors>
        <actor>Team Member</actor>
        <actor>Designer</actor>
        <actor>Engineer</actor>
    </actors>
    <preconditions>
        <precondition>Access to Feature Backlog</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Feasibility and Design Confirmation received</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Feasibility or Design Issues encountered</condition>
    </failureEndConditions>
    <trigger>Team Member initiates Feature Prioritization</trigger>
    <mainSequence>
        <step id="S1">Team Member accesses Feature Backlog from CMS</step>
        <step id="S2">Team Member reviews the list of Proposed Features</step>
        <step id="S3">Team Member consults Prioritization Criteria</step>
        <step id="S4">Team Member applies Criteria to Features</step>
        <step id="S5">Team Member shares Filtered Features with Designer</step>
        <step id="S6">Designer provides Design Feasibility</step>
        <step id="S7">Team Member consults Engineer on Technical Feasibility</step>
        <step id="S8">Engineer provides Technical Assessment</step>
        <step id="S9">Team Member updates Prioritized Features List in CMS</step>
        <step id="S10">Team Member shares Prioritized Features List with Engineer</step>
        <step id="S11">Team Member shares Prioritized Features List with Designer</step>
        <step id="S12">Designer inputs Design Requirements in CMS</step>
        <step id="S13">Engineer updates Technical Details in CMS</step>
        <step id="S14">Team Member finalizes Feature Prioritization</step>
    </mainSequence>
    <alternativeSteps>
        <asteps id="A1" start="S14">
            <step id="A1S1">Re-evaluate and Update Priorities</step>
        </asteps>
    </alternativeSteps>
</useCase>
