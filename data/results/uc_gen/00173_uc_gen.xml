<useCase id="UC1">
    <name>Trainee Login</name>
    <actors>
        <actor>Trainee</actor>
        <actor>Authentication Service</actor>
        <actor>User Database</actor>
    </actors>
    <preconditions>
        <precondition>Trainee must have valid credentials</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Trainee successfully authenticated</condition>
    </successEndConditions>
    <trigger>User requests to login</trigger>
    <mainSequence>
        <step id="S1">Trainee requests to login</step>
        <step id="S2">Authentication Service validates user credentials</step>
        <step id="S3">User Database returns user validation</step>
        <step id="S4">Authentication Service confirms authentication success</step>
    </mainSequence>
</useCase>
