<useCase id="UC1">
    <name>View Dashboard</name>
    <actors>
        <actor>Receptionist</actor>
    </actors>
    <mainSequence>
        <step id="S1">Receptionist requests to view dashboard</step>
        <step id="S2">UI receives request to view dashboard</step>
        <step id="S3">Router handles GET /dashboard request</step>
        <step id="S4">Controller processes getDashboardData()</step>
        <step id="S5">Repository retrieves dashboard data</step>
        <step id="S6">DashboardModel fetches dashboard data from Database</step>
        <step id="S7">Dashboard data is queried from the Database</step>
        <step id="S8">Dashboard data is delivered to the Repository</step>
        <step id="S9">Dashboard data is sent to the Controller</step>
        <step id="S10">Controller responds with 200 OK (dashboard data)</step>
        <step id="S11">Router forwards 200 OK response to UI</step>
        <step id="S12">UI displays dashboard data</step>
    </mainSequence>
</useCase>
