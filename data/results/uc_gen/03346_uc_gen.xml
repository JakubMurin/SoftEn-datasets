<useCase id="UC1">
    <name>User submits a question</name>
    <actors>
        <actor>User</actor>
        <actor>View</actor>
        <actor>Route</actor>
        <actor>Views.py</actor>
        <actor>Validate</actor>
        <actor>Questions</actor>
        <actor>Model</actor>
        <actor>AdaptiveTesting</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">User clicks "Submit" on a question</step>
        <step id="S2">View executes "Submit Question"</step>
        <step id="S3">Route triggers quiz()</step>
        <step id="S4">Views validate on submit</step>
        <step id="S5">Question submission response obtained from Model</step>
        <step id="S6">Get student category</step> 
        <step id="S7">Save proficiency and student to database</step>
        <step id="S8">Item responses of the proficiency collected</step>
        <step id="S9">Update student proficiency</step>
        <step id="S10">Save updated student proficiency to database</step>
        <step id="S11">Correct responses checked and saved in the database</step>
        <step id="S12">Result displayed in the view</step>
        <step id="S13">Result page loaded with result.html</step>
    </mainSequence>
</useCase>
