<useCase id="UC001">
    <name>Change Password</name>
    <description>Allow a Customer to change their password</description>
    <actors>
        <actor>Customer</actor>
        <actor>ChangePasswordView</actor>
        <actor>System</actor>
        <actor>AccountClass</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">Customer enters password change information</step>
        <step id="S2">ChangePasswordView receives and validates information</step>
        <step id="S3">System processes change request</step>
        <step id="S4">AccountClass updates password</step>
        <step id="S5">Database stores updated information</step>
        <step id="S6">System notifies successful password change</step>
    </mainSequence>
</useCase>
