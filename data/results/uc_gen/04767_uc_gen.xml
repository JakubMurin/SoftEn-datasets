<useCase id="1">
    <name>Connect to LN Node By LN Link Protocol</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User requests Link Url</step>
        <step id="S2">Link returns Link Url</step>
        <step id="S3">User configures Link Url</step>
        <step id="S4">Client requests LN Node info</step>
        <step id="S5">Relay returns LN Node info to Client</step>
    </mainSequence>
</useCase>
