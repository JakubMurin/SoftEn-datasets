<useCase id="UC1">
    <name>Actor Pickup Item</name>
    <actors>
        <actor>Controller</actor>
        <actor>Actor</actor>
        <actor>ActionState</actor>
        <actor>Item</actor>
        <actor>Room</actor>
        <actor>Inventory</actor>
    </actors>
    <mainSequence>
        <step id="S1">Controller picks up the item.</step>
        <step id="S2">Actor picks up the item.</step>
        <step id="S3">Actor gets the location.</step>
        <step id="S4">Actor removes the item from the room.</step>
        <step id="S5">Actor checks if the item is sticky.</step>
        <step id="S6">Item is not sticky.</step>
        <step id="S7">Actor gets the inventory.</step>
        <step id="S8">Actor adds the item to the inventory.</step>
        <step id="S9">Actor checks if the inventory is full.</step>
        <step id="S10">Inventory is full.</step>
        <step id="S11">Actor adds the item back to the room.</step>
        <step id="S12">Actor failed to pick up the item.</step>
        <step id="S13">Actor successfully picked up the item.</step>
        <step id="S14">Actor triggers the onPickup action of the item.</step>
    </mainSequence>
</useCase>
