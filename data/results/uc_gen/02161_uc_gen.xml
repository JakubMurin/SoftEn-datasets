<useCase id="UC001">
    <name>Delete Book Process</name>
    <actors>
        <actor>Staff</actor>
    </actors>
    <mainSequence>
        <step id="S1">Staff selects "Remove Book"</step>
        <step id="S2">UI requests deletion of book by ID</step>
        <step id="S3">Controller calls deleteBook(bookId) in BookService</step>
        <step id="S4">BookService queries BookDB to delete book by ID</step>
        <step id="S5">BookDB confirms deletion</step>
        <step id="S6">BookService reports successful deletion</step>
        <step id="S7">Controller displays success message</step>
        <step id="S8">UI shows "Book Deleted Successfully"</step>
    </mainSequence>
</useCase>
