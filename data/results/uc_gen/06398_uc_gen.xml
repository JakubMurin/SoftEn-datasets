<useCase id="UC1">
    <name>Play Rock, Paper, Scissors</name>
    <actors>
        <actor>User</actor>
        <actor>HomeRock</actor>
        <actor>GameMode</actor>
    </actors>
    <mainSequence>
        <step id="S1">User Renders HomeRock component</step>
        <step id="S2">HomeRock Displays title "Piedra, Papel, Tijera"</step>
        <step id="S3">User Clicks "Un Jugador" button</step>
        <step id="S4">HomeRock sets GameMode to 'single'</step>
        <step id="S5">User Clicks "Dos Jugadores" button</step>
        <step id="S6">HomeRock sets GameMode to 'multi'</step>
        <step id="S7">User Clicks "Back to Home" button</step>
        <step id="S8">HomeRock triggers onBackToHome event</step>
    </mainSequence>
</useCase>
