<useCase id="UC001">
  <name>Session Submission Use Case</name>
  <actors>
    <actor>AuthenticatedUser</actor>
  </actors>
  <mainSequence>
    <step id="S1">Navigate to 'Submit Session'</step>
    <step id="S2">Display 'Session Submission Form'</step>
    <step id="S3">Fill in and Submit Form</step>
    <step id="S4">Save Session Details in Database</step>
    <step id="S5">Trigger Session Review Process</step>
    <step id="S6">Update Session Status to 'Under Review'</step>
    <step id="S7">Trigger Notification to User: 'Session Submitted'</step>
    <step id="S8">Refresh/Check Email</step>
    <step id="S9">Update Session Status to Approved/Rejected</step>
    <step id="S10">Trigger Notification to User: 'Session Evaluated'</step>
    <step id="S11">Receive Email Notification: 'Session Approved' or 'Session Rejected'</step>
  </mainSequence>
</useCase>
