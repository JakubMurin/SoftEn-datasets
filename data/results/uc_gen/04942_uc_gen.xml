<useCase id="UC1">
    <name>View and Edit Settings</name>
    <actors>
        <actor>Admin</actor>
        <actor>list_settings_view</actor>
        <actor>SettingsController</actor>
        <actor>SettingsModel</actor>
    </actors>
    <mainSequence>
        <step id="S1">Admin requests to view the settings list.</step>
        <step id="S2">list_settings_view sends request.</step>
        <step id="S3">SettingsController checks data.</step>
        <step id="S4">SettingsController retrieves settings list from SettingsModel.</step>
        <step id="S5">SettingsModel returns settings list.</step>
        <step id="S6">SettingsController returns settings list to list_settings_view.</step>
        <step id="S7">list_settings_view displays settings list.</step>
        <step id="S8">Admin edits settings and saves.</step>
        <step id="S9">list_settings_view sends new settings data.</step>
        <step id="S10">SettingsController checks data.</step>
        <step id="S11">SettingsController saves settings in SettingsModel.</step>
        <step id="S12">SettingsModel returns save result to SettingsController.</step>
        <step id="S13">SettingsController returns updated settings list to list_settings_view.</step>
        <step id="S14">list_settings_view displays updated settings list.</step>
    </mainSequence>
</useCase>
