<useCase id="UC1">
    <name>Perform Book Reservation</name>
    <actors>
        <actor>Student</actor>
        <actor>Monitor</actor>
        <actor>Authentication</actor>
        <actor>Reservation</actor>
        <actor>BookManagement</actor>
        <actor>Book</actor>
    </actors>
    <trigger>Student clicks reserve book</trigger>
    <mainSequence>
        <step id="S1">Student opens Login page</step>
        <step id="S2">Monitor displays Login page</step>
        <step id="S3">Student submits book details</step>
        <step id="S4">Monitor searches for the book</step>
        <step id="S5">BookManagement retrieves book data</step>
        <step id="S6">BookManagement lists available books</step>
        <step id="S7">Student clicks on a book to reserve</step>
        <step id="S8">Monitor initiates book reservation process</step>
        <step id="S9">Reservation confirms book reservation</step>
        <step id="S10">Monitor displays reservation confirmation to Student</step>
    </mainSequence>
</useCase>
