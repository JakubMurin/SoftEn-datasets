<useCase id="UC1">
    <name>Login to Library System</name>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>User has access to Library System</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully logs in</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>User fails to log in</condition>
    </failureEndConditions>
    <trigger>User clicks on "Login" button</trigger>
    <mainSequence>
        <step id="S1">User clicks on "Login"</step>
        <step id="S2">User enters username and password</step>
        <step id="S3">Library System verifies login details</step>
        <step id="S4">Library System displays welcome message</step>
    </mainSequence>
</useCase>
