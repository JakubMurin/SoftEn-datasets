<useCase id="1">
    <name>Realizar Construcción</name>
    <actors>
        <actor>sistemaOUsuario (sis)</actor>
        <actor>:FaseConstruccion (builder)</actor>
        <actor>:Construcciones (estructuras)</actor>
        <actor>:Construible (Construible)</actor>
        <actor>:interfazUsuario (ui)</actor>
        <actor>:Opcion (Opcion)</actor>
    </actors>
    <mainSequence>
        <step id="S1">sistemaOUsuario (sis) inicia la fase de construcción</step>
        <step id="S2">:FaseConstruccion (builder) comienza su turno</step>
        <step id="S3">:Construcciones (estructuras) muestra posibles construibles</step>
        <step id="S4">Se selecciona un posible construible</step>
        <step id="S5">:Construible (Construible) crea el construible</step>
        <step id="S6">:Opcion (Opcion) se muestra como opción</step>
        <step id="S7">:FaseConstruccion (builder) elige el construible</step>
        <step id="S8">:interfazUsuario (ui) muestra la opción y da la posibilidad de pasar el turno</step>
        <step id="S9">:FaseConstruccion (builder) finaliza su turno</step>
        <step id="S10">sistemaOUsuario (sis) completa la fase de construcción</step>
    </mainSequence>
</useCase>
