<useCase id="UC101">
    <name>Publish Dataset Package</name>
    <description>This use case involves a Publisher logging in, creating a data package, and publishing it to a team.</description>
    <actors>
        <actor>Publisher</actor>
        <actor>User Account Management</actor>
        <actor>Dataset Publishing</actor>
        <actor>Access Control</actor>
    </actors>
    <trigger>The Publisher initiates data package creation process.</trigger>
    <mainSequence>
        <step id="S1">The Publisher logs in via GitHub or Google.</step>
        <step id="S2">Authentication is successful.</step>
        <step id="S3">The Publisher initiates data package creation.</step>
        <step id="S4">Prepares package metadata.</step>
        <step id="S5">Sets package visibility to private.</step>
        <step id="S6">Package visibility is successfully set.</step>
        <step id="S7">Imports the dataset.</step>
        <step id="S8">Validates the dataset.</step>
        <step id="S9">Saves the dataset package.</step>
        <step id="S10">Publishes the package to the team.</step>
        <step id="S11">Verifies team access rights.</step>
        <step id="S12">Team access rights are verified.</step>
        <step id="S13">Notifies team members.</step>
        <step id="S14">Package is published successfully.</step>
    </mainSequence>
</useCase>
