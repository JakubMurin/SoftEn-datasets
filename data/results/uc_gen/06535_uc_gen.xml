<useCase id="UC1">
    <name>Client Deposits ETH and OAX</name>
    
    <actors>
        <actor>WebClient</actor>
        <actor>L2Client</actor>
        <actor>Mediator</actor>
        <actor>Events</actor>
        <actor>Operator</actor>
    </actors>
    
    <mainSequence>
        <step id="S1">WebClient requests to deposit 5 ETH</step>
        <step id="S2">L2Client deposits 5 ETH via Mediator</step>
        <step id="S3">Operator receives deposit event for 5 ETH and updates balances</step>
        
        <step id="S4">WebClient requests to deposit 1000 OAX</step>
        <step id="S5">L2Client deposits 1000 OAX via Mediator</step>
        <step id="S6">Operator receives deposit event for 1000 OAX and updates balances</step>
    </mainSequence>
</useCase>
