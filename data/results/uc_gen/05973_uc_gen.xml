<useCase id="UC1">
    <name>Process IOU Transaction</name>
    <actors>
        <actor>Borrower</actor>
        <actor>Lender</actor>
        <actor>Approver</actor>
    </actors>
    <mainSequence>
        <step id="S1">Borrower creates IOU State.</step>
        <step id="S2">Borrower prepares Transaction.</step>
        <step id="S3">Borrower runs CollectEndorsementsView.</step>
        <step id="S4">Lender checks Transaction.</step>
        <step id="S5">Lender runs EndorseView.</step>
        <step id="S6">Borrower runs OrderingView.</step>
        <step id="S7">Lender runs EndorseView again.</step>
    </mainSequence>
</useCase>
