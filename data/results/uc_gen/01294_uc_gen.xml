<useCase id="UC1">
    <name>PacMan Game</name>
    <actors>
        <actor>User</actor>
        <actor>PacManController</actor>
        <actor>PacManUser</actor>
        <actor>PacManPersistence</actor>
        <actor>FileReader</actor>
        <actor>FileWriter</actor>
    </actors>
    <mainSequence>
        <step id="S1">User writes username in TextField</step>
        <step id="S2">PacManController updates GUI</step>
        <step id="S3">PacManController gets username from TextField</step>
        <step id="S4">PacManController sets username</step>
        <step id="S5">PacManController validates username</step>
        <step id="S6">PacManUser confirms validation</step>
        <step id="S7">PacManController enables start button</step>
        <step id="S8">User clicks start button</step>
        <step id="S9">PacManController handles start button click</step>
        <step id="S10">PacManController sets username for game start</step>
        <step id="S11">PacManController sets score for game start</step>
        <step id="S12">PacManController saves highscore</step>
        <step id="S13">PacManPersistence reads file</step>
        <step id="S14">PacManPersistence gets scores</step>
        <step id="S15">PacManPersistence creates PacManUser</step>
        <step id="S16">PacManUser saves to persistence</step>
    </mainSequence>
</useCase>
