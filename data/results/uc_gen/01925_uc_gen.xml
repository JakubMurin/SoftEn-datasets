<useCase id="UC1">
    <name>View Dashboard</name>
    <actors>
        <actor>Receptionist</actor>
    </actors>
    <mainSequence>
        <step id="S1">Receptionist requests to view dashboard</step>
        <step id="S2">UI receives request</step>
        <step id="S3">Router processes GET /dashboard</step>
        <step id="S4">Controller initiates getDashboardData()</step>
        <step id="S5">Repository retrieves dashboard data</step>
        <step id="S6">DashboardModel fetches dashboard data from DB</step>
        <step id="S7">DB queries dashboard data</step>
        <step id="S8">DashboardModel receives dashboard data</step>
        <step id="S9">Repository receives dashboard data</step>
        <step id="S10">Controller responds with 200 OK</step>
        <step id="S11">Router sends 200 OK to UI</step>
        <step id="S12">UI displays dashboard data</step>
    </mainSequence>
</useCase>
