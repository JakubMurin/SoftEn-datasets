        <step id="S5">Database executes insert query</step>
        <step id="S6">MaterialRepository confirms insert</step>
        <step id="S7">MaterialService confirms insert</step>
        <step id="S8">ManagerMaterialController confirms insert</step>
        <step id="S9">ManagerPage displays add confirmation</step>
    </mainSequence>
</useCase>
