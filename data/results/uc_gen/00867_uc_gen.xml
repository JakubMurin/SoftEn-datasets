<useCase id="UC1">
    <name>User Login</name>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>User has access to the LibrarySystem</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully logs in</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>User fails to log in</condition>
    </failureEndConditions>
    <trigger>User clicks on "Login" button</trigger>
    <mainSequence>
        <step id="S1">User clicks on "Login"</step>
        <step id="S2">LibrarySystem enters username and password</step>
        <step id="S3">LibrarySystem checks if login details are correct</step>
        <step id="S4">User is logged in</step>
        <step id="S5">LibrarySystem shows welcome message</step>
    </mainSequence>
</useCase>
