<useCase id="UC001">
    <name>User Profile Management</name>
    <description>Manage user profile information and organization roles</description>
    <actors>
        <actor>Publisher</actor>
    </actors>
    <preconditions>
        <precondition>User successfully signs up</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully completes profile management</condition>
    </successEndConditions>
    <trigger>Publisher completes sign-up</trigger>
    <mainSequence>
        <step id="S1">Complete sign-up</step>
        <step id="S2">Redirect to Profile Management</step>
        <step id="S3">Edit profile information (manage organization, roles)</step>
        <step id="S4">Review Post-sign-up Guide</step>
        <step id="S5">Generate Guide for Publishing Datasets</step>
        <step id="S6">Read through Guide</step>
        <step id="S7">Redirect to Dataset Publishing</step>
        <step id="S8">Start Dataset Publishing Process</step>
    </mainSequence>
</useCase>
