<useCase id="UC1">
    <name>Select date and time</name>
    <actors>
        <actor>User</actor>
        <actor>Tandem Session System</actor>
        <actor>Partner</actor>
    </actors>
    <preconditions>
        <precondition>User is logged in</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Session booked</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Session not available</condition>
    </failureEndConditions>
    <mainSequence>
        <step id="S1">User selects date and time</step>
        <step id="S2">TSS checks partner availabilities</step>
        <step id="S3">TSS sends session invitation to Partner</step>
        <step id="S4">Partner accepts invitation</step>
        <step id="S5">TSS informs User that session is booked</step>
    </mainSequence>
</useCase>
