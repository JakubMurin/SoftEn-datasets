<useCase id="UC1">
    <name>Supply Accruals</name>
    <actors>
        <actor>DonorRepresentative</actor>
    </actors>
    <mainSequence>
        <step id="S1">Log in via secure authentication</step>
        <step id="S2">Select "Supply Accruals" option</step>
        <step id="S3">Display form to select collection or create new one</step>
        <step id="S4">Fill form with accrual details and select existing collection</step>
        <step id="S5">Check for existing collection details</step>
        <step id="S6">Confirm collection to supply accruals</step>
        <step id="S7">Upload files and metadata</step>
        <step id="S8">Create/update record for incremental accrual</step>
        <step id="S9">Generate unique identifiers for new files</step>
        <step id="S10">Accrual recorded in database</step>
        <step id="S11">Display success message "Accrual added successfully"</step>
        <step id="S12">Log out</step>
    </mainSequence>
</useCase>
