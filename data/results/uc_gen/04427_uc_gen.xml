<useCase id="UC1">
    <name>Workout Bearbeitung</name>
    <actors>
        <actor>User</actor>
        <actor>WorkoutEditScreen</actor>
        <actor>WorkoutService</actor>
        <actor>Workout</actor>
        <actor>DatabaseService</actor>
    </actors>
    <preconditions>
        <precondition>User hat Zugriff auf die Workout-Bearbeitungsseite</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Änderungen an Workout erfolgreich gespeichert</condition>
    </successEndConditions>
    <trigger>User öffnet die Workout-Bearbeitungsseite</trigger>
    <mainSequence>
        <step id="S1">User öffnet Workout-Bearbeitungsseite</step>
        <step id="S2">WorkoutEditScreen lädt Workout-Details</step>
        <step id="S3">WorkoutService ruft Workout-Daten ab</step>
        <step id="S4">WorkoutService zeigt Workout-Daten an</step>
        <step id="S5">User bearbeitet Workout-Daten</step>
        <step id="S6">WorkoutEditScreen speichert Änderungen</step>
        <step id="S7">WorkoutService aktualisiert Workout-Daten</step>
        <step id="S8">DatabaseService speichert aktualisierte Workout-Daten</step>
        <step id="S9">WorkoutService zeigt Erfolgsmeldung an</step>
        <step id="S10">WorkoutEditScreen zeigt Bestätigung an</step>
    </mainSequence>
</useCase>
