<useCase id="UC1">
    <name>Change Permissions on Items</name>
    <actors>
        <actor>Curator</actor>
        <actor>User Interface</actor>
        <actor>Authorization Service</actor>
        <actor>Item Management</actor>
        <actor>Database</actor>
    </actors>

    <mainSequence>
        <step id="S1">Curator selects items for permission change</step>
        <step id="S2">Validate curator's credentials</step>
        <step id="S3">Request current permissions of selected items</step>
        <step id="S4">Query current permissions from the database</step>
        <step id="S5">Display current permissions</step>
        <step id="S6">Input new permissions for items</step>
        <step id="S7">Send new permissions request</step>
        <step id="S8">Check if curator has rights to change permissions</step>
        <step id="S9">Update permissions in the database</step>
        <step id="S10">Display success message</step>
    </mainSequence>
</useCase>
