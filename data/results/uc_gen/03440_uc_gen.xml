<useCase id="UC1">
    <name>Create Course</name>
    <description>User wants to create a new course</description>
    <actors>
        <actor>Actor</actor>
    </actors>
    <trigger>Create course</trigger>
    <mainSequence>
        <step id="S1">Ask course information from User</step>
        <step id="S2">Create Course (id, name, description, edition)</step>
        <step id="S3">Use CourseBuilder to create course entity</step>
        <step id="S4">Set the rest of the information in Controller</step>
        <step id="S5">Create Course entity in Domain</step>
        <step id="S6">Use repositories() from Persistence</step>
        <step id="S7">Create Factory in Persistence</step>
        <step id="S8">Create Course using Factory</step>
        <step id="S9">Save Course in Repository</step>
    </mainSequence>
</useCase>
