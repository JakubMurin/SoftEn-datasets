<useCase id="UC001">
    <name>Configure a house</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User configures a house.</step>
        <step id="S2">MainUI configures a house.</step>
        <step id="S3">HouseConfigurationUI requests data (latitude, longitude, zipcode, address).</step>
        <step id="S4">User inserts data (latitude, longitude, zipcode, address) into HouseConfigurationUI.</step>
        <step id="S5">HouseConfigurationUI sets house.</step>
        <step id="S6">HouseConfigurationController reconfigures house.</step>
        <step id="S7">House validates data.</step>
        <step id="S8">House displays the house.</step>
    </mainSequence>
</useCase>
