<useCase id="UC1">
    <name>Research Participant Recruitment</name>
    <actors>
        <actor>User Researcher</actor>
        <actor>Educators and Science Influencers</actor>
    </actors>
    <mainSequence>
        <step id="S1">Identify criteria for participants</step>
        <step id="S2">Query potential participants from Research Recruitment Tool</step>
        <step id="S3">Return list of potential participants from Database</step>
        <step id="S4">Review list of participants</step>
        <step id="S5">Select potential interviewees</step>
        <step id="S6">Send invitation for interview to Educators and Science Influencers</step>
        <step id="S7">Respond to invitation</step>
        <step id="S8">Report responses (accept/decline) to User Researcher</step>
        <step id="S9">Schedule interviews with acceptees</step>
        <step id="S10">Confirm interview schedule</step>
        <step id="S11">Confirm attendance</step>
        <step id="S12">Finalize list of interview participants</step>
    </mainSequence>
</useCase>
