<useCase id="1">
    <name>Link Email</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User selects "Link Email"</step>
        <step id="S2">UI requests email linking</step>
        <step id="S3">User profile service checks if email exists</step>
        <step id="S4">Email not found</step>
        <step id="S5">User profile service links email to user</step>
        <step id="S6">Email linked</step>
        <step id="S7">Email service sends confirmation email</step>
        <step id="S8">Confirmation sent</step>
        <step id="S9">Show success message to user</step>
    </mainSequence>
</useCase>
