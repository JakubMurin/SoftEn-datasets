<useCase id="UC1">
    <name>Dataset Migration Process</name>
    <actors>
        <actor>User</actor>
        <actor>DMS</actor>
        <actor>VC</actor>
        <actor>DI</actor>
        <actor>MT</actor>
    </actors>
    <trigger>User requests property update for dataset</trigger>
    <mainSequence>
        <step id="S1">User requests property update for dataset</step>
        <step id="S2">DMS validates property update requirements</step>
        <step id="S3">DI checks current version</step>
        <step id="S4">VC provides current version details</step>
        <step id="S5">DI confirms migration required</step>
        <step id="S6">User confirms migration</step>
        <step id="S7">DMS initiates migration</step>
        <step id="S8">MT performs migration (update properties, version)</step>
        <step id="S9">DI confirms migration success</step>
        <step id="S10">MT confirms migration completion</step>
        <step id="S11">DMS updates user on successful migration and properties updated</step>
    </mainSequence>
</useCase>
