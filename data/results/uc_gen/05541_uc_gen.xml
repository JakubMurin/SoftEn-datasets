<useCase id="UC1">
    <name>User makes reservation for a show</name>
    <actors>
        <actor>User</actor>
        <actor>Theater</actor>
        <actor>Server</actor>
    </actors>
    <preconditions>
        <precondition>User is logged in</precondition>
        <precondition>Theater has available seats</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">User inserts card</step>
        <step id="S2">User selects date</step>
        <step id="S3">Theater offers available seat to User</step>
        <step id="S4">User submits order to Theater</step>
        <step id="S5">Theater submits order to Server</step>
        <step id="S6">Server confirms the order</step>
        <step id="S7">Theater confirms the order to User</step>
    </mainSequence>
</useCase>
