<useCase id="123456">
    <name>Cancel Account</name>
    <actors>
        <actor>User</actor>
    </actors>
    <trigger>User wants to cancel their account</trigger>
    <mainSequence>
        <step id="S1">User opens the application</step>
        <step id="S2">Homepage screen displays "Account Settings"</step>
        <step id="S3">User navigates to Account Settings</step>
        <step id="S4">Delete Account Dialog is displayed</step>
        <step id="S5">User gets prompted for confirmation</step>
        <step id="S6">User confirms account cancellation</step>
        <step id="S7">Account cancellation initiated</step>
        <step id="S8">API Call for Account Cancellation sent</step>
        <step id="S9">Forward cancellation request to Users Service</step>
        <step id="S10">Account marked for deletion in the Database</step>
        <step id="S11">Account marked for deletion confirmed</step>
        <step id="S12">Account cancellation confirmed</step>
        <step id="S13">Cancellation confirmation sent to User</step>
        <step id="S14">Cancellation confirmation displayed to User</step>
        <step id="S15">Home screen navigated back to</step>
        <step id="S16">Account cancellation confirmation message displayed</step>
        <step id="S17">User logs out and session data cleared</step>
    </mainSequence>
</useCase>
