<useCase id="UC1">
    <name>Create and Delete ServerHandler</name>
    <actors>
        <actor>User</actor>
        <actor>ServerHandler</actor>
        <actor>RequestManager</actor>
    </actors>
    <mainSequence>
        <step id="S1">User creates a new ServerHandler</step>
        <step id="S2">ServerHandler creates a new RequestManager</step>
        <step id="S3">RequestManager is returned</step>
        <step id="S4">ServerHandler sends confirmation to User</step>
        <step id="S5">User deletes ServerHandler</step>
        <step id="S6">ServerHandler deletes RequestManager</step>
        <step id="S7">RequestManager is successfully deleted</step>
        <step id="S8">ServerHandler sends destruction confirmation to User</step>
    </mainSequence>
</useCase>
