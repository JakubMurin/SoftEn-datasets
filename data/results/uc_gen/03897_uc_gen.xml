<useCase id="UC1">
    <name>Burn notes to linked ERC20 contract</name>
    <actors>
        <actor>Token Owner</actor>
    </actors>
    <mainSequence>
        <step id="S1">Token Owner inputs notes</step>
        <step id="S2">Token Owner generates JoinSplitProof</step>
        <step id="S3">Token Owner encodes proof ABI with asset address</step>
        <step id="S4">Token Owner sends public approval to ACE</step>
        <step id="S5">ACE constructs proof signatures</step>
        <step id="S6">Asset contract performs confidential transfer</step>
        <step id="S7">ACE updates note registry</step>
        <step id="S8">Note registry updates ERC20 token balances</step>
    </mainSequence>
</useCase>
