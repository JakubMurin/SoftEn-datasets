<useCase id="UC1">
    <name>User takes quiz</name>
    <actors>
        <actor>User</actor>
        <actor>Quiz</actor>
    </actors>
    <mainSequence>
        <step id="S1">User initiates taking the quiz</step>
        <step id="S2">Quiz receives the request</step>
        <step id="S3">Quiz presents questions to user</step>
        <step id="S4">User submits answers</step>
        <step id="S5">Questions performer reviews answers</step>
        <step id="S6">Answers performer checks correctness of responses</step>
        <step id="S7">Answers are validated</step>
        <step id="S8">Questions performer sends quiz result to the user</step>
        <step id="S9">Quiz result is presented to the user</step>
    </mainSequence>
</useCase>
