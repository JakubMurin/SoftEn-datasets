<useCase id="UC1">
    <name>Content Editing</name>
    <actors>
        <actor>Content Editor</actor>
        <actor>CMS Search Interface</actor>
        <actor>CMS Database</actor>
        <actor>Content Page</actor>
    </actors>
    <mainSequence>
        <step id="S1">Content Editor enters search query (keywords/tags)</step>
        <step id="S2">CMS Search Interface queries for content</step>
        <step id="S3">CMS Database provides search results</step>
        <step id="S4">CMS Search Interface displays search results</step>
        <step id="S5">Content Editor selects content from results</step>
        <step id="S6">CMS Search Interface requests selected content</step>
        <step id="S7">CMS Database retrieves content details</step>
        <step id="S8">CMS Search Interface displays content in editor</step>
        <step id="S9">Content Editor edits content</step>
        <step id="S10">Content Page saves changes to CMS Database</step>
        <step id="S11">CMS Database confirms changes saved</step>
        <step id="S12">Content Page displays confirmation (edit successful)</step>
    </mainSequence>
</useCase>
