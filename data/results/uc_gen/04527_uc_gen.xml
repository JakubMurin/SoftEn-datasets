<useCase id="1">
    <name>Execute Proposal</name>
    <actors>
        <actor>Alice_novice</actor>
    </actors>
    <mainSequence>
        <step id="S1">Alice_novice creates grants treasury</step>
        <step id="S2">Alice_novice receives treasury address</step>
        <step id="S3">Alice_novice creates forum proposal</step>
        <step id="S4">Community_novice gets proposals from forum</step>
        <step id="S5">Community_novice lists proposals</step>
        <step id="S6">Community_novice provides positive/negative feedback on forum proposal</step>
        <step id="S7">Alice_novice receives positive/negative feedback</step>
