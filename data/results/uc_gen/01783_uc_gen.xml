<useCase id="UC1">
    <name>Booking Football Pitch</name>
    <description>Allows a Customer to book a football pitch</description>
    <actors>
        <actor>Customer</actor>
    </actors>
    <preconditions>
        <precondition>Customer selects a football pitch</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Football pitch successfully booked</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Booking process failed</condition>
    </failureEndConditions>
    <trigger>Customer initiates booking process</trigger>
    <mainSequence>
        <step id="S1">Customer selects a football pitch</step>
        <step id="S2">Customer selects a time slot</step>
        <step id="S3">System confirms time slot availability</step>
        <step id="S4">System allows booking</step>
        <step id="S5">Customer successfully books the football pitch</step>
        <step id="S6">Customer proceeds to payment</step>
    </mainSequence>
</useCase>
