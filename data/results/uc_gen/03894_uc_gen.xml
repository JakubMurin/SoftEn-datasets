<useCase id="UC1">
    <name>Burn notes to linked ERC20 contract</name>
    <actors>
        <actor>Token Owner</actor>
    </actors>
    <mainSequence>
        <step id="S1">Token Owner inputs notes</step>
        <step id="S2">Token Owner generates JoinSplitProof</step>
        <step id="S3">Token Owner encodes proof data</step>
        <step id="S4">Token Owner sends public approval to ACE</step>
        <step id="S5">ACE activates and updates note registry</step>
        <step id="S6">Token Owner constructs proof signatures</step>
        <step id="S7">Token Owner transfers notes confidentially</step>
        <step id="S8">Asset updates note registry</step>
        <step id="S9">Registry updates note registry</step>
        <step id="S10">Token transfers to token owner</step>
    </mainSequence>
</useCase>
