<useCase id="UC001">
    <name>Managing Permissions</name>
    <actors>
        <actor>Faculty Member</actor>
        <actor>Repository Dashboard</actor>
        <actor>Permission Service</actor>
        <actor>Repository DB</actor>
    </actors>
    <preconditions>
        <precondition>Faculty member logged into the system</precondition>
        <precondition>System is operational</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Navigate to the dashboard.</step>
        <step id="S2">Request permission update page from the Permission Service.</step>
        <step id="S3">Display permission update UI.</step>
        <step id="S4">Paste list of NetIDs on the dashboard.</step>
        <step id="S5">Validate and process the NetIDs.</step>
        <step id="S6">Update permissions for the NetIDs in the Repository DB.</step>
        <step id="S7">Display confirmation message.</step>
        <step id="S8">Show that DDR recognizes the NetIDs.</step>
        <step id="S9">Request removal of permissions from the dashboard.</step>
        <step id="S10">Process the removal request.</step>
        <step id="S11">Update permissions in the DB for removal.</step>
        <step id="S12">Display the updated status.</step>
        <step id="S13">Request to set begin and end dates for submitting.</step>
        <step id="S14">Display date setting UI.</step>
        <step id="S15">Validate and update the submission window in the DB.</step>
        <step id="S16">Inform about the successful update.</step>
        <step id="S17">Show a success message.</step>
        <step id="S18">Request submission status page.</step>
        <step id="S19">Query the submission status.</step>
        <step id="S20">Get submission data from the DB.</step>
        <step id="S21">Process and format the submission status.</step>
        <step id="S22">Display the submission status screen.</step>
    </mainSequence>
</useCase>
