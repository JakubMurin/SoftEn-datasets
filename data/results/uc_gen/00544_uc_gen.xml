<useCase id="UC1">
    <name>Student accesses library</name>
    <actors>
        <actor>Student</actor>
    </actors>
    <mainSequence>
        <step id="S1">Student opens the login page</step>
        <step id="S2">Monitor displays login page</step>
        <step id="S3">Student submits their login details</step>
        <step id="S4">Authentication verifies the credentials</step>
        <step id="S5">Student authentication is successful</step>
        <step id="S6">Monitor displays the library page to the Student</step>
        <step id="S7">Student views the library page</step>
    </mainSequence>
</useCase>
