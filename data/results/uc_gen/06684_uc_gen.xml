<useCase id="UC001">
    <name>User disables buzzer and turns off LED</name>
    <actors>
        <actor>Korisnik</actor>
        <actor>Mikrokontroler</actor>
        <actor>Buzzer</actor>
        <actor>LED</actor>
    </actors>
    <mainSequence>
        <step id="S1">Korisnik presses the button</step>
        <step id="S2">Mikrokontroler receives button press signal</step>
        <step id="S3">Mikrokontroler instructs Buzzer to turn off</step>
        <step id="S4">Mikrokontroler instructs LED to turn off</step>
    </mainSequence>
</useCase>
