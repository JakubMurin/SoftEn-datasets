<useCase id="UC1">
    <name>List Passage Between 2 Buildings</name>
    <actors>
        <actor>User</actor>
        <actor>:listPassageBetween2BuildingsComponentHTML</actor>
        <actor>listPassageBetween2BuildingsComponent</actor>
        <actor>:BuildingServiceFE</actor>
        <actor>:FloorServiceFE</actor>
        <actor>:BuildingController</actor>
        <actor>:FloorController</actor>
        <actor>:BuildingServiceBE</actor>
        <actor>:FloorServiceBE</actor>
    </actors>
    <mainSequence>
        <step id="S1">User lists Passage Between 2 Buildings</step>
        <step id="S2">UI lists Passage Between 2 Buildings</step>
        <step id="S3">Component gets Buildings from BuildingServiceFE</step>
        <step id="S4">BuildingServiceFE retrieves Buildings from BuildingController</step>
        <step id="S5">BuildingController fetches Buildings from BuildingServiceBE</step>
        <step id="S6">BuildingServiceBE queries Database for Buildings</step>
        <step id="S7">BuildingServiceBE receives List of Buildings from Database</step>
        <step id="S8">BuildingController sends List of Buildings to BuildingServiceFE</step>
        <step id="S9">BuildingServiceFE logs Buildings to Console</step>
        <step id="S10">Component displays Buildings to UI</step>
        <step id="S11">User asks for 2 buildings</step>
        <step id="S12">User selects 2 buildings</step>
        <step id="S13">UI lists Passage Between 2 Buildings</step>
        <step id="S14">Component lists Passage Between 2 Buildings</step>
        <step id="S15">Component lists Floors from Building using FloorServiceFE</step>
        <step id="S16">FloorServiceFE checks Passage in Building</step>
        <step id="S17">FloorController queries Database for Passage</step>
        <step id="S18">FloorServiceBE finds Passage in Database</step>
        <step id="S19">FloorController receives Passage from FloorServiceBE</step>
        <step id="S20">FloorServiceFE displays Passage to UI</step>
        <step id="S21">UI shows Passage Between Buildings</step>
    </mainSequence>
</useCase>
