<useCase id="UC1">
    <name>Configure a house</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User configures a house.</step>
        <step id="S2">HouseConfigurationUI requests data (latitude, longitude, zipcode, address).</step>
        <step id="S3">User inserts data (latitude, longitude, zipcode, address) into HouseConfigurationUI.</step>
        <step id="S4">HouseConfigurationController sets house.</step>
        <step id="S5">HouseConfigurationController reconfigures house.</step>
        <step id="S6">House validates data.</step>
        <step id="S7">House displays house.</step>
    </mainSequence>
</useCase>
