<useCase id="UC1">
    <name>Perform Operation Queue Subscription and Handling</name>
    <actors>
        <actor>sidetree-core-go</actor>
    </actors>
    <mainSequence>
        <step id="S1">Subscribe to Operation Queue</step>
        <step id="S2">Add operation op1 to handler1</step>
        <step id="S3">Publish operation op1 to opQueue</step>
        <step id="S4">Acknowledge successful publication of op1</step>
        <step id="S5">Store op1 in opQueueDB</step>
        <step id="S6">Acknowledge handling of op1</step>
        <step id="S7">Add operation op2 to handler2</step>
        <step id="S8">Publish operation op2 to opQueue</step>
        <step id="S9">Acknowledge successful publication of op2</step>
        <step id="S10">Store op2 in opQueueDB</step>
        <step id="S11">Acknowledge handling of op2</step>
    </mainSequence>
</useCase>
