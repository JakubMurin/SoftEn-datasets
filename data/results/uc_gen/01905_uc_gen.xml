<useCase id="UC001">
    <name>Use Case 1</name>
    <actors>
        <actor>User</actor>
        <actor>HelloController</actor>
        <actor>Bankomat</actor>
        <actor>SignIn_UpController</actor>
    </actors>
    <mainSequence>
        <step id="S1">User triggers onAcceptButton(ActionEvent)</step>
        <step id="S2">HelloController creates Bankomat instance</step>
        <step id="S3">HelloController initializes Bankomat with selected bank, location, and balance</step>
        <step id="S4">HelloController adds a new UserAdmin with username "admin" and PIN 5555 to Bankomat</step>
        <step id="S5">HelloController sets Bankomat instance in SignIn_UpController</step>
        <step id="S6">HelloController shows SignIn_UpController</step>
        <step id="S7">HelloController closes</step>
    </mainSequence>
</useCase>
