<useCase id="UC1">
    <name>Verificar Formación Académica</name>
    <actors>
        <actor>Profesor</actor>
    </actors>
    <mainSequence>
        <step id="S1">Profesor accede a la opción para solicitar verificación</step>
        <step id="S2">View solicita formulario de verificación</step>
        <step id="S3">Controller obtiene nueva formación académica</step>
        <step id="S4">Controller muestra formulario de verificación</step>
        <step id="S5">View envía solicitud de verificación</step>
        <step id="S6">Controller crea solicitud de verificación</step>
        <step id="S7">Repository guarda solicitud de verificación</step>
        <step id="S8">Controller muestra mensaje de confirmación</step>
    </mainSequence>
</useCase>
