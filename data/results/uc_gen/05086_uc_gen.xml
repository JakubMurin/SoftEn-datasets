<useCase id="UC1">
    <name>Develop Application</name>
    <description>As a Developer, I want to Launch and Check the health of an Application</description>
    <actors>
        <actor>Developer</actor>
        <actor>Application Analyzer</actor>
    </actors>
    <preconditions>
        <precondition>None</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Application Launched successfully</condition>
        <condition>Application Health Checked successfully</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Application Launch failure</condition>
        <condition>Application Health Check failure</condition>
    </failureEndConditions>
    <trigger>User requests to launch and check application health</trigger>
    <mainSequence>
        <step id="S1">Developer Launches Application</step>
        <step id="S2">Application Analyzer checks Application Health</step>
    </mainSequence>
</useCase>
