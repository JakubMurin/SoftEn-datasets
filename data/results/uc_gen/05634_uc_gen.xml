<useCase id="UC1">
    <name>Manage Session Details</name>
    <actors>
        <actor>User</actor>
        <actor>Auth</actor>
        <actor>Dashboard</actor>
        <actor>SessionMgmt</actor>
        <actor>DB</actor>
    </actors>
    <mainSequence>
        <step id="S1">User accesses platform</step>
        <step id="S2">Authentication system authenticates the user</step>
        <step id="S3">User navigates to My Schedule on the dashboard</step>
        <step id="S4">Dashboard displays registered sessions</step>
        <step id="S5">User selects Edit on a session</step>
        <step id="S6">Session Management displays session details form</step>
        <step id="S7">User submits updated session details</step>
        <step id="S8">Session Management validates and updates session details</step>
        <step id="S9">Database updates session details</step>
        <step id="S10">Session Management displays success message to user</step>
    </mainSequence>
</useCase>
