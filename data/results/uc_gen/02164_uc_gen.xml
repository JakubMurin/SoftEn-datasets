<useCase id="UC001">
    <name>Delete Book Process</name>
    <actors>
        <actor>Staff</actor>
    </actors>
    <mainSequence>
        <step id="S1">Staff selects "Remove Book"</step>
        <step id="S2">UI requests deletion of book with ID</step>
        <step id="S3">Controller initiates deletion process</step>
        <step id="S4">Service queries database to delete book</step>
        <step id="S5">Database confirms book deletion</step>
        <step id="S6">Service reports deletion success</step>
        <step id="S7">Controller displays success message</step>
        <step id="S8">UI shows "Book Deleted Successfully" message to Staff</step>
    </mainSequence>
</useCase>
