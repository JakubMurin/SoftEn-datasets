<useCase id="UC1">
    <name>Actor Pickup Item</name>
    <actors>
        <actor>Controller</actor>
        <actor>Actor</actor>
        <actor>ActionState</actor>
        <actor>Item</actor>
        <actor>Room</actor>
        <actor>Inventory</actor>
    </actors>
    <mainSequence>
        <step id="S1">Controller picks up item</step>
        <step id="S2">Actor picks up item</step>
        <step id="S3">Actor gets location</step>
        <step id="S4">Actor removes item from room</step>
        <step id="S5">Actor checks if item is sticky</step>
        <step id="S6">Item is sticky</step>
        <step id="S7">Actor gets inventory</step>
        <step id="S8">Actor adds item to inventory</step>
        <step id="S9">Actor checks if inventory is full</step>
        <step id="S10">Inventory is full</step>
        <step id="S11">Actor adds item back to room</step>
        <step id="S12">Actor fails to pick up item</step>
        <step id="S13">Actor successfully picks up item</step>
        <step id="S14">Actor triggers onPickup event</step>
    </mainSequence>
</useCase>
