<useCase id="UC1">
    <name>Book Reservation</name>
    <actors>
        <actor>Member</actor>
        <actor>Web Interface</actor>
        <actor>Reservation System</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">Member navigates to Reserve Book.</step>
        <step id="S2">Web Interface displays Search Interface.</step>
        <step id="S3">Member inputs search parameters.</step>
        <step id="S4">Reservation System queries books by parameters.</step>
        <step id="S5">Database returns query results.</step>
        <step id="S6">Reservation System displays available books.</step>
        <step id="S7">Member chooses a book and reserves it.</step>
        <step id="S8">Web Interface processes reservation request.</step>
        <step id="S9">Database updates reservation status.</step>
        <step id="S10">Reservation success acknowledged.</step>
        <step id="S11">Reservation System displays reservation confirmation.</step>
        <step id="S12">Web Interface shows success message to Member.</step>
    </mainSequence>
</useCase>
