<useCase id="1">
    <name>Country Tour Information Retrieval</name>
    <actors>
        <actor>用户</actor>
    </actors>
    <mainSequence>
        <step id="S1">用户 provides form parameters.</step>
        <step id="S2">CountryTourScreenController initiates page retrieval.</step>
        <step id="S3">CountryTourScreenController requests statistical data.</step>
        <step id="S4">TbCountryTourService queries the database.</step>
        <step id="S5">TbCountryTourMapper retrieves data successfully.</step>
        <step id="S6">TbCountryTourService fails to retrieve data.</step>
        <step id="S7">TbCountryTourService sends retrieved data back.</step>
        <step id="S8">Data is transferred to the user front-end.</step>
    </mainSequence>
</useCase>
