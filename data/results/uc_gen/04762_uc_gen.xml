<useCase id="UC1">
    <name>View Story Detail</name>
    <actors>
        <actor>User</actor>
        <actor>StoryDetailView</actor>
        <actor>StoriesController</actor>
        <actor>AuthorsController</actor>
        <actor>ChaptersController</actor>
        <actor>CommentsController</actor>
        <actor>MsgService</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">User clicks on the story cover</step>
        <step id="S2">View requests API for story details</step>
        <step id="S3">Story processes GetStoryDetail()</step>
        <step id="S4">Story queries data from the database</step>
        <step id="S5">Database returns data to Story</step>
        <step id="S6">Message Service returns response</step>
        <step id="S7">View displays the Story Detail Page</step>
        <step id="S8">View requests API for related authors</step>
        <step id="S9">Author processes GetStoryRelateAuthor()</step>
        <step id="S10">Author queries data from the database</step>
        <step id="S11">Database returns data to Author</step>
        <step id="S12">Message Service returns response</step>
        <step id="S13">View requests API for story chapters</step>
        <step id="S14">Chapter processes GetStoryChapters()</step>
        <step id="S15">Chapter queries data from the database</step>
        <step id="S16">Database returns data to Chapter</step>
        <step id="S17">Message Service returns response</step>
        <step id="S18">View requests API for story comments</step>
        <step id="S19">Comment processes GetStoryComments()</step>
        <step id="S20">Comment queries data from the database</step>
        <step id="S21">Database returns data to Comment</step>
        <step id="S22">Message Service returns response</step>
    </mainSequence>
</useCase>
