<useCase id="101">
    <name>Grant Embargo Privileges</name>
    
    <actors>
        <actor>Digital Records Archivist</actor>
        <actor>Authentication System</actor>
        <actor>EDRMS Core</actor>
        <actor>User Management DB</actor>
        <actor>Access Control Module</actor>
    </actors>
    
    <mainSequence>
        <step id="S1">Authenticate to the system</step>
        <step id="S2">Access the User Management functionality</step>
        <step id="S3">Retrieve the list of users from User Management DB</step>
        <step id="S4">Display the list of users</step>
        <step id="S5">Select Repository Administrator(s)</step>
        <step id="S6">Request Access Control Module to Update Privileges</step>
        <step id="S7">Grant Embargo Privileges through the User Management DB</step>
        <step id="S8">Receive privilege update confirmation</step>
        <step id="S9">Display the final confirmation message</step>
    </mainSequence>
    
</useCase>
