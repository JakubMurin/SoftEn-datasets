<useCase id="1">
    <name>IOU State Creation and Transaction Preparation</name>
    <actors>
        <actor>Borrower</actor>
        <actor>Lender</actor>
    </actors>
    <mainSequence>
        <step id="S1">Borrower creates IOU State.</step>
        <step id="S2">Borrower prepares the transaction.</step>
        <step id="S3">Borrower runs CollectEndorsementsView with Lender.</step>
        <step id="S4">Lender checks the transaction.</step>
        <step id="S5">Lender endorses the transaction with Borrower.</step>
        <step id="S6">Borrower runs OrderingView with Fabric.</step>
    </mainSequence>
</useCase>
