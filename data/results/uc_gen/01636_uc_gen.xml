<useCase id="UC1">
	<name>Access application</name>
	<actors>
		<actor>User</actor>
		<actor>Client</actor>
		<actor>AuthorizationServer</actor>
	</actors>
	<preconditions>
		<precondition>User wants to access the application</precondition>
	</preconditions>
	<successEndConditions>
		<condition>User successfully accesses the application</condition>
	</successEndConditions>
	<trigger>User accesses the application</trigger>
	<mainSequence>
		<step id="S1">User Access the application</step>
		<step id="S2">Client Requests authorization</step>
		<step id="S3">AuthorizationServer Displays login screen</step>
		<step id="S4">User Enters credentials</step>
		<step id="S5">AuthorizationServer Authenticates the user</step>
		<step id="S6">User Authorizes access</step>
		<step id="S7">AuthorizationServer Redirects to the redirect URI with access token/id token</step>
		<step id="S8">Client Displays protected resource</step>
	</mainSequence>
</useCase>
