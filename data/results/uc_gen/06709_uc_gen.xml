<useCase id="UC1">
    <name>Order Food</name>
    <description>Allows the user to order food from the menu.</description>
    <actors>
        <actor>User</actor>
        <actor>Menu</actor>
        <actor>Pilih Menu</actor>
        <actor>Aku</actor>
        <actor>Dia</actor>
        <actor>Quantity</actor>
        <actor>Total</actor>
        <actor>Exit</actor>
    </actors>
    <preconditions>
        <precondition>User is logged in.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Order is successfully placed.</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Order is not completed.</condition>
    </failureEndConditions>
    <trigger>User selects to order food from the menu.</trigger>
    <mainSequence>
        <step id="S1">User views the main menu.</step>
        <step id="S2">User selects options from the menu.</step>
        <step id="S3">User chooses to view their profile.</step>
        <step id="S4">User enters the quantity of food items.</step>
        <step id="S5">System calculates the total amount.</step>
        <step id="S6">User confirms the order.</step>
        <step id="S7">Order is successfully placed.</step>
    </mainSequence>
</useCase>
