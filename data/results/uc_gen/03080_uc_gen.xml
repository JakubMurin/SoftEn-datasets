<useCase id="UC1001">
    <name>Take Exam</name>
    <actors>
        <actor>Student</actor>
    </actors>
    <mainSequence>
        <step id="S1">Student takes an exam</step>
        <step id="S2">UI displays unsolved exams</step>
        <step id="S3">Student selects an exam to take</step>
        <step id="S4">UI validates if the exam is open to submit</step>
        <step id="S5">UI builds the exam for the student</step>
        <step id="S6">Student answers exam questions</step>
        <step id="S7">UI validates each question</step>
        <step id="S8">UI gets the exam grade in percentage</step>
        <step id="S9">UI saves the exam grade</step>
        <step id="S10">UI shows feedback to the student</step>
    </mainSequence>
</useCase>
