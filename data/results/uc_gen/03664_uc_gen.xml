<useCase id="UC1">
    <name>Accéder au produit A</name>
    <actors>
        <actor>Utilisateur</actor>
        <actor>AuthGuard</actor>
        <actor>Produit [A]</actor>
        <actor>Portail</actor>
    </actors>
    <mainSequence>
        <step id="S1">L'utilisateur accède au produit A</step>
        <step id="S2">AuthGuard vérifie l'authentification</step>
        <step id="S3">Si authentifié, AuthGuard redirige vers le produit A</step>
        <step id="S4">Sinon, AuthGuard redirige vers le Portail</step>
    </mainSequence>
</useCase>
