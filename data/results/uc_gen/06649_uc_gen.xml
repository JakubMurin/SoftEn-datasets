<useCase id="UC1">
    <name>Search Articles</name>
    <actors>
        <actor>Visitor</actor>
        <actor>UI Interface</actor>
        <actor>SearchController</actor>
        <actor>ArticlesDatabase</actor>
    </actors>
    <mainSequence>
        <step id="S1">Visitor enters search keywords</step>
        <step id="S2">UI Interface invokes search(query)</step>
        <step id="S3">SearchController queries ArticlesDatabase for search results</step>
        <step id="S4">ArticlesDatabase returns search results</step>
        <step id="S5">SearchController displays search results on UI Interface</step>
        <step id="S6">UI Interface shows articles matching the search criteria to Visitor</step>
    </mainSequence>
</useCase>
