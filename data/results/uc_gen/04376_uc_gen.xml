<useCase id="UC1">
    <name>Creating a Booking</name>
    <actors>
        <actor>Receptionist</actor>
    </actors>
    <preconditions>
        <precondition>Receptionist requests to create a booking</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Receptionist requests to create booking</step>
        <step id="S2">UI displays booking form</step>
        <step id="S3">Receptionist fills booking details</step>
        <step id="S4">Router receives POST request to create booking</step>
        <step id="S5">Controller creates booking</step>
        <step id="S6">Repository creates booking</step>
        <step id="S7">Room availability is checked</step>
        <step id="S8">Booking is created if room is available</step>
        <step id="S9">Display booking success message</step>
        <step id="S10">Display error message if room is not available</step>
    </mainSequence>
</useCase>
