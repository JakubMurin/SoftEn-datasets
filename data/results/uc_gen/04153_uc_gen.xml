<useCase id="UC1">
    <name>Manage Book Categories</name>
    <actors>
        <actor>Manager</actor>
    </actors>
    <preconditions>
        <precondition>The Manager is logged in</precondition>
    </preconditions>
    <trigger>The Manager selects "Manage Book Categories"</trigger>
    <mainSequence>
        <step id="S1">Manager selects "Manage Book Categories"</step>
        <step id="S2">UI Interface validates Manager Role</step>
        <step id="S3">Authorization grants access</step>
        <step id="S4">UI Interface displays Book Categories</step>
        <step id="S5">Manager selects Categories to Delete</step>
        <step id="S7">Book Category Management requests Category Deletion</step>
        <step id="S8">Database deletes Category Records</step>
        <step id="S9">Database confirms Deletion</step>
        <step id="S10">Book Category Management displays Success Message</step>
        <step id="S11">UI Interface shows Update</step>
    </mainSequence>
</useCase>
