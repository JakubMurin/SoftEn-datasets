<useCase id="1">
    <name>Review and Document Application</name>
    <actors>
        <actor>Planning Staff</actor>
        <actor>User Authentication</actor>
        <actor>Dashboard</actor>
        <actor>Application Database</actor>
        <actor>Compliance Checking Tool</actor>
        <actor>Comprehensive Plan Database</actor>
        <actor>Review Notes Interface</actor>
        <actor>Notification Service</actor>
    </actors>
    <preconditions>
        <precondition>Planning Staff is logged in</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Review status updated successfully</condition>
    </successEndConditions>
    <trigger>Planning Staff selects an application to review</trigger>
    <mainSequence>
        <step id="S1">Planning Staff logs into the system</step>
        <step id="S2">Planning Staff accesses the dashboard</step>
        <step id="S3">Planning Staff selects an application from the dashboard</step>
        <step id="S4">Review Notes Interface documents the review</step>
        <step id="S5">Notification Service sends a notification to the applicant</step>
    </mainSequence>
</useCase>
