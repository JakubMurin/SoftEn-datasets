<useCase id="UC1">
    <name>Send Mass Message</name>
    <actors>
        <actor>Client</actor>
    </actors>
    <mainSequence>
        <step id="S1">Client sends mass message request</step>
        <step id="S2">MassMessageController validates parameters</step>
        <step id="S3">MassMessageController gets access token from Wechat</step>
        <step id="S4">MassMessageController calls Tencent mass send interface</step>
        <step id="S5">MassMessageController saves message to MongoDB</step>
        <step id="S6">Client receives send mass message response</step>
    </mainSequence>
</useCase>
