<useCase id="UC1">
    <name>Login Use Case</name>
    <description>User login process</description>
    <actors>
        <actor>Actor</actor>
    </actors>
    <preconditions>
        <precondition>User must have valid credentials</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully logs in</condition>
    </successEndConditions>
    <trigger>User wants to login</trigger>
    <mainSequence>
        <step id="S1">User initiates login process</step>
        <step id="S2">UI creates role and maximum attempts</step>
        <step id="S3">UI displays login screen</step>
        <step id="S4">User provides E-Mail and Password</step>
        <step id="S5">UI sends authentication request to AuthServ</step>
        <step id="S6">AuthServ authenticates user credentials</step>
        <step id="S7">AuthServ generates UserSession</step>
        <step id="S8">UI displays successful login message</step>
    </mainSequence>
</useCase>
