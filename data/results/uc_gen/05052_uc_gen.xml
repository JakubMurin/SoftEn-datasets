<useCase id="UC1">
    <name>Game Initialization</name>
    <actors>
        <actor>User</actor>
        <actor>App</actor>
        <actor>StartScreen</actor>
        <actor>StartButtonEventHandler</actor>
        <actor>PlayersInputScreen</actor>
        <actor>ConfirmButton</actor>
        <actor>Game</actor>
        <actor>PlayersNamesInputScreen</actor>
        <actor>QuestionScreen</actor>
        <actor>Player</actor>
    </actors>
    <mainSequence>
        <step id="S1">User clicks 'Comenzar'</step>
        <step id="S2">App handles the event</step>
        <step id="S3">StartScreen handles the event</step>
        <step id="S4">StartButtonEventHandler handles the event</step>
        <step id="S5">StartScreen sets visible to false</step>
        <step id="S6">PlayersInputScreen sets visible to true</step>
        <step id="S7">User selects and confirms inputs</step>
        <step id="S8">App handles the input event</step>
        <step id="S9">PlayersInputScreen handles the input event</step>
        <step id="S10">ConfirmButton handles the input event</step>
        <step id="S11">ConfirmButton selects and sends data to Game</step>
        <step id="S12">Game loads received data</step>
        <step id="S13">PlayersNamesInputScreen is created</step>
        <step id="S14">App shows screen for player names input</step>
        <step id="S15">User enters and confirms player names</step>
        <step id="S16">App handles player names input event</step>
        <step id="S17">PlayersNamesInputScreen handles player names input event</step>
        <step id="S18">NamesButton executes player names input event</step>
        <step id="S19">NamesButton registers user names in Game</step>
        <step id="S20">Game creates a new player for each entered name</step>
        <step id="S21">QuestionScreen is created</step>
        <step id="S22">App shows screen with questions and options</step>
        <step id="S23">App displays questions for each player on QuestionScreen</step>
    </mainSequence>
</useCase>
