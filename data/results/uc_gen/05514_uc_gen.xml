<useCase id="UC001">
    <name>Access and Display Item/Component Details</name>
    <actors>
        <actor>Curator</actor>
        <actor>UI Dashboard</actor>
        <actor>Authorization Module</actor>
        <actor>Item Retrieval Module</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">Curator accesses item/component page</step>
        <step id="S2">UI validates access</step>
        <step id="S3">Authorization Module grants access</step>
        <step id="S4">UI requests item/component details</step>
        <step id="S5">Item Retrieval Module queries Database for details and deletion date</step>
        <step id="S6">Database returns requested data</step>
        <step id="S7">Item Retrieval Module displays item/component details and deletion date</step>
        <step id="S8">UI shows item/component page with deletion date to Curator</step>
    </mainSequence>
</useCase>
