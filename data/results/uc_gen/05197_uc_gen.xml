<useCase id="UC1">
      <name>Fournir les informations d'identification</name>
      <actors>
          <actor>User</actor>
          <actor>Admin</actor>
      </actors>
      <mainSequence>
          <step id="S1">User fournit les informations d'identification</step>
          <step id="S2:System">System vérifie les informations</step>
          <step id="S3:System">System notifie des erreurs à User</step>
          <step id="S4:User">User soumet à nouveau les informations</step>
          <step id="S5:System">System confirme l'authentification à User</step>
          <step id="S6:System">System informe User de l'échec de l'authentification</step>
          <step id="S7:Admin:System">Admin envoie une demande de radiation d'un compte</step>
          <step id="S8:System:System">System vérifie le compte ciblé</step>
          <step id="S9:System:Admin">System confirme la radiation au compte par Admin</step>
          <step id="S10:System:Admin">System notifie l'échec de la radiation au compte par Admin</step>
      </mainSequence>
</useCase>
