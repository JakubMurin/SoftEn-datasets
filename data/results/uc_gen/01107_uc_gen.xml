<useCase id="UC1">
    <name>Change Password</name>
    <description>Allow the customer to change their password</description>
    <actors>
        <actor>Customer</actor>
    </actors>
    <preconditions>
        <precondition>The customer is logged in</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Password successfully changed</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Password change failed</condition>
    </failureEndConditions>
    <trigger>User requests to change password</trigger>
    <mainSequence>
        <step id="S1">Enter new password information</step>
        <step id="S2">Send password change request</step>
        <step id="S3">Update password in the system</step>
        <step id="S4">Store password in the database</step>
        <step id="S5">Notify successful password change</step>
    </mainSequence>
</useCase>
