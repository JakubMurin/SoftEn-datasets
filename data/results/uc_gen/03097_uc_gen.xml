<useCase id="UC1">
    <name>Data Storage Indication Process</name>
    <description>Documenting data storage plans</description>
    <actors>
        <actor>Researcher</actor>
    </actors>
    <preconditions>
        <precondition>Researcher has access to DMPTool</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Data storage plan successfully saved</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Error in saving data storage plan</condition>
    </failureEndConditions>
    <trigger>Researcher accesses DMPTool</trigger>
    <mainSequence>
        <step id="S1">Access DMPTool</step>
        <step id="S2">Choose to document data storage plans</step>
        <step id="S3">Display data storage plan form</step>
        <step id="S4">Input data storage locations\n(during and after the project)</step>
        <step id="S5">Store data storage plans</step>
        <step id="S6">Update metadata with data locations</step>
        <step id="S7">Confirm data storage plan saved</step>
        <step id="S8">Send storage plan details\n(Optional integration)</step>
        <step id="S9">Update institutional repository/system</step>
        <step id="S10">Display confirmation message</step>
        <step id="S11">Display success and next steps</step>
    </mainSequence>
</useCase>
