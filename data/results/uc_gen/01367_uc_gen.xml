<useCase id="UC001">
    <name>Manage Order Information</name>
    <actors>
        <actor>User</actor>
        <actor>Order Information Page</actor>
        <actor>Controller</actor>
        <actor>Model</actor>
        <actor>Database</actor>
    </actors>
    <preconditions>
        <precondition>Order details page must be accessible</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Order information displayed successfully</condition>
    </successEndConditions>
    <trigger>User accesses the order details page</trigger>
    <mainSequence>
        <step id="S1">User accesses the order details page</step>
        <step id="S2">Request for order details page</step>
        <step id="S3">Fetch order details</step>
        <step id="S4">Query order information from the database</step>
        <step id="S5">Return order information to model</step>
        <step id="S6">Send order details to controller</step>
        <step id="S7">Display order details to user</step>
    </mainSequence>
</useCase>
