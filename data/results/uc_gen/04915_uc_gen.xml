<useCase id="UC1">
    <name>View and Choose Boards</name>
    <actors>
        <actor>SBAappUser</actor>
        <actor>ViewBoardsUI</actor>
        <actor>ViewBoardsController</actor>
        <actor>SBProtocol</actor>
        <actor>ServerAJAX</actor>
    </actors>
    <mainSequence>
        <step id="S1">User views boards</step>
        <step id="S2">User creates socket connection with serverIp and serverPort</step>
        <step id="S3">User requests boards to view</step>
        <step id="S4">User shows boards</step>
        <step id="S5">User chooses a board</step>
        <step id="S6">User requests history of the selected board</step>
        <step id="S7">User shows history of the selected board</step>
    </mainSequence>
</useCase>
