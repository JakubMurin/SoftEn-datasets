<useCase id="UC1">
    <name>Initialisation d'un monstre</name>
    <actors>
        <actor>User</actor>
        <actor>Main</actor>
        <actor>Labyrinthe</actor>
        <actor>Monstre</actor>
    </actors>
    <preconditions>
        <precondition>Le fichier labySimple/laby0.txt existe</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">User main()</step>
        <step id="S2">Main Labyrinthe("labySimple/laby0.txt")</step>
        <step id="S3">Labyrinthe lireFichier()</step>
        <step id="S4">Monstre Monstre(x, y)</step>
        <step id="S5">Monstre setPositionInitiale(x, y)</step>
        <step id="S6">Main afficherLabyrinthe()</step>
    </mainSequence>
</useCase>
