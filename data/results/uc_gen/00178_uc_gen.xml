<useCase id="UC001">
    <name>Trainee Login</name>
    <description>Trainee requests to login to the system</description>
    <actors>
        <actor>Trainee</actor>
        <actor>Authentication Service</actor>
        <actor>User Database</actor>
    </actors>
    <preconditions>
        <precondition>Trainee has valid login credentials</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Trainee successfully logs in</condition>
    </successEndConditions>
    <trigger>Trainee requests to login</trigger>
    <mainSequence>
        <step id="S1">Trainee requests to login</step>
        <step id="S2">Authentication Service validates user credentials</step>
        <step id="S3">User Database returns user validation</step>
        <step id="S4">Authentication Service notifies Trainee of authentication success</step>
    </mainSequence>
</useCase>
