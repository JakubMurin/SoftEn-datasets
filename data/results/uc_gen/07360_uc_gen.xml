<useCase id="UC1">
    <name>Hunting Snipe</name>
    <actors>
        <actor>Player</actor>
        <actor>Guide</actor>
        <actor>Snipe</actor>
        <actor>FoodItems</actor>
    </actors>
    <trigger>Player queries the guide for the SnipeType</trigger>
    <mainSequence>
        <step id="S1">Player starts the hunt</step>
        <step id="S2">Player encounters Snipe</step>
        <step id="S3">Snipe damages Player</step>
        <step id="S4">Player gets current health points</step>
        <step id="S5">Player receives warnings</step>
        <step id="S6">Player heals using FoodItems</step>
        <step id="S7">FoodItems restore Player's health</step>
        <step id="S8">Player dies</step>
    </mainSequence>
</useCase>
