<useCase id="UC1">
    <name>Generate Workshop Summary</name>
    <actors>
        <actor>Attendee</actor>
        <actor>Workshop Platform</actor>
        <actor>CMS</actor>
        <actor>Database</actor>
        <actor>Content Editor</actor>
        <actor>Summary Page</actor>
    </actors>
    <preconditions>
        <precondition>Attendee requests summary</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Attendee requests summary</step>
        <step id="S2">Workshop Platform fetches request for summary</step>
        <step id="S3">CMS queries workshop data from Database</step>
        <step id="S4">Database returns workshop data to CMS</step>
        <step id="S5">CMS generates summary content with Content Editor</step>
        <step id="S6">Content Editor submits summary to CMS</step>
        <step id="S7">CMS updates Database with summary</step>
        <step id="S8">Database confirms update to CMS</step>
        <step id="S9">CMS publishes summary to Summary Page</step>
        <step id="S10">Summary Page displays summary content to Attendee</step>
    </mainSequence>
</useCase>
