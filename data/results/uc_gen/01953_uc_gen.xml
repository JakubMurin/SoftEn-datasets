<useCase id="UC1">
    <name>User completes work by creating a request</name>
    <actors>
        <actor>User</actor>
        <actor>First Class</actor>
        <actor>Second Class</actor>
        <actor>Last Class</actor>
    </actors>
    <mainSequence>
        <step id="S1">User initiates work by requesting action</step>
        <step id="S2">First Class creates a request</step>
        <step id="S3">Second Class performs the work</step>
        <step id="S4">Last Class confirms work completion</step>
        <step id="S5">First Class acknowledges request creation</step>
        <step id="S6">User receives completion confirmation</step>
    </mainSequence>
</useCase>
