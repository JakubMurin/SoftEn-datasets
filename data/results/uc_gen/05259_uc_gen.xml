<useCase id="UC1">
    <name>User registration</name>
    <description>Allow user to register for the service.</description>
    <actors>
        <actor>User</actor>
        <actor>FrontEnd</actor>
        <actor>MD</actor>
    </actors>
    <preconditions>
        <precondition>User is a new user.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully registers.</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>User fails to complete registration.</condition>
    </failureEndConditions>
    <trigger>User requests registration.</trigger>
    <mainSequence>
        <step id="S1">User requests registration.</step>
        <step id="S2">FrontEnd shows registration form.</step>
        <step id="S3">User fills in registration form.</step>
        <step id="S4">FrontEnd shows Consent form.</step>
        <step id="S5">User accepts Consent.</step>
        <step id="S6">FrontEnd validates form.</step>
        <step id="S7">FrontEnd posts register request to MD.</step>
        <step id="S8">MD resolves registration successfully.</step>
        <step id="S9">FrontEnd shows success message.</step>
    </mainSequence>
</useCase>
