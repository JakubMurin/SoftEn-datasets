<useCase id="UC001">
    <name>Access and Download ETD Embargo Metadata</name>
    <description>As a Digital Records Archivist, I want to access and download embargo metadata for ETDs.</description>
    <actors>
        <actor>Digital Records Archivist</actor>
    </actors>
    <preconditions>
        <precondition>No login required for accessing embargo metadata.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Embargo metadata successfully displayed and downloaded.</condition>
    </successEndConditions>
    <trigger>Archivist requests embargo metadata for ETDs.</trigger>
    <mainSequence>
        <step id="S1">Archivist requests embargo metadata for ETDs.</step>
        <step id="S2">Web Interface fetches embargo metadata.</step>
        <step id="S3">EDRMS Backend queries embargo metadata.</step>
        <step id="S4">Repository Database returns metadata.</step>
        <step id="S5">EDRMS Backend displays metadata.</step>
        <step id="S6">Web Interface shows embargo metadata.</step>
        <step id="S7">Archivist requests download of metadata.</step>
        <step id="S8">Web Interface fetches detailed metadata.</step>
        <step id="S9">EDRMS Backend queries detailed embargo data.</step>
        <step id="S10">Repository Database returns detailed data.</step>
        <step id="S11">EDRMS Backend prepares download file.</step>
        <step id="S12">File Server provides download link.</step>
        <step id="S13">EDRMS Backend provides download link.</step>
        <step id="S14">Web Interface provides download link.</step>
        <step id="S15">Archivist downloads file by link.</step>
        <step id="S16">File Server provides metadata file.</step>
    </mainSequence>
</useCase>
