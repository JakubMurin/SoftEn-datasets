<useCase id="UC1">
    <name>Process Payment</name>
    <actors>
        <actor>Member</actor>
        <actor>Front End</actor>
        <actor>Payment Service</actor>
        <actor>Database Management</actor>
        <actor>Mobile Banking System</actor>
    </actors>
    <mainSequence>
        <step id="S1">Member selects payment option</step>
        <step id="S2">Front End initiates payment request</step>
        <step id="S3">Payment Service requests payment processing</step>
        <step id="S4">Mobile Banking System processes transaction</step>
        <step id="S5">Mobile Banking System sends transaction authentication to Member</step>
        <step id="S6">Member authorizes transaction</step>
        <step id="S7">Mobile Banking System confirms transaction success</step>
        <step id="S8">Payment Service updates payment status in Database</step>
        <step id="S9">Database confirms update to Payment Service</step>
        <step id="S10">Payment Service displays success message in Front End</step>
        <step id="S11">Front End shows confirmation to Member</step>
    </mainSequence>
</useCase>
