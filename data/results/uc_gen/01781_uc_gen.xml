<useCase id="1">
    <name>Create and Destroy ServerHandler</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User creates a new ServerHandler</step>
        <step id="S2">ServerHandler activates</step>
        <step id="S3">RequestManager is created by ServerHandler</step>
        <step id="S4">ServerHandler returns</step>
        <step id="S5">ServerHandler communicates success to User</step>
        <step id="S6">User deletes the ServerHandler</step>
        <step id="S7">ServerHandler deactivates</step>
        <step id="S8">RequestManager is deleted by ServerHandler</step>
        <step id="S9">ServerHandler communicates destruction to User</step>
    </mainSequence>
</useCase>
