<useCase id="UC1">
    <name>Create a new memo</name>
    <actors>
        <actor>User</actor>
        <actor>View</actor>
        <actor>Controller</actor>
        <actor>Model</actor>
        <actor>DB</actor>
    </actors>
    <mainSequence>
        <step id="S1">User fills out a memo form.</step>
        <step id="S2">User submits the memo form.</step>
        <step id="S3">View sends a POST /memos request.</step>
        <step id="S4">Controller creates a new memo object.</step>
        <step id="S5">Model saves the memo to the database.</step>
        <step id="S6">DB returns success/failure to Model.</step>
        <step id="S7">Model returns the new memo object to Controller.</step>
        <step id="S8">Controller redirects to memos show page.</step>
        <step id="S9">View displays the new memo.</step>
    </mainSequence>
</useCase>
