<useCase id="UC001">
    <name>Create Course</name>
    <actors>
        <actor>Manager</actor>
    </actors>
    <mainSequence>
        <step id="S1">Manager selects option to create a course.</step>
        <step id="S2">System asks for the course creation data.</step>
        <step id="S3">Manager inserts the course data.</step>
        <step id="S4">System asks for confirmation.</step>
        <step id="S5">Manager confirms.</step>
        <step id="S6">System creates a new course with provided data.</step>
        <step id="S7">Operation success message is displayed.</step>
    </mainSequence>
</useCase>
