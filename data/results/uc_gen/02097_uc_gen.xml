<useCase id="UC1">
    <name>Check Expiry Dates of Ingredients</name>
    <actors>
        <actor>Chef</actor>
    </actors>
    <mainSequence>
        <step id="S1">Chef requests expiry dates of ingredients</step>
        <step id="S2">UI Interface fetches expiry dates</step>
        <step id="S3">Server/Controller queries ingredients with expiry dates</step>
        <step id="S4">Database returns expiry dates data</step>
        <step id="S5">Server/Controller displays expiry dates</step>
        <step id="S6">UI Interface shows expiry dates of ingredients to Chef</step>
    </mainSequence>
</useCase>
