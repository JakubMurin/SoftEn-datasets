<useCase id="UC1">
    <name>Fault Management Provisioning</name>
    <actors>
        <actor>Business User</actor>
        <actor>System Operator Framework</actor>
    </actors>
    <preconditions>
        <precondition>System Operator Framework is operational</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Fault Management Report successfully generated</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Error occurred during Fault Management Provisioning</condition>
    </failureEndConditions>
    <mainSequence>
        <step id="S1">Business User registers for Fault Management notifications</step>
        <step id="S2">System Operator Framework creates Fault Management Job</step>
        <step id="S3">Fault Management Job is in progress</step>
        <step id="S4">Fault Management Job generates data</step>
        <step id="S5">Fault Management Report is created</step>
        <step id="S6">Fault Management Report is in progress</step>
        <step id="S7">Fault Management Report collects data</step>
        <step id="S8">Fault Management Report is completed</step>
        <step id="S9">Fault Management Job is completed or scheduled</step>
        <step id="S10">Business User requests Fault Management Report</step>
        <step id="S11">Fault Management Report is retrieved</step>
    </mainSequence>
</useCase>
