<useCase id="UC001">
	<name>Booking a Theater Ticket</name>
	<actors>
		<actor>User</actor>
		<actor>Theater</actor>
		<actor>Server</actor>
	</actors>
	<preconditions>
		<precondition>User is logged in.</precondition>
	</preconditions>
	<successEndConditions>
		<condition>Theater ticket successfully booked.</condition>
	</successEndConditions>
	<failureEndConditions>
		<condition>Booking failed due to insufficient balance.</condition>
	</failureEndConditions>
	<mainSequence>
		<step id="S1">User inserts card.</step>
		<step id="S2">User selects date for the theater show.</step>
		<step id="S3">Theater offers available seats to the user.</step>
		<step id="S4">User submits the order.</step>
		<step id="S5">Theater receives and confirms the order from the user.</step>
		<step id="S6">Server processes the order confirmation.</step>
	</mainSequence>
</useCase>
