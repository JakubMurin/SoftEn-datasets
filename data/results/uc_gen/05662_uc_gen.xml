<useCase id="UC1">
    <name>Conduct Inspection Assignment</name>
    <actors>
        <actor>Inspector</actor>
        <actor>Portal</actor>
        <actor>DB</actor>
    </actors>
    <preconditions>
        <precondition>Inspector is logged in</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Inspector logs in to the Portal</step>
        <step id="S2">Portal validates Inspector credentials with DB</step>
        <step id="S3">DB confirms credentials validation</step>
        <step id="S4">Portal displays Dashboard to Inspector</step>
        <step id="S5">Inspector selects Assigned Inspections</step>
        <step id="S6">Portal retrieves Assigned Inspections from DB</step>
        <step id="S7">DB provides list of Assigned Inspections to Portal</step>
        <step id="S8">Portal displays Assigned Inspections to Inspector</step>
    </mainSequence>
</useCase>
