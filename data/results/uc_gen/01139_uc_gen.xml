<useCase id="UC1">
    <name>Learn Github Workflow</name>
    <description>Employee learns how to effectively use Github</description>
    <actors>
        <actor>Employee</actor>
        <actor>Resource</actor>
        <actor>Documentation</actor>
        <actor>Github</actor>
        <actor>Issue_Tracker</actor>
    </actors>
    <mainSequence>
        <step id="S1">Identify need for Github training</step>
        <step id="S2">Provide access to Github Documentation and Tutorials</step>
        <step id="S3">Access Documentation</step>
        <step id="S4">Provide Guidelines and Tutorials</step>
        <step id="S5">Explore Github functionalities through guided tutorials</step>
        <step id="S6">Demonstrate issue tracking, repository management</step>
        <step id="S7">Navigate to assigned issues</step>
        <step id="S8">Query for issues tagged to Employee</step>
        <step id="S9">Return list of assigned issues</step>
        <step id="S10">Display assigned issues</step>
        <step id="S11">Participate in issues (comment, update status)</step>
    </mainSequence>
</useCase>
