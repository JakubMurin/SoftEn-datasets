<useCase id="UC1">
    <name>User Initiates Dataset Reconfiguration</name>
    <actors>
        <actor>User</actor>
        <actor>Dataset Management System</actor>
        <actor>Explore Table</actor>
    </actors>
    <preconditions>
        <precondition>Dataset Management System is operational</precondition>
        <precondition>Explore Table is accessible</precondition>
    </preconditions>
    <trigger>User initiates Dataset Reconfiguration</trigger>
    <mainSequence>
        <step id="S1">User sends Reconfigure Dataset Request to Dataset Management System</step>
        <step id="S2">Dataset Management System validates Explore Table Update</step>
        <step id="S3">Explore Table Update Successful</step>
        <step id="S4">Proceed with Dataset Reconfiguration</step>
        <step id="S5">Reconfiguration Success</step>
        <step id="S6">Explore Table Update Fails</step>
        <step id="S7">Rollback Any Changes</step>
        <step id="S8">Reconfiguration Failed</step>
    </mainSequence>
</useCase>
