<useCase id="UC1">
  <name>Supply Accruals</name>
  <actors>
    <actor>DonorRepresentative</actor>
  </actors>
  <mainSequence>
    <step id="S1">Log in via secure authentication</step>
    <step id="S2">Validate donor credentials</step>
    <step id="S3">Display donor dashboard</step>
    <step id="S4">Select "Supply Accruals" option</step>
