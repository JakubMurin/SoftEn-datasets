    <step id="S7">Check for existing collection details</step>
    <step id="S8">Confirm collection to supply accruals</step>
    <step id="S9">Upload files and metadata</step>
    <step id="S10">Create/update record for incremental accrual</step>
    <step id="S11">Generate unique identifiers for new files</step>
    <step id="S12">Accrual recorded in database</step>
    <step id="S13">Display success message: "Accrual added successfully"</step>
    <step id="S14">Log out</step>
  </mainSequence>
</useCase>
