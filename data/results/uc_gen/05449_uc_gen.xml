<useCase id="UC1">
    <name>Archive Inventory Upload</name>
    <actors>
        <actor>Archivist</actor>
    </actors>
    <preconditions>
        <precondition>Archivist is authenticated</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Archivist signs in to the system</step>
        <step id="S2">Archivist accesses the upload interface</step>
        <step id="S3">Archivist chooses inventory files</step>
        <step id="S4">Archivist provides metadata</step>
        <step id="S5">Archivist defines access rights</step>
        <step id="S6">Metadata and access rights are saved</step>
        <step id="S7">Archivist uploads files</step>
        <step id="S8">Files are successfully stored in the archive</step>
        <step id="S9">Inventory list is updated with new entries</step>
        <step id="S10">Archivist is notified of successful upload</step>
        <step id="S11">Notification is sent to donor representatives</step>
    </mainSequence>
</useCase>
