<useCase id="UC1">
    <name>Submit new history data</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User submits new history data</step>
        <step id="S2">UI receives new history data</step>
        <step id="S3">Router forwards data to Controller</step>
        <step id="S4">Controller creates new history</step>
        <step id="S5">Repository saves new history</step>
        <step id="S6">Model processes and saves history in DB</step>
        <step id="S7">DB confirms saving history</step>
        <step id="S8">Model confirms saving history</step>
        <step id="S9">Repository confirms saving history</step>
        <step id="S10">Controller confirms saving history</step>
        <step id="S11">Router confirms saving history</step>
        <step id="S12">UI displays success message</step>
    </mainSequence>
</useCase>
