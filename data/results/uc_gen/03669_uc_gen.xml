<useCase id="UC1">
    <name>Accéder au produit A</name>
    <actors>
        <actor>Utilisateur</actor>
        <actor>AuthGuard</actor>
        <actor>Produit [A]</actor>
        <actor>Portail</actor>
    </actors>
    <mainSequence>
        <step id="S1">L'Utilisateur accède au produit A</step>
        <step id="S2">AuthGuard vérifie l'authentification de l'utilisateur</step>
        <step id="S3">AuthGuard redirige vers le produit A (si authentifié)</step>
        <step id="S4">AuthGuard redirige vers le Portail (si non authentifié)</step>
    </mainSequence>
</useCase>
