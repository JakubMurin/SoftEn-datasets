<useCase id="001">
    <name>Communication Use Case</name>
    <description>Describes the process of communication between source and target.</description>
    <actors>
        <actor>User</actor>
        <actor>Source</actor>
        <actor>Target</actor>
    </actors>
    <mainSequence>
        <step id="S1">User links to Source target.</step>
        <step id="S2">Source offers a message to Target (1).</step>
        <step id="S3">Target accepts the message.</step>
        <step id="S4">Source offers another message to Target (2).</step>
        <step id="S5">Target postpones the second message.</step>
        <step id="S6">Target consumes the postponed message (2).</step>
        <step id="S7">Source completes the communication.</step>
    </mainSequence>
</useCase>
