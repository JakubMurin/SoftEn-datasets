<useCase id="UC1">
    <name>Login Use Case</name>
    <actors>
        <actor>Actor</actor>
    </actors>
    <trigger>User logs in</trigger>
    <mainSequence>
        <step id="S1">User logs in</step>
        <step id="S2">UI creates role and max attempts</step>
        <step id="S3">UI displays login form</step>
        <step id="S4">Ask user for E-Mail and Password</step>
        <step id="S5">UI sends authentication data to AuthServ</step>
        <step id="S6">AuthServ authenticates user</step>
        <step id="S7">UI displays UserSession</step>
        <step id="S8">UI shows successful operation message</step>
    </mainSequence>
</useCase>
