<useCase id="UC001">
    <name>Connect to Bootstrap</name>
    <actors>
        <actor>actor</actor>
    </actors>
    <mainSequence>
        <step id="S1">Actor connects to Bootstrap</step>
        <step id="S2">Bootstrap validates connection</step>
        <step id="S3">Bootstrap resolves and connects</step>
        <step id="S4">Bootstrap initiates and registers</step>
        <step id="S5">AbstractBoostrap initializes and registers</step>
        <step id="S6">ChannelFactory creates new channel</step>
        <step id="S7">AbstractBoostrap registers with SingleThreadEventLoop</step>
        <step id="S8">AbstractChannel.AbstractUnsafe registers the channel</step>
        <step id="S9">AbstractChannel.AbstractUnsafe registers the channel asynchronously</step>
        <step id="S10">AbstractChannel.AbstractUnsafe handles future registrations</step>
        <step id="S11">AbstractChannel connects and registers with DefaultChannelPipeline</step>
        <step id="S12">AbstractChannelHandlerContext connects and invokes connect</step>
        <step id="S13">AbstractNioChannel handles connection and activation</step>
    </mainSequence>
</useCase>
