<useCase id="UC123">
    <name>Submit Documents to Registry</name>
    <description>Content provider submits documents and metadata to the registry</description>
    <actors>
        <actor>Content Provider</actor>
        <actor>Document Source</actor>
        <actor>Document Repository</actor>
        <actor>Document Registry</actor>
    </actors>
    <mainSequence>
        <step id="S1">Content Provider initiates submission</step>
        <step id="S2">Document Source collects document(s) and metadata</step>
        <step id="S3">Document Source submits document(s) and metadata</step>
        <step id="S4">Document Repository processes request</step>
        <step id="S5">Document Repository stores document(s)</step>
        <step id="S6">Document Registry submits metadata</step>
        <step id="S7">Document Registry validates metadata</step>
        <step id="S8">Document Repository sends error response</step>
        <step id="S9">Document Registry sends error response</step>
    </mainSequence>
</useCase>
