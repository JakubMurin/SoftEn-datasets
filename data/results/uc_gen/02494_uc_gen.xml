<useCase id="UC001">
    <name>List Passage Between 2 Buildings</name>
    <actors>
        <actor>User</actor>
        <actor>:listPassageBetween2BuildingsComponentHTML</actor>
        <actor>BuildingServiceFE</actor>
        <actor>FloorServiceFE</actor>
        <actor>BuildingController</actor>
        <actor>FloorController</actor>
        <actor>BuildingServiceBE</actor>
        <actor>FloorServiceBE</actor>
    </actors>
    <mainSequence>
        <step id="S1">User lists Passage Between 2 Buildings</step>
        <step id="S2">listPassageBetween2BuildingsComponentHTML gets Buildings</step>
        <step id="S3">BuildingServiceFE gets Buildings</step>
        <step id="S4">BuildingController finds all Buildings</step>
        <step id="S5">BuildingServiceBE queries to get Buildings</step>
        <step id="S6">BuildingServiceBE receives List of Buildings</step>
        <step id="S7">BuildingController sends List of Buildings to BuildingServiceFE</step>
        <step id="S8">BuildingServiceFE logs Buildings</step>
        <step id="S9">listPassageBetween2BuildingsComponentHTML asks for 2 Buildings</step>
        <step id="S10">User selects 2 Buildings</step>
        <step id="S11">listPassageBetween2BuildingsComponent lists Passage Between 2 Buildings</step>
        <step id="S12">listPassageBetween2BuildingsComponent checks Passage</step>
        <step id="S13">FloorController queries to find Passage</step>
        <step id="S14">FloorController receives Passage</step>
        <step id="S15">listPassageBetween2BuildingsComponent shows Passage</step>
    </mainSequence>
</useCase>
