<useCase id="UC001">
	<name>Login to Library System</name>
	<description>User can log in to the library system.</description>
	<actors>
		<actor>User</actor>
	</actors>
	<preconditions>
		<precondition>Library system is operational.</precondition>
	</preconditions>
	<successEndConditions>
		<condition>User is successfully logged in.</condition>
	</successEndConditions>
	<failureEndConditions>
		<condition>User is unable to login due to incorrect details.</condition>
	</failureEndConditions>
	<trigger>User clicks on "Login" button.</trigger>
	<mainSequence>
		<step id="S1">User clicks on "Login" button</step>
		<step id="S2">User enters username and password</step>
	</mainSequence>
</useCase>
