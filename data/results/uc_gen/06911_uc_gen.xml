<useCase id="UC1">
	<name>Edit Content</name>
	<description>Allow Content Editor to search, select, edit, and save content</description>
	<actors>
		<actor>Content Editor</actor>
	</actors>
	<preconditions>
		<precondition>Content Editor is logged in</precondition>
	</preconditions>
	<successEndConditions>
		<condition>Content changes successfully saved</condition>
	</successEndConditions>
	<trigger>User wants to edit content</trigger>
	<mainSequence>
		<step id="S1">Content Editor enters search query (keywords/tags)</step>
		<step id="S2">Content Editor selects content from search results</step>
		<step id="S3">Content Editor edits selected content</step>
		<step id="S4">Content Editor confirms changes</step>
	</mainSequence>
</useCase>
