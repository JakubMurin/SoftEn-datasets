<useCase id="UC001">
    <name>Attendee requests summary</name>
    <actors>
        <actor>Attendee</actor>
        <actor>Workshop Platform (WP)</actor>
        <actor>CMS</actor>
        <actor>Database (DB)</actor>
        <actor>Content Editor (CE)</actor>
        <actor>Summary Page (SP)</actor>
    </actors>
    <mainSequence>
        <step id="S1">Attendee requests summary.</step>
        <step id="S2">WP fetches request for summary from CMS.</step>
        <step id="S3">CMS queries workshop data from DB.</step>
        <step id="S4">DB returns workshop data to CMS.</step>
        <step id="S5">CMS generates summary content</step>
        <step id="S6">CE submits summary to CMS.</step>
        <step id="S7">CMS updates DB with summary.</step>
        <step id="S8">DB confirms update to CMS.</step>
        <step id="S9">CMS publishes summary to SP.</step>
        <step id="S10">SP displays summary content to Attendee.</step>
    </mainSequence>
</useCase>
