<useCase id="UC001">
    <name>View POA Requests List</name>
    <actors>
        <actor>Accredited Representative</actor>
        <actor>vets-website (React Frontend)</actor>
        <actor>vets-api (Rails Backend)</actor>
        <actor>Lighthouse API (Benefits Claims API)</actor>
        <actor>VA.gov Database (PostgreSQL)</actor>
    </actors>
    <preconditions>
        <precondition>Accredited Representative is logged in</precondition>
        <precondition>VA.gov Database is accessible</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Accredited Representative views POA Requests List</step>
        <step id="S2">Backend retrieves POA requests for display</step>
        <step id="S3">Backend queries VA.gov Database for POA Requests data</step>
        <step id="S4">Frontend displays the POA Requests List</step>
    </mainSequence>
</useCase>
