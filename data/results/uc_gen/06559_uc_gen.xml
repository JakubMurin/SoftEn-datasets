<useCase id="UC1">
    <name>Get Courses for Teacher</name>
    <actors>
        <actor>User</actor>
        <actor>Controller</actor>
        <actor>Teacher</actor>
        <actor>Course</actor>
    </actors>
    <preconditions>
        <precondition>Teacher exists</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">User requests courses for a teacher</step>
        <step id="S2">Controller retrieves teacher by ID</step>
        <step id="S3">Controller gets teacher's teachings</step>
        <step id="S4">Controller receives courses</step>
        <step id="S5">Controller displays search results</step>
        <step id="S6">Controller iterates over courses</step>
        <step id="S7">Controller retrieves course ID</step>
        <step id="S8">Controller retrieves course name</step>
        <step id="S9">Controller retrieves course description</step>
        <step id="S10">Controller retrieves course price</step>
        <step id="S11">Controller retrieves course average rating</step>
        <step id="S12">Controller retrieves course banner image URL</step>
        <step id="S13">Controller sends course card data to User</step>
        <step id="S14">Controller sends search results to User</step>
    </mainSequence>
</useCase>
