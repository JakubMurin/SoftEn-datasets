<useCase id="UC001">
    <name>Lease a Bike</name>
    <actors>
        <actor>Customer</actor>
        <actor>Bike</actor>
        <actor>Lease</actor>
        <actor>InvoiceGenerator</actor>
    </actors>
    <mainSequence>
        <step id="S1">Customer starts the lease</step>
        <step id="S2">Bike starts the lease</step>
        <step id="S3">Customer unlocks the bike</step>
        <step id="S4">Customer ends the lease</step>
        <step id="S5">Bike ends the lease</step>
        <step id="S6">Lease adds invoice</step>
        <step id="S7">Customer locks the bike</step>
    </mainSequence>
</useCase>
