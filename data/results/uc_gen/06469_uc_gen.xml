<useCase id="UC1">
    <name>Adicionar Tarefa</name>
    <actors>
        <actor>User</actor>
        <actor>TodoForm</actor>
        <actor>TodoWrapper</actor>
        <actor>Backend</actor>
    </actors>
    <mainSequence>
        <step id="S1">User enters task description.</step>
        <step id="S2">User clicks on "Add Task".</step>
        <step id="S3">TodoForm handles submit.</step>
        <step id="S4">TodoWrapper adds task to Backend.</step>
        <step id="S5">Backend returns confirmation to TodoWrapper.</step>
        <step id="S6">TodoWrapper updates task list.</step>
        <step id="S7">TodoWrapper displays new task in the list to User.</step>
    </mainSequence>
</useCase>
