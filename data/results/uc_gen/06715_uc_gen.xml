<useCase id="UC1">
    <name>Main Menu Usage</name>
    <actors>
        <actor>user</actor>
        <actor>Menu</actor>
        <actor>Pilih Menu</actor>
        <actor>Aku</actor>
        <actor>Dia</actor>
        <actor>Quantity</actor>
        <actor>Total</actor>
        <actor>Exit</actor>
    </actors>
    <preconditions>
        <precondition>User can access the main menu.</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">User displays the main menu.</step>
        <step id="S2">User selects Menu 1 or 2 and chooses Aku or Dia.</step>
        <step id="S3">Aku displays his profile.</step>
        <step id="S4">User enters the quantity.</step>
        <step id="S5">Quantity information is printed.</step>
        <step id="S6">User returns to the main menu.</step>
        <step id="S7">If not selected, go back to the main menu.</step>
        <step id="S8">Dia displays his profile.</step>
        <step id="S9">User enters the quantity.</step>
        <step id="S10">Quantity information is printed.</step>
        <step id="S11">User returns to the main menu.</step>
        <step id="S12">If not selected, go back to the main menu.</step>
    </mainSequence>
</useCase>
