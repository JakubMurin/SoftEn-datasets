<useCase id="UC1">
    <name>User Registration</name>
    <description>Register a new user</description>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>User wants to register</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully registered</condition>
    </successEndConditions>
    <trigger>User requests registration</trigger>
    <mainSequence>
        <step id="S1">User requests registration</step>
        <step id="S2">FE shows registration form to User</step>
        <step id="S3">User fills in registration form</step>
        <step id="S4">FE shows Consent form to User</step>
        <step id="S5">User accepts Consent</step>
        <step id="S6">FE validates form</step>
        <step id="S7">FE posts registration to MD</step>
        <step id="S8">MD resolves registration as success</step>
        <step id="S9">FE shows success message to User</step>
    </mainSequence>
</useCase>
