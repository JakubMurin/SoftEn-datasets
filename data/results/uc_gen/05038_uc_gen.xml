<useCase id="UC1">
    <name>Install Component</name>
    <actors>
        <actor>Operations</actor>
        <actor>ComponentOperator</actor>
        <actor>PublishedNotification</actor>
        <actor>EventPublishingEnablementOperator</actor>
        <actor>TMFC019</actor>
    </actors>
    <mainSequence>
        <step id="S1">Operations installs Component</step>
        <step id="S2">Component created by ComponentOperator</step>
        <step id="S3">PublishedNotification created for each published notification</step>
        <step id="S4">EventPublishingEnablementOperator receives the creation event</step>
        <step id="S5">TMFC019 searches for a matching topic</step>
        <step id="S6">EventPublishingEnablementOperator configures Topic Event Hub</step>
        <step id="S7">Component configured with event publishing URL</step>
        <step id="S8">PublishedNotification updated</step>
        <step id="S9">Component updated by ComponentOperator</step>
    </mainSequence>
</useCase>
