<useCase id="UC001">
    <name>Process After-sales Request</name>
    <actors>
        <actor>User</actor>
        <actor>Seller</actor>
        <actor>Manager</actor>
    </actors>
    <preconditions>
        <precondition>User applies for after-sales service.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>After-sales process completed successfully.</condition>
    </successEndConditions>
    <trigger>User requests after-sales service.</trigger>
    <mainSequence>
        <step id="S1">User applies for after-sales service.</step>
        <step id="S2">Seller reviews after-sales application.</step>
        <step id="S3">Platform updates after-sales status.</step>
        <step id="S4">Platform receives after-sales review response.</step>
        <step id="S5">User provides logistics information.</step>
        <step id="S6">Seller confirms receipt of returned item.</step>
        <step id="S7">Platform initiates automatic refund.</step>
        <step id="S8">Platform sends after-sales completion notification to user.</step>
    </mainSequence>
</useCase>
