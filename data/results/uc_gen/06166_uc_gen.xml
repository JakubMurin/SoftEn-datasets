<useCase id="UC1">
    <name>Create Data Package</name>
    <actors>
        <actor>Client</actor>
        <actor>DataPackageManagerResource</actor>
        <actor>Creator</actor>
        <actor>DataPackageManager</actor>
        <actor>DataManagerClient</actor>
        <actor>EMLDataManager</actor>
        <actor>DataManager</actor>
        <actor>EMLDataPackage</actor>
        <actor>EML200DataPackageParser</actor>
        <actor>DocumentBuilder</actor>
        <actor>DataPackage</actor>
        <actor>QualityReport</actor>
        <actor>QualityCheck</actor>
        <actor>SolrMetadataCatalog</actor>
    </actors>
    <mainSequence>
        <step id="S1">Client creates Data Package</step>
        <step id="S2">Creator runs</step>
        <step id="S3">DataPackageManager creates Data Package</step>
        <step id="S4">DataPackageManager parses EML</step>
        <step id="S5">DataPackageManager parses Metadata</step>
        <step id="S6">EML200 parses EML</step>
        <step id="S7">EML200 parses Document</step>
        <step id="S8">DataPackage instance created</step>
        <step id="S9">DataPackageManager checks DataPackage</step>
        <step id="S10">DataPackageManager creates DataPackageAux</step>
        <step id="S11">DataPackageManager adds DataPackage to workingOn</step>
        <step id="S12">DataPackageManager checks for conflicting reservation</step>
        <step id="S13">EMLDataPackage validates Metadata</step>
        <step id="S14">DataManagerClient creates DataEntities</step>
        <step id="S15">EMLDataManager downloads Entity</step>
        <step id="S16">EMLDataManager loads Entity</step>
        <step id="S17">DataManager loads Data to DB</step>
        <step id="S18">EMLDataPackage instance created</step>
        <step id="S19">DataPackageManager stores Metadata</step>
        <step id="S20">DataPackageManager generates Dublin Core</step>
        <step id="S21">DataPackageManager inserts Solr</step>
        <step id="S22">DataPackageManager inserts Provenance Record</step>
        <step id="S23">DataPackageManager inserts Resource Registry</step>
        <step id="S24">DataPackageManager registers DOI</step>
        <step id="S25">DataPackageManager removes from workingOn</step>
    </mainSequence>
</useCase>
