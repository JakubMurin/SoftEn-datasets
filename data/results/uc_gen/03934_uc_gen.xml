<useCase id="UC1">
    <name>Place Order Use Case</name>
    <actors>
        <actor>App</actor>
        <actor>OrderServiceFacade</actor>
        <actor>InventoryService</actor>
        <actor>PaymentService</actor>
        <actor>ShippingService</actor>
    </actors>
    <mainSequence>
        <step id="S1">App creates order</step>
        <step id="S2">App places order for a product</step>
        <step id="S3">OrderServiceFacade finds the product</step>
        <step id="S4">OrderServiceFacade checks product availability with InventoryService</step>
        <step id="S5">PaymentService processes payment</step>
        <step id="S6">ShippingService ships the product</step>
    </mainSequence>
</useCase>
