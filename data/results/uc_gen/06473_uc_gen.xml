<useCase id="UC1">
    <name>Manage Todo List</name>
    <actors>
        <actor>User</actor>
    </actors>
    <trigger>User enters task description and clicks on "Add Task"</trigger>
    <mainSequence>
        <step id="S1">User enters task description</step>
        <step id="S2">User clicks on "Add Task"</step>
        <step id="S3">TodoForm calls handleSubmit()</step>
        <step id="S4">TodoWrapper calls Backend to addTodo()</step>
        <step id="S5">Backend returns confirmation to TodoWrapper</step>
        <step id="S6">TodoWrapper updates the task list</step>
        <step id="S7">TodoWrapper displays the new task in the list to User</step>
    </mainSequence>
</useCase>
