<useCase id="UC1">
    <name>User Profile Management</name>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>User is logged in</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Profile successfully updated</condition>
    </successEndConditions>
    <mainSequence>
        <step id="S1">User initiates Update Profile action</step>
        <step id="S2">Service receives Update Profile request</step>
        <step id="S3">Service updates the user profile</step>
        <step id="S4">Service sends Profile Updated notification to User</step>
        <step id="S5">User receives Profile Updated notification from Service</step>
        <step id="S6">User initiates Get Profile action</step>
        <step id="S7">Replica retrieves stale profile data</step>
    </mainSequence>
</useCase>
