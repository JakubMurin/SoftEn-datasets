<useCase id="UC1">
    <name>Initialisation d'un monstre</name>
    <actors>
        <actor>User</actor>
        <actor>Main</actor>
        <actor>Labyrinthe</actor>
        <actor>Monstre</actor>
    </actors>
    <preconditions>
        <precondition>Le fichier labySimple/laby0.txt existe</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">User lance la fonction main()</step>
        <step id="S2">Main initialise le Labyrinthe en utilisant le fichier labySimple/laby0.txt</step>
        <step id="S3">Labyrinthe lit le fichier</step>
        <step id="S4">Monstre est créé aux coordonnées x, y</step>
        <step id="S5">Monstre est positionné aux coordonnées x, y</step>
        <step id="S6">Monstre est retourné au Labyrinthe</step>
        <step id="S7">Labyrinthe retourne au Main</step>
        <step id="S8">Main affiche le Labyrinthe</step>
    </mainSequence>
</useCase>
