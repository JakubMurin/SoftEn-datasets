<useCase id="UC1">
    <name>Login to System</name>
    <description>User logs in to the system</description>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>User has valid login credentials</precondition>
    </preconditions>
    <successEndConditions>
        <condition>User successfully logs in</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>User fails to log in</condition>
    </failureEndConditions>
    <trigger>User clicks on the login button</trigger>
    <mainSequence>
        <step id="S1">User enters username and password</step>
        <step id="S2">System validates the credentials</step>
        <step id="S3">System grants access to the user</step>
    </mainSequence>
</useCase>
