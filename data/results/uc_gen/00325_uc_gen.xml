<useCase id="UC1">
    <name>Share Artwork</name>
    <actors>
        <actor>Member</actor>
    </actors>
    <mainSequence>
        <step id="S1">Member shares artwork</step>
        <step id="S2">Application retrieves file share form</step>
        <step id="S3">UI Manager shows file share form</step>
        <step id="S4">Member views form</step>
        <step id="S5">Application displays form</step>
        <step id="S6">Member fills in content details and uploads file</step>
        <step id="S7">Member adds file</step>
        <step id="S8">Member submits form</step>
        <step id="S9">Application analyzes file</step>
        <step id="S10">Application displays file analysis result to Member</step>
        <step id="S11">Application requests confirmation for submission</step>
        <step id="S12">Member confirms submission</step>
        <step id="S13">Application copies file to "To be moderated" directory</step>
        <step id="S14">Application generates transaction number</step>
        <step id="S15">Application logs transaction</step>
        <step id="S16">Application transmits transaction and file to Server</step>
        <step id="S17">Server notifies Librarian of artwork submission</step>
        <step id="S18">Application notifies Member of moderation waiting</step>
    </mainSequence>
</useCase>
