<useCase id="UC001">
    <name>Lease Bike</name>
    <actors>
        <actor>Customer</actor>
        <actor>Bike</actor>
        <actor>Lease</actor>
        <actor>InvoiceGenerator</actor>
    </actors>
    <preconditions>
        <precondition>The Customer starts the lease of the Bike.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>The Invoice is generated successfully.</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>The Invoice generation fails.</condition>
    </failureEndConditions>
    <mainSequence>
        <step id="S1">Customer starts the lease of the Bike.</step>
        <step id="S2">Customer unlocks the Bike.</step>
        <step id="S3">Customer ends the lease of the Bike.</step>
        <step id="S4">Customer locks the Bike.</step>
    </mainSequence>
</useCase>
