    <actor>ServerHandler</actor>
    <actor>RequestManager</actor>
  </actors>
  <preconditions>
    <precondition>User is interacting with the system.</precondition>
  </preconditions>
  <successEndConditions>
    <condition>ServerHandler successfully created and destroyed.</condition>
  </successEndConditions>
