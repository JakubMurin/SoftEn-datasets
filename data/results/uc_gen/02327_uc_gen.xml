<useCase id="UC1">
    <name>Manage Capabilities</name>
    <description>As a user, I want to manage capabilities on the system.</description>
    <actors>
        <actor>DevOpsEngineer</actor>
        <actor>ApplicationDeveloper</actor>
    </actors>
    <preconditions>
        <precondition>System is up and running.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>All capabilities are correctly managed.</condition>
    </successEndConditions>
    <trigger>DevOpsEngineer or ApplicationDeveloper initiates a capability management action.</trigger>
    <mainSequence>
        <step id="S1">DevOpsEngineer deploys a capability.</step>
        <step id="S2">ApplicationDeveloper develops a capability.</step>
        <step id="S3">DevOpsEngineer removes a capability.</step>
        <step id="S4">DevOpsEngineer updates a capability.</step>
    </mainSequence>
</useCase>
