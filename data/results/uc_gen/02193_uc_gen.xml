<useCase id="UC1">
	<name>Dataset Publishing</name>
	<actors>
		<actor>Publisher</actor>
		<actor>User Account Management</actor>
		<actor>Dataset Publishing</actor>
		<actor>Access Control</actor>
	</actors>
	<mainSequence>
		<step id="S1">Publisher logs in via GitHub or Google.</step>
		<step id="S2">User Account Management authenticates Publisher successfully.</step>
		<step id="S3">Publisher initiates data package creation.</step>
		<step id="S4">Dataset Publishing prepares package metadata.</step>
		<step id="S5">Dataset Publishing sets package visibility to private.</step>
		<step id="S6">Access Control confirms visibility setting.</step>
		<step id="S7">Dataset Publishing imports dataset.</step>
		<step id="S8">Dataset Publishing validates dataset.</step>
		<step id="S9">Dataset Publishing saves dataset package.</step>
		<step id="S10">Publisher publishes package to team.</step>
		<step id="S11">Access Control verifies team access rights.</step>
		<step id="S12">Dataset Publishing notifies team members.</step>
		<step id="S13">Dataset Publishing successfully publishes package.</step>
	</mainSequence>
</useCase>
