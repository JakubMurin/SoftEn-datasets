<useCase id="UC1">
	<name>Authentication Use Case</name>
	<description>Allows a user to authenticate</description>
	<actors>
		<actor>Bob</actor>
		<actor>Alice</actor>
		<actor>I have a really long name</actor>
	</actors>
	<preconditions>
		<precondition>Bob, Alice, and I have a really long name are logged into the system</precondition>
	</preconditions>
	<successEndConditions>
		<condition>User authentication is successful</condition>
	</successEndConditions>
	<failureEndConditions>
		<condition>User authentication failed</condition>
	</failureEndConditions>
	<trigger>User requests authentication</trigger>
	<mainSequence>   
	    <step id="S1">Actor Bob initiates an authentication request</step>         
        <step id="S2">Alice receives the authentication request</step>
        <step id="S3">Bob successfully authenticates</step>
	    <step id="S4">Logging the transaction with I have a really long name is successful</step>         
	</mainSequence>    
</useCase>
