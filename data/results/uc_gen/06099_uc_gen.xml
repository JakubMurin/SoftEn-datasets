<useCase id="UC1">
    <name>Manage Weekly Meal Plan</name>
    <description>Allows Brenna to manage her weekly meal plan</description>
    <actors>
        <actor>Brenna</actor>
    </actors>
    <preconditions>
        <precondition>Brenna has logged in</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Weekly meal plan successfully managed</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Weekly meal plan management failed</condition>
    </failureEndConditions>
    <trigger>User initializes the week</trigger>
    <mainSequence>
        <step id="S1">Brenna initializes the week</step>
        <step id="S2">Brenna filters recipes by criteria</step>
        <step id="S3">Brenna adds a recipe to the plan</step>
        <step id="S4">Brenna edits a recipe in the plan</step>
        <step id="S5">Brenna adds a wine to the plan</step>
        <step id="S6">Brenna views the weekly meal plan</step>
        <step id="S7">Brenna views the grocery list</step>
    </mainSequence>
</useCase>
