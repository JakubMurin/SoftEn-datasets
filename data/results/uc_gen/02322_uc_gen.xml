<useCase id="UC1">
    <name>Manage Capabilities</name>
    <actors>
        <actor>DevOpsEngineer</actor>
        <actor>ApplicationDeveloper</actor>
    </actors>
    <preconditions>
        <precondition>DevOpsEngineer and ApplicationDeveloper have access to the system.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Capabilities are successfully managed.</condition>
    </successEndConditions>
    <trigger>DevOpsEngineer or ApplicationDeveloper initiates a capability management action.</trigger>
    <mainSequence>
        <step id="S1">DevOpsEngineer deploys a capability.</step>
        <step id="S2">DevOpsEngineer removes a capability.</step>
        <step id="S3">DevOpsEngineer updates a capability.</step>
        <step id="S4">ApplicationDeveloper develops a capability.</step>
    </mainSequence>
</useCase>
