<useCase id="UC1">
    <name>Generate Comprehensive Tracking Statistics Report</name>
    <actors>
        <actor>Administrator</actor>
    </actors>
    <mainSequence>
        <step id="S1">Administrator requests statistics</step>
        <step id="S2">Admin UI fetches statistics</step>
        <step id="S3">Admin UI Retrieves comprehensive stats</step>
        <step id="S4">Backend system queries faculty work data in database</step>
        <step id="S5">Database returns requested data</step>
        <step id="S11">Statistics module processes data into statistics</step>
        <step id="S12">Report Generation Service generates a digestible report</step>
        <step id="S13">Report Generation Service returns the generated report</step>
        <step id="S14">Backend system displays the report</step>
    </mainSequence>
</useCase>
