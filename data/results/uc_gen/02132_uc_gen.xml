<useCase id="UC001">
    <name>Place Customer Order</name>
    <actors>
        <actor>Waiter</actor>
        <actor>Cook</actor>
    </actors>
    <mainSequence>
        <step id="S1">Waiter enters customer order</step>
        <step id="S2">System notifies Cook about new order</step>
        <step id="S3">Cook acknowledges receipt of order</step>
        <step id="S4">System confirms order and informs Waiter that it is in preparation</step>
    </mainSequence>
</useCase>
