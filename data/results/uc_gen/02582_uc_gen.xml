<useCase id="UC001">
    <name>Process After-sales Request</name>
    <actors>
        <actor>User</actor>
        <actor>Seller</actor>
        <actor>Manager</actor>
    </actors>
    <preconditions>
        <precondition>User applies for after-sales service.</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">User applies for after-sales service.</step>
        <step id="S2">Seller reviews the after-sales request.</step>
        <step id="S3">Platform updates the after-sales status.</step>
        <step id="S4">Platform receives the after-sales review response.</step>
        <step id="S5">User provides logistics information.</step>
        <step id="S6">Seller confirms receipt of the item.</step>
        <step id="S7">Platform initiates automatic refund.</step>
        <step id="S8">Platform receives the after-sales review response.</step>
        <step id="S9">Platform notifies the user that the after-sales process is completed.</step>
    </mainSequence>
</useCase>
