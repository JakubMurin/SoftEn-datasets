<useCase id="UC1">
    <name>Display All Data of an Application</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User requests to display all data of an application</step>
        <step id="S2">DisplayApplicationDataUI activates</step>
        <step id="S3">DisplayApplicationDataUI requests Display All Data</step>
        <step id="S4">DisplayApplicationDataController activates</step>
        <step id="S5">DisplayApplicationDataController performs doShow()</step>
        <step id="S6">ApplicationRepository activates</step>
        <step id="S7">ApplicationRepository retrieves all applications</step>
        <step id="S8">ApplicationRepository returns Iterable of jobApplications</step>
        <step id="S9">DisplayApplicationDataController deactivates</step>
        <step id="S10">DisplayApplicationDataUI receives List of jobApplications</step>
        <step id="S11">User views List of Applications</step>
        <step id="S12">User selects an Application</step>
        <step id="S13">DisplayApplicationDataUI activates for selected Application</step>
        <step id="S14">DisplayApplicationDataController activates for selected Application</step>
        <step id="S15">DisplayApplicationDataController fetches data for selected Application</step>
        <step id="S16">ApplicationRepository retrieves data for selected Application</step>
        <step id="S17">ApplicationRepository returns jobApplicationData</step>
        <step id="S18">DisplayApplicationDataController deactivates</step>
        <step id="S19">DisplayApplicationDataUI displays Application Data</step>
        <step id="S20">DisplayApplicationDataUI deactivates</step>
    </mainSequence>
</useCase>
