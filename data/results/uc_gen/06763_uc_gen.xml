<useCase id="UC1">
    <name>Submit new history data</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User submits new history data</step>
        <step id="S2">UI receives new history data</step>
        <step id="S3">Router processes POST request to /histories with data</step>
        <step id="S4">Controller creates history with the received data</step>
        <step id="S5">Repository saves the created history</step>
        <step id="S6">Model receives and saves the history in the database</step>
        <step id="S7">Database confirms successful saving</step>
        <step id="S8">Repository confirms successful saving</step>
        <step id="S9">Controller confirms successful saving</step>
        <step id="S10">Router responds with 201 Created</step>
        <step id="S11">UI displays success message to the User</step>
    </mainSequence>
</useCase>
