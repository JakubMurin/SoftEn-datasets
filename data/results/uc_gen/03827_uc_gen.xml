<useCase id="UC1">
    <name>URL Analytics Retrieval</name>
    <description>Retrieve and display analytics data for a specified URL</description>
    <actors>
        <actor>User</actor>
        <actor>AnalyticsPage</actor>
        <actor>AnalyticsControl</actor>
        <actor>URLAnalytics</actor>
        <actor>AnalyticsDB</actor>
    </actors>
    <preconditions>
        <precondition>User enters URL or selects from list</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Data analytics successfully displayed</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Unable to retrieve analytics data</condition>
    </failureEndConditions>
    <trigger>User requests analytics data for a specific URL</trigger>
    <mainSequence>
        <step id="S1">User enters URL or selects from list</step>
        <step id="S2">Send request for analytics data</step>
        <step id="S3">Retrieve analytics data for specified URL</step>
        <step id="S4">Query analytics data from database</step>
        <step id="S5">Return analytics data</step>
        <step id="S6">Provide analytics data</step>
        <step id="S7">Send analytics data to page</step>
        <step id="S8">Display analytics data for URL</step>
    </mainSequence>
</useCase>
