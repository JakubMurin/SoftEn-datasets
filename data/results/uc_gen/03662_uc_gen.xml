<useCase id="UC1">
	<name>Purchase Subscription</name>
	<actors>
		<actor>User</actor>
	</actors>
	<mainSequence>
		<step id="S1">User initiates subscription purchase</step>
		<step id="S2">SubscriptionController handling request from User</step>
		<step id="S3">SubscriptionService processing the subscription details</step>
		<step id="S4">Saving subscription data in SubscriptionRepository</step>
		<step id="S5">Updating Datastore with subscription info</step>
		<step id="S6">Sending confirmation response to User</step>
	</mainSequence>
</useCase>
