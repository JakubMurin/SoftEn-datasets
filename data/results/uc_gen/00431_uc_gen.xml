<useCase id="UC1">
    <name>Viewing Chapter Content</name>
    <actors>
        <actor>User</actor>
        <actor>Chapter Content View</actor>
        <actor>Transactions Controller</actor>
        <actor>Message Service</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">User clicks on chapter title</step>
        <step id="S2">User clicks on 'purchase'</step>
        <step id="S3">Chapter Content View requests API</step>
        <step id="S4">Controller processes the AddTransactionBuyChapter method</step>
        <step id="S5">Controller queries the data</step>
        <step id="S6">Database returns the data</step>
        <step id="S7">Controller quits after message Action Return sent</step>
        <step id="S8">Message Service responds with Payload Format</step>
        <step id="S9">Chapter Content View displays Chapter Content Page to User</step>
  </mainSequence>
</useCase>
