<useCase id="UC1">
    <name>Share Work</name>
    <actors>
        <actor>Member</actor>
    </actors>
    <mainSequence>
        <step id="S1">Member shares work</step>
        <step id="S2">UI Manager gets file sharing form</step>
        <step id="S3">UI Manager displays form</step>
        <step id="S4">Member sees form</step>
        <step id="S5">Member fills in content details and adds file</step>
        <step id="S6">Member sends form</step>
        <step id="S7">Application analyzes file</step>
        <step id="S8">Application displays file analysis result</step>
        <step id="S9">Application requests send confirmation</step>
        <step id="S10">Member validates send</step>
        <step id="S11">Application copies file to "To be Moderated" directory</step>
        <step id="S12">Application creates transaction number</step>
        <step id="S13">Application saves transaction to log file</step>
        <step id="S14">Application transmits transaction and file to server</step>
        <step id="S15">Server notifies Librarian of work submission</step>
        <step id="S16">Application notifies Member of moderation wait</step>
    </mainSequence>
</useCase>
