<useCase id="UC001">
    <name>Access Website and View Image Descriptive Info</name>
    <actors>
        <actor>DonorRepresentative</actor>
    </actors>
    <preconditions>
        <precondition>DonorRepresentative is logged in</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Image Descriptive Info displayed successfully</condition>
    </successEndConditions>
    <trigger>User accesses the website</trigger>
    <mainSequence>
        <step id="S1">DonorRepresentative accesses the website</step>
        <step id="S2">User requests access to the website</step>
        <step id="S3">Authorization System authenticates the user</step>
        <step id="S4">DonorRepresentative requests Image Descriptive Info</step>
        <step id="S5">User Interface queries for Images</step>
        <step id="S6">File Management fetches Image Metadata from Database</step>
        <step id="S7">Database returns Image Metadata to File Management</step>
        <step id="S8">File Management displays Descriptive Info</step>
        <step id="S9">User Interface shows Descriptive Information about Images to DonorRepresentative</step>
    </mainSequence>
</useCase>
