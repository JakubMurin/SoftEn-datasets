<useCase id="UC1">
    <name>Get Developer Issues</name>
    <actors>
        <actor>Developer</actor>
        <actor>System</actor>
        <actor>Database</actor>
    </actors>
    <trigger>Developer requests to get issues</trigger>
    <mainSequence>
        <step id="S1">Developer requests to get issues</step>
        <step id="S2">System validates the developer</step>
        <step id="S3">System validates the project</step>
        <step id="S4">System checks if the developer is a member of the project</step>
        <step id="S5">System retrieves the developer's issues from the database</step>
        <step id="S6">System returns a list of issues to the Developer</step>
    </mainSequence>
</useCase>
