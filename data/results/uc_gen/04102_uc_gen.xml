<useCase id="1">
    <name>Update Component Name</name>
    <actors>
        <actor>Repository Manager</actor>
        <actor>DIMS Interface</actor>
        <actor>Component Management System</actor>
        <actor>DIMS Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">Access component update form</step>
        <step id="S2">Request current component details</step>
        <step id="S3">Query current component information from DIMS Database</step>
        <step id="S4">Display current component information</step>
        <step id="S5">Input new component name</step>
        <step id="S6">Validate new name and prepare update</step>
        <step id="S7">Update component name</step>
        <step id="S8">Confirm name update</step>
        <step id="S9">Confirm update to Repository Manager</step>
        <step id="S10">Display update confirmation</step>
    </mainSequence>
</useCase>
