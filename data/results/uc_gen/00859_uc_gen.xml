<useCase id="P220_revoke_vc">
    <name>P220: VC Revocation</name>
    <actors>
        <actor>User</actor>
        <actor>Certified App</actor>
        <actor>Wallet</actor>
        <actor>TAS</actor>
        <actor>Issuer</actor>
        <actor>Blockchain</actor>
    </actors>
    <mainSequence>
        <step id="S1">User proposes VC revocation</step>
        <step id="S2">Request ECDH is initiated</step>
        <step id="S3">Request to create token is made</step>
        <step id="S4">Request to revoke VC is sent</step>
        <step id="S5">Confirmation of VC revocation</step>
    </mainSequence>
</useCase>
