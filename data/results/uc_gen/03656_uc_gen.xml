<useCase id="UC1">
	<name>Manage Subscription</name>
	<description>User manages subscription information</description>
	<actors>
		<actor>User</actor>
	</actors>
	<mainSequence>
		<step id="S1">User interacts with SubscriptionController</step>
		<step id="S2">SubscriptionController processes user request</step>
		<step id="S3">SubscriptionService handles subscription operations</step>
		<step id="S4">SubscriptionRepository accesses data layer</step>
		<step id="S5">Datastore stores subscription data</step>
		<step id="S6">Datastore retrieves data for SubscriptionRepository</step>
		<step id="S7">SubscriptionRepository sends data to SubscriptionService</step>
		<step id="S8">SubscriptionService processes data</step>
		<step id="S9">SubscriptionService sends response to SubscriptionController</step>
		<step id="S10">SubscriptionController responds to User</step>
	</mainSequence>
</useCase>
