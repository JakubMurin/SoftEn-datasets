<useCase id="UC_001">
    <name>Verify Academic Formation</name>
    <actors>
        <actor>Profesor</actor>
    </actors>
    <preconditions>
        <precondition>The professor wants to request verification of academic formation.</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Profesor accesses the option to request verification.</step>
        <step id="S2">VerificarFormacionView receives the request and activates.</step>
        <step id="S3">ProfesoresController requests the verification form.</step>
        <step id="S4">Profesores retrieves the new academic formation.</step>
        <step id="S5">ProfesoresController receives the academic formation and shows the verification form.</step>
        <step id="S6">VerificarFormacionView sends the verification request.</step>
        <step id="S7">ProfesoresController creates the verification request.</step>
        <step id="S8">ProfesoresRepository saves the verification request.</step>
        <step id="S9">ProfesoresRepository confirms the saved request.</step>
        <step id="S10">Verificacion confirms the verification.</step>
        <step id="S11">ProfesoresController shows a confirmation message.</step>
    </mainSequence>
</useCase>
