<useCase id="UC1">
    <name>Login and Start Game</name>
    <actors>
        <actor>User</actor>
        <actor>Foo</actor>
        <actor>PacManController</actor>
        <actor>PacManUser</actor>
        <actor>PacManPersistence</actor>
        <actor>FileReader</actor>
        <actor>FileWriter</actor>
    </actors>
    <preconditions>
        <precondition>User wants to start the game</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Game starts successfully</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Game fails to start</condition>
    </failureEndConditions>
    <trigger>User clicks on the start button</trigger>
    <mainSequence>
        <step id="S1">User writes username in the input field</step>
        <step id="S2">PacManController updates the GUI</step>
        <step id="S3">PacManController retrieves the username</step>
        <step id="S4">PacManController receives the username</step>
        <step id="S5">PacManController validates the username</step>
        <step id="S6">PacManUser confirms the username is valid</step>
        <step id="S7">PacManController enables the start button</step>
        <step id="S8">User clicks on the start button</step>
        <step id="S9">PacManController handles the start button click</step>
        <step id="S10">PacManController sets the username</step>
        <step id="S11">PacManController sets the score</step>
    </mainSequence>
</useCase>
