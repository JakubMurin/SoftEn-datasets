<useCase id="UC1">
    <name>Modify Vacation Request</name>
    <actors>
        <actor>Navegador</actor>
    </actors>
    <preconditions>
        <precondition>Navegador is logged in</precondition>
        <precondition>Vacation request exists</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Navegador requests to modify vacation details</step>
        <step id="S2">System retrieves vacation details for modification</step>
        <step id="S3">System displays modification form</step>
        <step id="S4">Navegador submits updated vacation details</step>
        <step id="S5">System updates vacation request</step>
        <step id="S6">System displays success message</step>
    </mainSequence>
</useCase>
