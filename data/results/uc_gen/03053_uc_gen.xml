<useCase id="UC1">
    <name>Initialize Video Player</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User sets video URI</step>
        <step id="S2">IjkVideoView opens video</step>
        <step id="S3">IjkVideoView constructs IjkMediaPlayer</step>
        <step id="S4">IjkMediaPlayer initializes player</step>
        <step id="S5">IjkMediaPlayer loads libraries</step>
        <step id="S6">JNI loads shared library</step>
        <step id="S7">JNI registers player control API</step>
        <step id="S8">FFmpeg API global initialization</step>
        <step id="S9">IjkMediaPlayer initializes native code</step>
        <step id="S10">IjkMediaPlayer creates EventHandler</step>
        <step id="S11">IjkMediaPlayer sets up native code</step>
        <step id="S12">IjkMediaPlayer creates and sets video output object</step>
        <step id="S13">IjkMediaPlayer returns IjkMediaPlayer object to IjkVideoView</step>
    </mainSequence>
</useCase>
