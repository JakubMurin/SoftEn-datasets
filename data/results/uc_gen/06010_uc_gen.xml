<useCase id="UC1">
    <name>Manage Inventory</name>
    <description>Manage inventory items through the system</description>
    <actors>
        <actor>Manager</actor>
    </actors>
    <preconditions>
        <precondition>The manager is logged in</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">Access inventory management with UI</step>
        <step id="S2">Request and obtain the current inventory list</step>
        <step id="S3">Display the current inventory items on UI</step>
        <step id="S4">Select an item for update</step>
        <step id="S5">Enter the new inventory details</step>
        <step id="S6">Send an update request to Backend with new details</step>
        <step id="S7">Update item in the database</step>
        <step id="S8">Confirm successful update to Manager</step>
        <step id="S9">Display update confirmation to Manager</step>
    </mainSequence>
</useCase>
