<useCase id="UC1">
    <name>Solicitar recuperación de contraseña</name>
    <actors>
        <actor>Usuario</actor>
    </actors>
    <trigger>Usuario solicita recuperación de contraseña</trigger>
    <mainSequence>
        <step id="S1">Usuario solicita recuperación de contraseña</step>
        <step id="S2">AngularApp recibe solicitud de recuperación</step>
        <step id="S3">ExpressServer verifica correo electrónico</step>
        <step id="S4">EmailServer envía correo de recuperación</step>
        <step id="S5">AngularApp confirma envío</step>
    </mainSequence>
</useCase>
