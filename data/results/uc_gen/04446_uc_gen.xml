<useCase id="UC001">
    <name>Transfer Data</name>
    <actors>
        <actor>User</actor>
        <actor>Source</actor>
        <actor>Target</actor>
    </actors>
    <mainSequence>
        <step id="S1">User provides a link to target</step>
        <step id="S2">Source offers message (1) to Target</step>
        <step id="S3">Target accepts the message</step>
        <step id="S4">Source offers message (2) to Target</step>
        <step id="S5">Target postpones the message</step>
        <step id="S6">Target consumes message (2) from Source</step>
        <step id="S7">Source sends data to Target</step>
        <step id="S8">Source completes the transfer</step>
    </mainSequence>
</useCase>
