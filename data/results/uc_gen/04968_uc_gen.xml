        <step id="S5">Repository saves new history entry</step>
        <step id="S6">Model saves new history entry to Database</step>
        <step id="S7">Database confirms successful save</step>
        <step id="S8">Repository confirms successful save</step>
        <step id="S9">Controller confirms successful save</step>
        <step id="S10">Router responds with 201 Created</step>
        <step id="S11">UI displays success message</step>
    </mainSequence>
</useCase>
