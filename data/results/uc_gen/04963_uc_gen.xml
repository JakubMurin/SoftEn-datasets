<useCase id="UC1">
    <name>Submit new history data</name>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User submits new history data</step>
        <step id="S2">UI receives the submission</step>
        <step id="S3">HistoryRouter processes the POST request to /histories with the data</step>
        <step id="S4">HistoryController creates a new history with the submitted data</step>
        <step id="S5">HistoryRepository saves the new history</step>
        <step id="S6">History model is created with the submitted data</step>
        <step id="S7">Database saves the history</step>
        <step id="S8">Database confirms successful save</step>
        <step id="S9">Repository confirms successful save</step>
        <step id="S10">Controller confirms successful save</step>
        <step id="S11">Router responds with 201 Created status</step>
        <step id="S12">UI displays success message to the User</step>
    </mainSequence>
</useCase>
