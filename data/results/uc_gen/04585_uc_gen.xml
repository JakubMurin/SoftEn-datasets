<useCase id="UC001">
    <name>Account Cancellation</name>
    <actors>
        <actor>User</actor>
        <actor>HomepageScreen</actor>
        <actor>DeleteAccountDialog</actor>
        <actor>AuthService</actor>
        <actor>UsersRouter</actor>
        <actor>UsersService</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">User opens the application.</step>
        <step id="S2">HomepageScreen displays "Account Settings".</step>
        <step id="S3">User navigates to Account Settings.</step>
        <step id="S4">DeleteAccountDialog displays Delete Account Dialog.</step>
        <step id="S5">User is prompted for confirmation.</step>
        <step id="S6">User confirms cancellation.</step>
        <step id="S7">AuthService initiates account cancellation.</step>
        <step id="S8">UsersRouter makes API Call for Account Cancellation.</step>
        <step id="S9">UsersService forwards cancellation request.</step>
        <step id="S10">Database marks account for deletion.</step>
        <step id="S11">Database confirms account marked for deletion.</step>
        <step id="S12">UsersService confirms account cancellation.</step>
        <step id="S13">AuthService sends cancellation confirmation.</step>
        <step id="S14">DeleteAccountDialog displays cancellation confirmation.</step>
        <step id="S15">DeleteAccountDialog navigates back to HomepageScreen.</step>
        <step id="S16">HomepageScreen displays confirmation message.</step>
        <step id="S17">HomepageScreen logs out the user and clears session data.</step>
    </mainSequence>
</useCase>
