<useCase id="UC001">
    <name>Process After-sales Request</name>
    <description>Manage the after-sales process between user, seller, and platform.</description>
    <actors>
        <actor>User</actor>
        <actor>Seller</actor>
        <actor>Manager</actor>
    </actors>
    <preconditions>
        <precondition>User initiates an after-sales request.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>After-sales process completed successfully.</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>After-sales process failed.</condition>
    </failureEndConditions>
    <mainSequence>
        <step id="S1">User applies for after-sales.</step>
        <step id="S2">Seller verifies the after-sales request.</step>
        <step id="S3">Platform updates after-sales status.</step>
        <step id="S4">Platform receives after-sales response.</step>
        <step id="S5">User provides logistics information.</step>
        <step id="S6">Seller confirms receipt of the item.</step>
        <step id="S7">Platform automatically initiates refund.</step>
        <step id="S8">Platform sends after-sales completion notification to user.</step>
    </mainSequence>
</useCase>
