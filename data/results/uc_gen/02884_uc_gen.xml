<useCase id="UC1">
    <name>Customize Wearable</name>
    <actors>
        <actor>User</actor>
        <actor>UI</actor>
        <actor>Alfred</actor>
        <actor>Design</actor>
        <actor>Production</actor>
    </actors>
    <mainSequence>
        <step id="S1">User chooses to customize wearable</step>
        <step id="S2">UI requests wearable customization options</step>
        <step id="S3">Alfred fetches stylish design templates</step>
        <step id="S4">Design returns design templates to Alfred</step>
        <step id="S5">Alfred displays design templates to UI</step>
        <step id="S6">UI shows design templates to User</step>
        <step id="S7">User selects preferred design</step>
        <step id="S8">UI sends selected design to Alfred</step>
        <step id="S9">Alfred initiates wearable prototype</step>
        <step id="S10">Design creates prototype with selected design</step>
        <step id="S11">Production returns prototype status to Design</step>
        <step id="S12">Design confirms prototype creation to Alfred</step>
        <step id="S13">Alfred notifies User of progress</step>
        <step id="S14">UI shows progress update to User</step>
        <step id="S15">User requests progress</step>
        <step id="S16">UI queries progress to Alfred</step>
        <step id="S17">Alfred checks production status with Production</step>
        <step id="S18">Production returns status to Alfred</step>
        <step id="S19">Alfred displays status to User</step>
        <step id="S20">UI shows status to User</step>
        <step id="S21">User confirms receipt once delivered</step>
        <step id="S22">UI logs delivery confirmation to Alfred</step>
        <step id="S23">Alfred initiates feedback loop for user satisfaction with Design</step>
        <step id="S24">Design receives feedback request from User</step>
        <step id="S25">User provides feedback to Design</step>
    </mainSequence>
</useCase>
