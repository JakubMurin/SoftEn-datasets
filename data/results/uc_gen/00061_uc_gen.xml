<useCase id="UC1">
    <name>View Messages</name>
    <description>As a User, I want to view messages in my inbox.</description>
    <actors>
        <actor>User</actor>
    </actors>
    <preconditions>
        <precondition>User is logged into the system.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Messages are successfully displayed.</condition>
    </successEndConditions>
    <trigger>User opens the "Messages Page".</trigger>
    <mainSequence>
        <step id="S1">Open the "Messages Page".</step>
        <step id="S2">Get messages by inbox ID.</step>
        <step id="S3">Show messages on the page.</step>
    </mainSequence>
</useCase>
