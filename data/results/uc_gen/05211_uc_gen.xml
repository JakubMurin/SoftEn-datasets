<useCase id="UC1">
    <name>Adding New Material</name>
    <actors>
        <actor>User</actor>
        <actor>HomepageScreen</actor>
        <actor>CameraScreen</actor>
        <actor>DisplayPictureScreen</actor>
        <actor>ApiService</actor>
        <actor>MaterialsRouter</actor>
        <actor>PredictionRouter</actor>
        <actor>MaterialsService</actor>
        <actor>Database</actor>
    </actors>
    <preconditions>
        <precondition>User opens the application</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Material successfully added</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Material addition process is canceled or photo is rejected</condition>
    </failureEndConditions>
    <mainSequence>
        <step id="S1">Display list of materials</step>
        <step id="S2">Select camera button</step>
        <step id="S3">Select "Take photo"</step>
        <step id="S4">Prompt to capture photo</step>
        <step id="S5">Capture photo</step>
        <step id="S6">Review photo quality</step>
        <step id="S7">Confirm selection</step>
        <step id="S8">Upload photo</step>
        <step id="S9">Process photo</step>
        <step id="S10">Analyze photo</step>
        <step id="S11">Save material data</step>
        <step id="S12">Confirm material added</step>
        <step id="S13">Display success message</step>
        <step id="S14">Update materials list</step>
        <step id="S15">Display updated materials list</step>
    </mainSequence>
</useCase>
