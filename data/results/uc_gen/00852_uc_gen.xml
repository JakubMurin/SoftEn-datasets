<useCase id="UC1">
    <name>积分流转</name>
    <actors>
        <actor>用户</actor>
    </actors>
    <mainSequence>
        <step id="S1">用户调用积分合约部署</step>
        <step id="S2">应用层部署PointController</step>
        <step id="S3">应用层获取平台管理员用户信息</step>
        <step id="S4">应用层创建对应的积分账户</step>
        <step id="S5">测试接口积分初始化</step>
        <step id="S6">应用层读取配置中的预测值</step>
        <step id="S7">应用层初始化积分总量</step>
        <step id="S8">定时器年度积分结余</step>
        <step id="S9">应用层记录交易明细</step>
        <step id="S10">用户注册账户</step>
        <step id="S11">应用层获取注册积分</step>
        <step id="S12">应用层记录交易明细</step>
        <step id="S13">用户添加电池</step>
        <step id="S14">应用层根据DAO制定的比率计算需要缴纳的积分</step>
        <step id="S15">应用层记录交易明细</step>
        <step id="S16">用户登记车辆电池信息</step>
        <step id="S17">应用层根据DAO制定的比率计算需要缴纳的积分</step>
        <step id="S18">应用层记录交易明细</step>
        <step id="S19">用户由线下网点进行消息推送</step>
        <step id="S20">应用层计算应发积分</step>
        <step id="S21">应用层记录交易明细</step>
        <step id="S22">用户电池拆解检测信息推送</step>
        <step id="S23">应用层计算应发积分</step>
        <step id="S24">应用层记录交易明细</step>
        <step id="S25">用户卖方积分交易申请</step>
        <step id="S26">应用层部署交易合约</step>
        <step id="S27">应用层冻结卖方积分</step>
        <step id="S28">用户买方积分交易达成</step>
        <step id="S29">应用层交易合约.bid 或者 deal</step>
        <step id="S30">应用层解冻并转移积分</step>
        <step id="S31">应用层发现到期但没买方的交易</step>
        <step id="S32">应用层交易合约.tradeEnd</step>
        <step id="S33">应用层撤回交易</step>
    </mainSequence>
</useCase>
