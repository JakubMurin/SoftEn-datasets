<useCase id="UC1">
    <name>View Dashboard</name>
    <actors>
        <actor>Receptionist</actor>
    </actors>
    <mainSequence>
        <step id="S1">Receptionist requests to view dashboard</step>
        <step id="S2">UI receives request</step>
        <step id="S3">Router processes GET /dashboard request</step>
        <step id="S4">Controller calls getDashboardData()</step>
        <step id="S5">Repository retrieves dashboard data</step>
        <step id="S6">DashboardModel fetches dashboard data from Database</step>
        <step id="S7">Dashboard data is queried from the Database</step>
        <step id="S8">Dashboard data is returned to Repository</step>
        <step id="S9">Dashboard data is returned to Controller</step>
        <step id="S10">Controller responds with 200 OK</step>
        <step id="S11">Router responds with 200 OK</step>
        <step id="S12">UI displays dashboard data</step>
    </mainSequence>
</useCase>
