<useCase id="UC1001">
    <name>Take Automatic Exam</name>
    <actors>
        <actor>Student</actor>
    </actors>
    <mainSequence>
        <step id="S1">Student takes an exam</step>
        <step id="S2">AutomaticExamsUnsolved() is called</step>
        <step id="S3">AutomaticExamsUnsolved() retrieves unsolved exams</step>
        <step id="S4">List of unsolved exams is displayed</step>
        <step id="S5">Student selects an exam to take</step>
        <step id="S6">Selected exam is displayed</step>
        <step id="S7">Exam is built for the student</step>
        <step id="S8">Student answers questions</step>
        <step id="S9">Questions are validated</step>
        <step id="S10">Exam grade is calculated</step>
        <step id="S11">Grades are displayed</step>
        <step id="S12">Grade is saved</step>
        <step id="S13">Feedback is shown to the student</step>
    </mainSequence>
</useCase>
