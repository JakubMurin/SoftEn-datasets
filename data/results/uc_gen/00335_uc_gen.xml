<useCase id="UC1">
    <name>Hide Story</name>
    <actors>
        <actor>User</actor>
        <actor>StoryPublishView</actor>
        <actor>StoriesController</actor>
        <actor>MsgService</actor>
        <actor>Database</actor>
    </actors>
    <mainSequence>
        <step id="S1">User clicks on "Hide Story" option</step>
        <step id="S2">View requests API</step>
        <step id="S3">Controller processes DeleteStory()</step>
        <step id="S4">Controller queries data from Database</step>
        <step id="S5">Database returns data to Controller</step>
        <step id="S6">Controller formats response payload</step>
        <step id="S7">View displays Stories Management Page</step>
    </mainSequence>
</useCase>
