<useCase id="UC1">
    <name>Fournir les informations d'identification</name>
    <actors>
        <actor>User</actor>
        <actor>System</actor>
        <actor>Admin</actor>
    </actors>
    <mainSequence>
        <step id="S1">User fournit les informations d'identification</step>
        <step id="S2">System vérifie les informations fournies</step>
        <step id="S3">System notifie des erreurs à l'utilisateur</step>
        <step id="S4">User soumet à nouveau les informations</step>
        <step id="S5">System confirme l'authentification à l'utilisateur</step>
        <step id="S6">System informe l'utilisateur de l'échec de l'authentification</step>
        <step id="S7">Admin demande la radiation d'un compte</step>
        <step id="S8">System vérifie le compte ciblé</step>
        <step id="S9">System confirme la radiation à l'Admin</step>
        <step id="S10">System notifie l'échec de la radiation à l'Admin</step>
    </mainSequence>
</useCase>
