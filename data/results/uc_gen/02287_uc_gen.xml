<useCase id="UC1">
    <name>Trigger Dataset Migration Process</name>
    <actors>
        <actor>User</actor>
        <actor>Dataset Management System</actor>
        <actor>Version Control</actor>
        <actor>Dataset Instance</actor>
        <actor>Migration Tool</actor>
    </actors>
    <preconditions>
        <precondition>User requests property update for dataset.</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">User requests property update for dataset.</step>
        <step id="S2">Dataset Management System validates property update requirements.</step>
        <step id="S3">Dataset Instance checks current version.</step>
        <step id="S4">Dataset Instance confirms migration required.</step>
        <step id="S5">User confirms migration.</step>
        <step id="S6">Migration Tool initiates migration.</step>
        <step id="S7">Migration Tool performs migration (update properties, version).</step>
        <step id="S8">Dataset Instance confirms migration success.</step>
        <step id="S9">Migration Tool confirms migration completed.</step>
        <step id="S10">Dataset Management System confirms migration successful, properties updated.</step>
    </mainSequence>
</useCase>
