<useCase id="UC1">
    <name>Assemble Computer System</name>
    <description>Assemble a computer system by adding necessary components.</description>
    <actors>
        <actor>Main User</actor>
    </actors>
    <preconditions>
        <precondition>All necessary components are available.</precondition>
    </preconditions>
    <successEndConditions>
        <condition>Computer system is successfully assembled.</condition>
    </successEndConditions>
    <failureEndConditions>
        <condition>Unable to assemble the computer system due to missing components.</condition>
    </failureEndConditions>
    <trigger>Main User wants to assemble a computer system.</trigger>
    <mainSequence>
        <step id="S1">Create monitor</step>
        <step id="S2">Create keyboard</step>
        <step id="S3">Create processor</step>
        <step id="S4">Create RAM</step>
        <step id="S5">Create hard disk</step>
        <step id="S6">Create main system</step>
        <step id="S7">Add processor to main system</step>
        <step id="S8">Add RAM to main system</step>
        <step id="S9">Add hard disk to main system</step>
        <step id="S10">Create computer</step>
        <step id="S11">Add monitor to computer</step>
        <step id="S12">Add keyboard to computer</step>
        <step id="S13">Add main system to computer</step>
        <step id="S14">Describe monitor</step>
        <step id="S15">Get price of main system</step>
        <step id="S16">Get price of components in main system</step>
        <step id="S17">Describe components in main system</step>
        <step id="S18">Describe computer</step>
        <step id="S19">Get price of computer</step>
        <step id="S20">Get price of components in computer</step>
        <step id="S21">Describe components in computer</step>
        <step id="S22">Add keyboard to monitor</step>
        <step id="S23">Get 3 keyboards from monitor</step>
        <step id="S24">Destroy monitor</step>
        <step id="S25">Destroy keyboard</step>
        <step id="S26">Destroy processor</step>
        <step id="S27">Destroy RAM</step>
        <step id="S28">Destroy hard disk</step>
        <step id="S29">Destroy main system</step>
        <step id="S30">Destroy computer</step>
    </mainSequence>
</useCase>
