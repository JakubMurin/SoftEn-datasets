<useCase id="UC1">
    <name>Scan Proxy Repo</name>
    <actors>
        <actor>ChangeListener</actor>
    </actors>
    <mainSequence>
        <step id="S1">ProxyRepoFileScanner scans the repository.</step>
        <step id="S2">ProxyRepoFileScanner adds a new source.</step>
        <step id="S3">ProxyRepoSources adds the 'source' record to the database.</step>
        <step id="S4">ChangeListener is notified about the change in ProxyRepoSources.</step>
    </mainSequence>
</useCase>
