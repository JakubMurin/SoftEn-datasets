<useCase id="UC1">
    <name>Actor Pickup Item</name>
    <actors>
        <actor>Controller</actor>
        <actor>a : Actor</actor>
        <actor>state : ActionState</actor>
        <actor>item : Item</actor>
        <actor>room : Room</actor>
        <actor>inventory : Inventory</actor>
    </actors>
    <mainSequence>
        <step id="S1">Controller picks up item</step>
        <step id="S2">Actor picks up item</step>
        <step id="S3">Actor gets location</step>
        <step id="S4">Actor removes item</step>
        <step id="S5">Actor checks if item is sticky</step>
        <step id="S6">Item is sticky</step>
        <step id="S7">Item is not sticky</step>
        <step id="S8">Actor gets inventory</step>
        <step id="S9">Actor adds item to inventory</step>
        <step id="S10">Inventory is full</step>
        <step id="S11">Actor adds item to room</step>
        <step id="S12">Actor calls onPickup method</step>
    </mainSequence>
</useCase>
