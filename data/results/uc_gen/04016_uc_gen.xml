<useCase id="UC1">
    <name>Associate an Instance with a Container</name>
    <actors>
        <actor>Archivist</actor>
    </actors>
    <mainSequence>
        <step id="S1">Archivist selects "Associate Instance"</step>
        <step id="S2">UI requests to associateInstanceWithContainer(instanceId, containerId)</step>
        <step id="S3">Controller associates instance with container</step>
        <step id="S4">Service retrieves instance details</step>
        <step id="S5">Service retrieves container details</step>
        <step id="S6">Service verifies instance and container compatibility</step>
        <step id="S7">Service sets container for the instance</step>
        <step id="S8">ModelInstance updates instance container</step>
        <step id="S9">Service notifies association success</step>
        <step id="S10">Controller displays association result</step>
        <step id="S11">Archivist views "Association Successful" message</step>
    </mainSequence>
</useCase>
