<useCase id="UC-1">
    <name>Workout Editing</name>
    
    <actors>
        <actor>User</actor>
        <actor>WorkoutEditScreen</actor>
        <actor>WorkoutService</actor>
        <actor>Workout</actor>
        <actor>DatabaseService</actor>
    </actors>
    
    <mainSequence>
        <step id="S1">User opens Workout editing page.</step>
        <step id="S2">WorkoutEditScreen loads workout details.</step>
        <step id="S3">WorkoutService retrieves Workout data.</step>
        <step id="S4">Workout data displayed in the WorkoutEditScreen.</step>
        <step id="S5">User edits Workout data.</step>
        <step id="S6">WorkoutService saves the changes.</step>
        <step id="S7">Workout data updated successfully.</step>
        <step id="S8">DatabaseService stores updated Workout data.</step>
        <step id="S9">DatabaseService confirms "Changes saved."</step>
        <step id="S10">Success message displayed on workout edit screen.</step>
        <step id="S11">Confirmation "Workout save to User."</step>
    </mainSequence>
</useCase>
