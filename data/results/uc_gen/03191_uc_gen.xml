<useCase id="UC1">
    <name>Read File</name>
    <description>Read the file at /dir1/file.txt</description>
    <actors>
        <actor>User</actor>
    </actors>
    <mainSequence>
        <step id="S1">User reads the file at /dir1/file.txt</step>
        <step id="S2">User requests the metainfo version of the file</step>
        <step id="S3">Retrieve the directory location for the user version</step>
        <step id="S4">Get the DFS location of the latest directory (LATEST)</step>
        <step id="S5">Get the content of /dir1/file.txt (LINK)</step>
        <step id="S6">Read the content of LINK (FILE)</step>
        <step id="S7">Read the file at LINK (FILE)</step>
        <step id="S8">Retrieve the content of FILE</step>
        <step id="S9">Return the latest data in /dir1/file.txt to the User</step>
    </mainSequence>
</useCase>
