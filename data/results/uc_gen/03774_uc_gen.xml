<useCase id="UC1">
    <name>Create Booking</name>
    <actors>
        <actor>Receptionist</actor>
    </actors>
    <mainSequence>
        <step id="S1">Receptionist requests to create booking</step>
        <step id="S2">UI receives request and shows create booking form</step>
        <step id="S3">Receptionist fills booking details</step>
        <step id="S4">UI sends booking data to create</step>
        <step id="S5">Router forwards request to Controller</step>
        <step id="S6">Controller creates new booking</step>
        <step id="S7">Repository checks room availability</step>
        <step id="S8">RoomModel queries room availability</step>
        <step id="S9">Database returns room availability status</step>
        <step id="S10">Repository creates new booking if room available</step>
        <step id="S11">BookingModel inserts new booking in DB</step>
        <step id="S12">Repository handles booking creation success</step>
        <step id="S13">Controller handles booking creation success</step>
        <step id="S14">Router responds with 200 OK</step>
        <step id="S15">UI displays booking success message</step>
        <step id="S16">Controller handles room not available scenario</step>
        <step id="S17">Router responds with 400 Bad Request</step>
        <step id="S18">UI displays room not available error message</step>
    </mainSequence>
</useCase>
