<useCase id="UC1">
    <name>Telecommunication</name>
    <actors>
        <actor>Apelant</actor>
        <actor>Correspondant</actor>
    </actors>
    <mainSequence>
        <step id="S1">Apelant inserts the money</step>
        <step id="S2">Standard counts down for 2 minutes</step>
        <step id="S3">Apelant dials the number</step>
        <step id="S4">If the number is not dialed, Apelant hangs up</step>
        <step id="S5">If the number is dialed, Standard connects the line to Correspondant</step>
        <step id="S6">If the line is busy, Apelant hangs up</step>
        <step id="S7">If the line is free, Correspondant picks up</step>
        <step id="S8">Standard counts the money usage</step>
        <step id="S9">Apelant adds more money</step>
        <step id="S10">Apelant and Correspondant talk</step>
        <step id="S11">Correspondant hangs up</step>
        <step id="S12">Apelant hangs up</step>
        <step id="S13">Apelant and Correspondant disconnect the call</step>
        <step id="S14">Standard returns the money to Apelant</step>
    </mainSequence>
</useCase>
