<useCase id="UC001">
    <name>Assign Position and Shift to Worker</name>
    <actors>
        <actor>Trabajador</actor>
        <actor>GestorTurnos</actor>
    </actors>
    <mainSequence>
        <step id="S1">Trabajador solicita asignación.</step>
        <step id="S2">GestorTurnos busca departamento del trabajador.</step>
        <step id="S3">GestorTurnos busca posición disponible en el departamento.</step>
        <step id="S4">GestorTurnos busca turno disponible.</step>
        <step id="S5">GestorTurnos verifica ausencias y preferencias del trabajador.</step>
        <step id="S6">GestorTurnos asigna posición y turno.</step>
    </mainSequence>
</useCase>
