<useCase id="UC1">
    <name>Start Game</name>
    <actors>
        <actor>User</actor>
        <actor>App</actor>
        <actor>StartScreen</actor>
        <actor>StartButtonEventHandler</actor>
        <actor>PlayersInputScreen</actor>
        <actor>ConfirmButton</actor>
        <actor>Game</actor>
        <actor>PlayersNamesInputScreen</actor>
        <actor>QuestionScreen</actor>
        <actor>Player</actor>
    </actors>
    <preconditions>
        <precondition>User clicks on 'Comenzar' button</precondition>
    </preconditions>
    <mainSequence>
        <step id="S1">User clicks 'Comenzar' button</step>
        <step id="S2">App handles the event</step>
        <step id="S3">StartScreen handles the event</step>
        <step id="S4">StartButtonEventHandler handles the event</step>
        <step id="S5">StartScreen sets visibility to false</step>
        <step id="S6">PlayersInputScreen is displayed to select and confirm inputs</step>
        <step id="S7">User selects and confirms inputs</step>
        <step id="S8">PlayersInputScreen handles the event</step>
        <step id="S9">ConfirmButton handles the event</step>
        <step id="S10">PlayersInputScreen requests to select data</step>
        <step id="S11">ConfirmButton selects data</step>
        <step id="S12">Game loads received data</step>
        <step id="S13">PlayersNamesInputScreen is created</step>
        <step id="S14">App shows the screen asking for player names</step>
        <step id="S15">User enters and confirms player names</step>
        <step id="S16">PlayersNamesInputScreen handles the event</step>
        <step id="S17">NamesButton handles the event</step>
        <step id="S18">PlayersNamesInputScreen executes the event</step>
        <step id="S19">Game registers users with entered names</step>
        <step id="S20">For each entered name, a new Player is created and added to the game</step>
        <step id="S21">QuestionScreen is created</step>
        <step id="S22">App shows the screen with questions and options</step>
        <step id="S23">App shows questions for each player</step>
    </mainSequence>
</useCase>
