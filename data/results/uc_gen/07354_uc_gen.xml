<useCase id="001">
    <name>Template Method</name>
    <actors>
        <actor>user</actor>
        <actor>scanner</actor>
    </actors>
    <trigger>user initiates the process</trigger>
    <mainSequence>
        <step id="S1">User creates IncreasingOrder</step>
        <step id="S2">User creates DecreasingOrder</step>
        <step id="S3">User initializes scanner</step>
        <step id="S4">Scanner provides message to user</step>
        <step id="S5">User inputs data into scanner</step>
        <step id="S6">Scanner switches to IncreasingOrder if answer is 1, to DecreasingOrder if answer is 2</step>
        <step id="S7">SortingTemplate follows the Template Method</step>
        <step id="S8">SortingTemplate sorts in IncreasingOrder</step>
        <step id="S9">SortingTemplate determines the sort order in DecreasingOrder</step>
        <step id="S10">SortingTemplate sorts in DecreasingOrder</step>
    </mainSequence>
</useCase>
