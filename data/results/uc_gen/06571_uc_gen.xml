    <actors>
        <actor>ApplicationDeveloper</actor>
    </actors>
    <mainSequence>
        <step id="S1">ApplicationDeveloper creates Ship1 bundle</step>
        <step id="S2">ApplicationDeveloper creates NoContact bundle</step>
        <step id="S3">ApplicationDeveloper creates Agg1 bundle</step>
        <step id="S4">ApplicationDeveloper creates Viewer1 bundle</step>
        <step id="S5">ApplicationDeveloper deploys policies for Ship1</step>
        <step id="S6">ApplicationDeveloper deploys policies for Viewer1</step>
        <step id="S7">ApplicationDeveloper deploys policies for NoContact</step>
        <step id="S8">ApplicationDeveloper deploys policies for Agg1</step>
        <step id="S9">ApplicationDeveloper deploys Ship1 bundle with specified source file</step>
        <step id="S10">ApplicationDeveloper deploys Ship1 bundle with another specified source file</step>
    </mainSequence>
</useCase>
