<useCase id="UC1">
    <name>Create User Interface Elements</name>
    <actors>
        <actor>User</actor>
        <actor>Liba</actor>
        <actor>renderC</actor>
        <actor>App</actor>
        <actor>renderLiba</actor>
        <actor>createChildren</actor>
        <actor>UserCard</actor>
    </actors>
    <preconditions>
        <precondition>Liba has a created instance cInstance</precondition>
    </preconditions>
    <trigger>User invokes .create(App)</trigger>
    <mainSequence>
        <step id="S1">Liba creates cInstance</step>
        <step id="S2">renderC receives cInstance</step>
        <step id="S3">App receives props and renderLiba</step>
        <step id="S4">App creates 'button' element</step>
        <step id="S5">App creates UserCard</step>
        <step id="S6">UserCard is connected to renderLiba and rendered</step>
    </mainSequence>
</useCase>
