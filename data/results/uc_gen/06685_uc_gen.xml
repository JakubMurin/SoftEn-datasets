<useCase id="UC1">
    <name>Turn off buzzer and LED</name>
    <actors>
        <actor>Korisnik</actor>
        <actor>Mikrokontroler</actor>
        <actor>Buzzer</actor>
        <actor>LED</actor>
    </actors>
    <mainSequence>
        <step id="S1">Korisnik presses the push button</step>
        <step id="S2">Mikrokontroler sends a signal to turn off the buzzer</step>
        <step id="S3">Mikrokontroler sends a signal to turn off the LED</step>
    </mainSequence>
</useCase>
