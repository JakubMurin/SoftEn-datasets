<useCase id="install">
  <description>Install script</description>
  <mainSequence>
    <step>invokeAction("install",...)</step>
    <step>get script</step>
    <step>install script</step>
  </mainSequence>
</useCase>

<useCase id="run">
  <description>Execute script</description>
  <mainSequence>
    <step>invokeAction("run",...)</step>
    <step>execute script</step>
  </mainSequence>
</useCase>

<useCase id="stop">
  <description>Stop executing script</description>
  <mainSequence>
    <step>invokeAction("stop",...)</step>
    <step>stop executing script</step>
  </mainSequence>
</useCase>

<useCase id="uninstall">
  <description>Uninstall script</description>
  <mainSequence>
    <step>invokeAction("uninstall",...)</step>
    <step>uninstall script</step>
  </mainSequence>
</useCase>